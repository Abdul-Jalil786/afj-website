---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/sections/Hero.astro';
import CoreValues from '../components/sections/CoreValues.astro';
import TeamSection from '../components/sections/TeamSection.astro';
import AccreditationBadges from '../components/sections/AccreditationBadges.astro';
import StatsCounter from '../components/sections/StatsCounter.astro';
import CTABanner from '../components/ui/CTABanner.astro';
import SocialSidebar from '../components/ui/SocialSidebar.astro';

const breadcrumbs = [{ label: 'About Us' }];

const stats = [
  { value: 2000, suffix: '+', label: 'Students Daily' },
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
  { value: 200, suffix: '+', label: 'Vehicle Conversions' },
];

const teamMembers = [
  { name: 'Management Team', role: 'Operations & Strategy', bio: 'Driving AFJ\'s vision of safe, reliable transport solutions across the North West and West Midlands.', image: '/images/team/driver-and-passenger-assistant-with-minibus-2.webp' },
  { name: 'Transport Coordinators', role: 'Scheduling & Logistics', bio: 'Ensuring every route is planned for efficiency, safety, and punctuality.', image: '/images/team/IMG_0044-scaled.webp' },
  { name: 'Drivers & Passenger Assistants', role: 'Front-Line Service', bio: 'DBS-checked professionals delivering compassionate, safe transport every day.', image: '/images/team/driver-and-passenger-assistant-with-minibus-1.webp' },
  { name: 'Workshop Team', role: 'Fleet Maintenance & Conversions', bio: 'Skilled technicians keeping our fleet in peak condition and building bespoke conversions.', image: '/images/team/mechanic-working-on-vehicle.webp' },
  { name: 'Training Team', role: 'QualSafe-Approved Instruction', bio: 'Delivering industry-recognised qualifications for drivers, ACAs, and passenger assistants.', image: '/images/team/Image-1.webp' },
  { name: 'Fleet Team', role: 'Vehicle Maintenance & Conversions', bio: 'Ensuring every vehicle meets the highest standards of safety and reliability.', image: '/images/team/Image-2.webp' },
  { name: 'Patient Transport Team', role: 'CQC-Rated Service', bio: 'Trained Ambulance Care Assistants providing compassionate patient care.', image: '/images/team/Image-3.webp' },
  { name: 'Operations Support', role: 'Administration & Logistics', bio: 'Behind the scenes, ensuring smooth operations and excellent client communication.', image: '/images/team/Image-4.webp' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'AboutPage',
  mainEntity: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    description: 'Established in 2006, AFJ Limited provides specialist transport solutions including SEND school transport, non-emergency patient transport, fleet maintenance, vehicle conversions, and professional training.',
    foundingDate: '2006',
    telephone: '0121 689 1000',
    email: 'info@afjltd.co.uk',
    address: {
      '@type': 'PostalAddress',
      streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
      addressLocality: 'Birmingham',
      addressRegion: 'West Midlands',
      postalCode: 'B7 4JD',
      addressCountry: 'GB',
    },
  },
};
---

<PageLayout
  title="About Us"
  description="AFJ Limited, established 2006. 18+ years providing SEND transport, patient transport, fleet maintenance, and training across the North West and West Midlands."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="About AFJ Limited" subtitle="Your partner in safe, reliable transport solutions since 2006." />

  <!-- Company Story -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Our Story</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            Established in 2006, AFJ Limited has grown from a small Birmingham-based transport provider into one of the most trusted names in specialist transport across the West Midlands and North West. For over 18 years, we have been dedicated to delivering safe, reliable, and compassionate transport services.
          </p>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            Today, we transport over 2,000 students daily, hold a "Good" CQC rating for our patient transport services, and operate one of the most comprehensive in-house capabilities in the industry, from vehicle maintenance and ambulance conversions to QualSafe-approved training.
          </p>
          <p class="text-afj-secondary leading-relaxed">
            We are proud to be council and NHS accredited, serving communities across Birmingham, Manchester, Sandwell, Coventry, and beyond. Our commitment to integrity, safety, and innovation drives everything we do.
          </p>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/about/training.webp" alt="AFJ Limited headquarters" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Vision, Mission, Core Values -->
  <CoreValues />

  <!-- Differentiators -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">What Sets Us Apart</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Established 2006</h4>
            <p class="text-afj-secondary text-sm">Over 18 years of trusted transport experience.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport services.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">In-House Everything</h4>
            <p class="text-afj-secondary text-sm">Vehicle maintenance, ambulance conversions, and QualSafe-approved training all done on-site.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Council & NHS Accredited</h4>
            <p class="text-afj-secondary text-sm">Trusted by Birmingham, Manchester, and other local authorities.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Only UK PTS Provider Building Own Ambulances</h4>
            <p class="text-afj-secondary text-sm">Complete control over quality with in-house ambulance conversions.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Same Pricing Year-Round</h4>
            <p class="text-afj-secondary text-sm">No bank holiday or seasonal surcharges. Fair, transparent pricing.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Community Engagement -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Community Engagement</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            At AFJ Limited, we believe in giving back to the communities we serve. From supporting local sports teams to participating in community initiatives, our commitment extends beyond transport services.
          </p>
          <p class="text-afj-secondary leading-relaxed">
            Our CEO actively supports grassroots projects across Birmingham, reinforcing our belief that strong communities build strong futures.
          </p>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/misc/ceo-supporting-local-football-team.webp" alt="AFJ CEO supporting local football team in the community" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <TeamSection members={teamMembers} heading="Our Team" />

  <!-- Accreditations -->
  <AccreditationBadges />

  <CTABanner
    heading="Partner With AFJ Limited"
    description="Whether you need school transport, patient services, or private hire, we deliver reliable solutions tailored to your needs."
    variant="green"
  />
</PageLayout>
