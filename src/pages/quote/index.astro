  function fetchSuggestions(query, callback) {
    var q = query.trim();
    if (q.length < 2) { callback([]); return; }

    var isPostcode = /^[A-Z]{1,2}\d/i.test(q);
    var url = isPostcode
      ? 'https://api.postcodes.io/postcodes/' + encodeURIComponent(q) + '/autocomplete?limit=8'
      : 'https://api.postcodes.io/places?q=' + encodeURIComponent(q) + '&limit=8';

    fetch(url)
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (!data.result || !data.result.length) { callback([]); return; }
        if (isPostcode) {
          callback(data.result);
        } else {
          var seen = {};
          var names = [];
          data.result.forEach(function (p) {
            var name = p.name_1 || p.place_name || '';
            if (name && !seen[name]) { seen[name] = true; names.push(name); }
          });
          callback(names);
        }
      })
      .catch(function () { callback([]); });
  }

  function attachAutocomplete(inputEl) {
    var wrap = document.createElement('div');
    wrap.className = 'autocomplete-wrap';
    inputEl.parentNode.insertBefore(wrap, inputEl);
    wrap.appendChild(inputEl);

    var list = document.createElement('div');
    list.className = 'autocomplete-list';
    list.setAttribute('role', 'listbox');
    wrap.appendChild(list);

    var highlightIdx = -1;

    function showList(items) {
      list.innerHTML = '';
      highlightIdx = -1;
      if (!items.length) { list.classList.remove('open'); return; }
      items.forEach(function (text) {
        var item = document.createElement('div');
        item.className = 'autocomplete-item';
        item.setAttribute('role', 'option');
        item.textContent = text;
        item.addEventListener('mousedown', function (e) {
          e.preventDefault();
          inputEl.value = text;
          list.classList.remove('open');
        });
        list.appendChild(item);
      });
      list.classList.add('open');
    }

    function updateHighlight() {
      var items = list.querySelectorAll('.autocomplete-item');
      items.forEach(function (el, i) {
        el.classList.toggle('highlighted', i === highlightIdx);
      });
    }

    var debouncedFetch = debounce(function () {
      fetchSuggestions(inputEl.value, showList);
    }, 300);

    inputEl.addEventListener('input', debouncedFetch);

    inputEl.addEventListener('keydown', function (e) {
      var items = list.querySelectorAll('.autocomplete-item');
      if (!items.length) return;

      if (e.key === 'ArrowDown') {
        e.preventDefault();
        highlightIdx = Math.min(highlightIdx + 1, items.length - 1);
        updateHighlight();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        highlightIdx = Math.max(highlightIdx - 1, 0);
        updateHighlight();
      } else if (e.key === 'Enter' && highlightIdx >= 0) {
        e.preventDefault();
        inputEl.value = items[highlightIdx].textContent;
        list.classList.remove('open');
      } else if (e.key === 'Escape') {
        list.classList.remove('open');
      }
    });

    inputEl.addEventListener('blur', function () {
      setTimeout(function () { list.classList.remove('open'); }, 150);
    });
  }

