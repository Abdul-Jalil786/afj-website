    }

    // Return time must be >= 30 min after outbound
    if (answers.returnJourney === 'yes' && answers.returnType !== 'no' && answers.returnPickupTime && answers.time) {
      var outParts = answers.time.split(':');
      var retParts = answers.returnPickupTime.split(':');
      var outMin = parseInt(outParts[0]) * 60 + parseInt(outParts[1]);
      var retMin = parseInt(retParts[0]) * 60 + parseInt(retParts[1]);
      if (retMin - outMin < 30) {
        valid = false;
        var rptEl = document.querySelector('[data-qid="returnPickupTime"]');
        if (rptEl) rptEl.style.borderColor = '#E53E3E';
        var msgId = 'returnTimeMsg';
