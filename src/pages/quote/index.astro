---
import PageLayout from '../../layouts/PageLayout.astro';
import quoteRules from '../../data/quote-rules.json';

const web3formsKey = import.meta.env.WEB3FORMS_API_KEY || '';

const breadcrumbs = [{ label: 'Get a Quote' }];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Transport Quote — AFJ Limited',
  provider: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    telephone: '0121 689 1000',
  },
  description:
    'Get an instant estimated quote for private minibus hire and airport transfers from AFJ Limited. Enterprise quotes available for SEND transport, patient transport and fleet services.',
};
---

<PageLayout
  title="Get a Quote"
  description="Get an instant estimated quote for private minibus hire and airport transfers from AFJ Limited. Enterprise quotes available for SEND transport, patient transport and fleet services."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <section class="section-padding">
    <div class="container-wide max-w-3xl">
      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="text-afj-green mb-3">Get a Quote</h1>
        <p class="text-afj-secondary text-lg max-w-2xl mx-auto">
          Select a service below. Private hire and airport transfers receive an instant estimate. Enterprise services connect you with our contracts team.
        </p>
      </div>

      <!-- Progress Steps (hidden for enterprise flow) -->
      <div class="flex items-center justify-center gap-2 mb-10" id="progressBar">
        <div class="step-indicator active" data-step="1">
          <span class="step-number">1</span>
          <span class="step-label hidden sm:inline">Service</span>
        </div>
        <div class="step-line"></div>
        <div class="step-indicator" data-step="2">
          <span class="step-number">2</span>
          <span class="step-label hidden sm:inline">Details</span>
        </div>
        <div class="step-line"></div>
        <div class="step-indicator" data-step="3">
          <span class="step-number">3</span>
          <span class="step-label hidden sm:inline">Estimate</span>
        </div>
        <div class="step-line"></div>
        <div class="step-indicator" data-step="4">
          <span class="step-number">4</span>
          <span class="step-label hidden sm:inline">Contact</span>
        </div>
      </div>

      <!-- STEP 1: Service Selection -->
      <div id="step1" class="wizard-step">
        <h2 class="text-xl font-bold text-gray-900 mb-6 text-center">Which service do you need?</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4" id="serviceGrid">
          {Object.entries(quoteRules.services).map(([key, svc]) => (
            <button
              class="service-card bg-white rounded-lg border-2 border-gray-200 p-5 text-left hover:border-afj-accent hover:shadow-md transition-all group relative"
              data-service={key}
              data-type={(svc as any).type}
            >
              <span
                class:list={[
                  'absolute top-3 right-3 text-xs font-semibold px-2 py-0.5 rounded-full',
                  (svc as any).type === 'instant'
                    ? 'bg-green-100 text-green-700'
                    : 'bg-blue-100 text-blue-700',
                ]}
              >
                {(svc as any).type === 'instant' ? 'Instant Quote' : 'Enterprise / Contract'}
              </span>
              <div class="flex items-start gap-3 pr-20">
                <div class="w-10 h-10 bg-afj-accent/10 rounded-full flex items-center justify-center flex-shrink-0 group-hover:bg-afj-accent/20 transition-colors">
                  <svg class="w-5 h-5 text-afj-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 group-hover:text-afj-accent transition-colors">{(svc as any).label}</h3>
                  <p class="text-sm text-gray-500 mt-1">{(svc as any).description}</p>
                </div>
              </div>
            </button>
          ))}
        </div>
      </div>

      <!-- STEP ENTERPRISE: Portal CTA for contract services -->
      <div id="stepEnterprise" class="wizard-step hidden">
        <div class="flex items-center gap-3 mb-6">
          <button id="backEnterprise" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h2 class="text-xl font-bold text-gray-900" id="enterpriseTitle">Enterprise Service</h2>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-5">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3" id="enterpriseServiceName"></h3>
          <p class="text-gray-600 max-w-md mx-auto mb-8" id="enterpriseDescription"></p>

          <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <a
              id="enterpriseContactLink"
              href="/contact"
              class="flex-1 bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors text-center"
            >
              Request E-Portal Access
            </a>
            <a
              href="tel:01216891000"
              class="flex-1 border-2 border-afj-accent text-afj-accent font-semibold py-3 px-6 rounded-lg hover:bg-afj-accent hover:text-white transition-colors text-center"
            >
              Or call us on 0121 689 1000
            </a>
          </div>
        </div>
      </div>

      <!-- STEP 2: Service-Specific Questions -->
      <div id="step2" class="wizard-step hidden">
        <div class="flex items-center gap-3 mb-6">
          <button id="back2" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h2 class="text-xl font-bold text-gray-900" id="step2Title">Tell us more</h2>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <div id="questionsContainer" class="space-y-5"></div>
          <button
            id="getEstimateBtn"
            class="mt-6 w-full bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors"
          >
            Get My Estimate
          </button>
        </div>
      </div>

      <!-- STEP 3: Estimate Display -->
      <div id="step3" class="wizard-step hidden">
        <div class="flex items-center gap-3 mb-6">
          <button id="back3" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h2 class="text-xl font-bold text-gray-900">Your Estimated Quote</h2>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
          <p class="text-sm text-gray-500 mb-2" id="estimateServiceLabel"></p>
          <p class="text-sm text-gray-600 mb-1 hidden" id="estimateDistance"></p>
          <p class="text-sm text-gray-600 mb-1 hidden" id="estimateWaiting"></p>
          <p class="text-xs text-gray-400 mb-3 hidden" id="estimateNotes"></p>
          <div class="flex items-center justify-center gap-3 mb-2">
            <span class="text-4xl md:text-5xl font-bold text-afj-green" id="estimateLow"></span>
            <span class="text-2xl text-gray-400">&ndash;</span>
            <span class="text-4xl md:text-5xl font-bold text-afj-green" id="estimateHigh"></span>
          </div>
          <p class="text-sm text-gray-500" id="estimatePerUnit"></p>

          <div class="mt-6 bg-blue-50 rounded-lg p-4 text-left">
            <div class="flex gap-3">
              <svg class="w-5 h-5 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <p class="text-sm text-blue-800">
                This is an indicative estimate based on typical requirements. Your final quote may differ depending on specific route details, scheduling and accessibility needs. Contact us for an exact price.
              </p>
            </div>
          </div>

          <div class="mt-8 flex flex-col sm:flex-row gap-3">
            <button
              id="requestQuoteBtn"
              class="flex-1 bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors"
            >
              Request Exact Quote
            </button>
            <a
              href="tel:01216891000"
              class="flex-1 border-2 border-afj-accent text-afj-accent font-semibold py-3 px-6 rounded-lg hover:bg-afj-accent hover:text-white transition-colors text-center"
            >
              Call 0121 689 1000
            </a>
          </div>
        </div>
      </div>

      <!-- STEP 4: Contact Form -->
      <div id="step4" class="wizard-step hidden">
        <div class="flex items-center gap-3 mb-6">
          <button id="back4" class="text-gray-400 hover:text-gray-600 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h2 class="text-xl font-bold text-gray-900">Request Your Exact Quote</h2>
        </div>

        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <p class="text-sm text-gray-600 mb-5">
            Fill in your details and we will send you an exact quote within 24 hours.
          </p>

          <form id="quoteForm" class="space-y-4" novalidate>
            <input type="hidden" name="access_key" value={web3formsKey} />
            <input type="hidden" name="subject" value="New Quote Request — AFJ Limited" />
            <input type="hidden" name="from_name" value="AFJ Website Quote Wizard" />
            <input type="hidden" name="service" id="formService" value="" />
            <input type="hidden" name="estimate" id="formEstimate" value="" />
            <input type="hidden" name="answers_summary" id="formAnswers" value="" />
            <input type="checkbox" name="botcheck" class="hidden" style="display:none" />

            <div>
              <label for="quote-name" class="block text-sm font-medium text-afj-text mb-1">Full Name <span class="text-afj-red">*</span></label>
              <input
                type="text"
                id="quote-name"
                name="name"
                required
                placeholder="Your full name"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent"
              />
            </div>

            <div>
              <label for="quote-email" class="block text-sm font-medium text-afj-text mb-1">Email Address <span class="text-afj-red">*</span></label>
              <input
                type="email"
                id="quote-email"
                name="email"
                required
                placeholder="your.email@example.com"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent"
              />
              <p class="form-error text-afj-red text-xs mt-1 hidden" data-for="quote-email">Please enter a valid email address.</p>
            </div>

            <div>
              <label for="quote-phone" class="block text-sm font-medium text-afj-text mb-1">Phone</label>
              <input
                type="tel"
                id="quote-phone"
                name="phone"
                placeholder="07400 123456"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent"
              />
            </div>

            <div>
              <label for="quote-details" class="block text-sm font-medium text-afj-text mb-1">Additional Details</label>
              <textarea
                id="quote-details"
                name="message"
                rows="3"
                placeholder="Any specific requirements, dates, or questions"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent resize-y"
              ></textarea>
            </div>

            <button
              type="submit"
              id="submitQuoteBtn"
              class="w-full bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors"
            >
              Send Quote Request
            </button>
          </form>

          <div id="quoteSuccess" class="hidden bg-green-50 text-green-700 rounded-lg p-4 text-sm mt-4" role="alert">
            Thank you! Your quote request has been sent. We will be in touch within 24 hours.
          </div>
          <div id="quoteError" class="hidden bg-red-50 text-red-700 rounded-lg p-4 text-sm mt-4" role="alert">
            Sorry, there was an error sending your request. Please try again or call us on 0121 689 1000.
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .step-indicator {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: #9CA3AF;
    font-size: 0.875rem;
  }
  .step-indicator.active {
    color: #38A169;
  }
  .step-indicator.active .step-number {
    background-color: #38A169;
    color: white;
  }
  .step-indicator.completed .step-number {
    background-color: #38A169;
    color: white;
  }
  .step-indicator.completed {
    color: #38A169;
  }
  .step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.75rem;
    height: 1.75rem;
    border-radius: 9999px;
    background-color: #E5E7EB;
    font-weight: 600;
    font-size: 0.75rem;
  }
  .step-line {
    width: 2rem;
    height: 2px;
    background-color: #E5E7EB;
  }
  .service-card.selected {
    border-color: #38A169;
    background-color: #F0FFF4;
  }
  .toggle-btn {
    padding: 0.625rem 1.25rem;
    border: 2px solid #E5E7EB;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #4A5568;
    background: white;
    cursor: pointer;
    transition: all 0.15s ease;
  }
  .toggle-btn:hover {
    border-color: #38A169;
  }
  .toggle-btn.active {
    border-color: #38A169;
    background-color: #F0FFF4;
    color: #276749;
  }
  .autocomplete-wrap {
    position: relative;
  }
  .autocomplete-list {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    z-index: 20;
    background: white;
    border: 1px solid #E5E7EB;
    border-top: 0;
    border-radius: 0 0 0.5rem 0.5rem;
    max-height: 200px;
    overflow-y: auto;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,.1);
    display: none;
  }
  .autocomplete-list.open {
    display: block;
  }
  .autocomplete-item {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    cursor: pointer;
    color: #374151;
  }
  .autocomplete-item:hover,
  .autocomplete-item.highlighted {
    background-color: #F0FFF4;
    color: #276749;
  }
</style>

<script is:inline define:vars={{ quoteRules }}>
  var selectedService = '';
  var currentStep = 1;
  var currentAnswers = {};
  var currentEstimate = null;
  var stopCount = 0;

  var step1 = document.getElementById('step1');
  var stepEnterprise = document.getElementById('stepEnterprise');
  var step2 = document.getElementById('step2');
  var step3 = document.getElementById('step3');
  var step4 = document.getElementById('step4');
  var progressBar = document.getElementById('progressBar');

  var allSteps = [step1, stepEnterprise, step2, step3, step4];

  // --- Postcodes.io autocomplete helpers ---
  function debounce(fn, ms) {
    var timer;
    return function () {
      var args = arguments;
      var ctx = this;
      clearTimeout(timer);
      timer = setTimeout(function () { fn.apply(ctx, args); }, ms);
    };
  }

  function fetchSuggestions(query, callback) {
    var q = query.trim();
    if (q.length < 2) { callback([]); return; }

    var isPostcode = /^[A-Z]{1,2}\d/i.test(q);
    var url = isPostcode
      ? 'https://api.postcodes.io/postcodes/' + encodeURIComponent(q) + '/autocomplete?limit=8'
      : 'https://api.postcodes.io/places?q=' + encodeURIComponent(q) + '&limit=8';

    fetch(url)
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (!data.result || !data.result.length) { callback([]); return; }
        if (isPostcode) {
          callback(data.result);
        } else {
          var seen = {};
          var names = [];
          data.result.forEach(function (p) {
            var name = p.name_1 || p.place_name || '';
            if (name && !seen[name]) { seen[name] = true; names.push(name); }
          });
          callback(names);
        }
      })
      .catch(function () { callback([]); });
  }

  function attachAutocomplete(inputEl) {
    // Wrap input in a relative container
    var wrap = document.createElement('div');
    wrap.className = 'autocomplete-wrap';
    inputEl.parentNode.insertBefore(wrap, inputEl);
    wrap.appendChild(inputEl);

    // Create dropdown list
    var list = document.createElement('div');
    list.className = 'autocomplete-list';
    list.setAttribute('role', 'listbox');
    wrap.appendChild(list);

    var highlightIdx = -1;

    function showList(items) {
      list.innerHTML = '';
      highlightIdx = -1;
      if (!items.length) { list.classList.remove('open'); return; }
      items.forEach(function (text, i) {
        var item = document.createElement('div');
        item.className = 'autocomplete-item';
        item.setAttribute('role', 'option');
        item.textContent = text;
        item.addEventListener('mousedown', function (e) {
          e.preventDefault();
          inputEl.value = text;
          list.classList.remove('open');
        });
        list.appendChild(item);
      });
      list.classList.add('open');
    }

    function updateHighlight() {
      var items = list.querySelectorAll('.autocomplete-item');
      items.forEach(function (el, i) {
        el.classList.toggle('highlighted', i === highlightIdx);
      });
    }

    var debouncedFetch = debounce(function () {
      fetchSuggestions(inputEl.value, showList);
    }, 300);

    inputEl.addEventListener('input', debouncedFetch);

    inputEl.addEventListener('keydown', function (e) {
      var items = list.querySelectorAll('.autocomplete-item');
      if (!items.length) return;

      if (e.key === 'ArrowDown') {
        e.preventDefault();
        highlightIdx = Math.min(highlightIdx + 1, items.length - 1);
        updateHighlight();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        highlightIdx = Math.max(highlightIdx - 1, 0);
        updateHighlight();
      } else if (e.key === 'Enter' && highlightIdx >= 0) {
        e.preventDefault();
        inputEl.value = items[highlightIdx].textContent;
        list.classList.remove('open');
      } else if (e.key === 'Escape') {
        list.classList.remove('open');
      }
    });

    inputEl.addEventListener('blur', function () {
      setTimeout(function () { list.classList.remove('open'); }, 150);
    });
  }

  function hideAllSteps() {
    allSteps.forEach(function (el) { el.classList.add('hidden'); });
  }

  function showStep(id) {
    hideAllSteps();
    var el = document.getElementById(id);
    if (el) el.classList.remove('hidden');

    // Update progress bar for instant flow
    var stepMap = { step1: 1, step2: 2, step3: 3, step4: 4 };
    var num = stepMap[id] || 0;

    if (id === 'stepEnterprise') {
      progressBar.classList.add('hidden');
    } else {
      progressBar.classList.remove('hidden');
      progressBar.querySelectorAll('.step-indicator').forEach(function (ind) {
        var s = parseInt(ind.dataset.step);
        ind.classList.remove('active', 'completed');
        if (s === num) ind.classList.add('active');
        if (s < num) ind.classList.add('completed');
      });
    }

    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // Step 1: service selection
  document.querySelectorAll('.service-card').forEach(function (card) {
    card.addEventListener('click', function () {
      document.querySelectorAll('.service-card').forEach(function (c) { c.classList.remove('selected'); });
      card.classList.add('selected');
      selectedService = card.dataset.service;
      currentAnswers = {};

      var svc = quoteRules.services[selectedService];
      if (!svc) return;

      if (svc.type === 'enterprise') {
        // Show enterprise CTA
        document.getElementById('enterpriseTitle').textContent = svc.label;
        document.getElementById('enterpriseServiceName').textContent = svc.label;
        document.getElementById('enterpriseDescription').textContent =
          'Our ' + svc.label + ' contracts are tailored to your organisation\u2019s specific requirements. If you are a local authority, NHS trust, or organisation, request access to our e-portal for detailed pricing and service specifications.';
        document.getElementById('enterpriseContactLink').href = '/contact?service=' + encodeURIComponent(svc.label);
        showStep('stepEnterprise');
      } else {
        // Show instant questions
        buildQuestions(selectedService);
        showStep('step2');
      }
    });
  });

  // Evaluate showWhen conditions and show/hide conditional fields
  function reevaluateVisibility(container) {
    var conditionals = container.querySelectorAll('[data-show-when]');
    conditionals.forEach(function (div) {
      var rule = div.dataset.showWhen; // e.g. "returnJourney:yes"
      var parts = rule.split(':');
      var fieldId = parts[0];
      var expectedVal = parts[1];

      // Get current value of the referenced field
      var currentVal = '';
      var toggleGroup = container.querySelector('[data-qid="' + fieldId + '"][data-type="toggle"]');
      if (toggleGroup) {
        var activeBtn = toggleGroup.querySelector('.toggle-btn.active');
        currentVal = activeBtn ? activeBtn.dataset.value : '';
      } else {
        var input = container.querySelector('[data-qid="' + fieldId + '"]');
        if (input) currentVal = input.value;
      }

      if (currentVal === expectedVal) {
        div.classList.remove('hidden');
      } else {
        div.classList.add('hidden');
      }
    });
  }

  function buildQuestions(serviceKey) {
    var svc = quoteRules.services[serviceKey];
    if (!svc || !svc.questions) return;

    document.getElementById('step2Title').textContent = svc.label + ' — Details';

    var container = document.getElementById('questionsContainer');
    container.innerHTML = '';

    svc.questions.forEach(function (q) {
      var div = document.createElement('div');
      var required = q.required ? ' <span class="text-afj-red">*</span>' : '';
      var labelHtml = '<label class="block text-sm font-medium text-afj-text mb-1">' + q.label + required + '</label>';
      var inputHtml = '';
      var inputClass = 'w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent';

      // Mark conditional fields with data-show-when and hide initially
      if (q.showWhen) {
        var key = Object.keys(q.showWhen)[0];
        div.setAttribute('data-show-when', key + ':' + q.showWhen[key]);
        div.classList.add('hidden');
      }

      if (q.inputType === 'select') {
        inputHtml =
          '<select data-qid="' + q.id + '" data-type="select"' + (q.required ? ' data-required="true"' : '') + ' class="quiz-input ' + inputClass + ' bg-white">' +
          '<option value="">Select...</option>' +
          q.options.map(function (opt) {
            return '<option value="' + opt.value + '">' + opt.label + '</option>';
          }).join('') +
          '</select>';
      } else if (q.inputType === 'text') {
        var autoOff = q.id.toLowerCase().indexOf('postcode') !== -1 ? ' autocomplete="off"' : '';
        inputHtml = '<input type="text" data-qid="' + q.id + '" data-type="text"' + (q.required ? ' data-required="true"' : '') + autoOff + ' placeholder="' + (q.placeholder || '') + '" class="quiz-input ' + inputClass + '" />';
      } else if (q.inputType === 'date') {
        inputHtml = '<input type="date" data-qid="' + q.id + '" data-type="date"' + (q.required ? ' data-required="true"' : '') + ' class="quiz-input ' + inputClass + '" />';
      } else if (q.inputType === 'time') {
        inputHtml = '<input type="time" data-qid="' + q.id + '" data-type="time"' + (q.required ? ' data-required="true"' : '') + ' class="quiz-input ' + inputClass + '" />';
      } else if (q.inputType === 'toggle') {
        var yesFirst = q.id === 'returnType';
        var noLabel = q.toggleLabels ? q.toggleLabels.no : 'No';
        var yesLabel = q.toggleLabels ? q.toggleLabels.yes : 'Yes';
        if (yesFirst) {
          inputHtml =
            '<div class="flex gap-2" data-qid="' + q.id + '" data-type="toggle">' +
            '<button type="button" class="toggle-btn active" data-value="yes">' + yesLabel + '</button>' +
            '<button type="button" class="toggle-btn" data-value="no">' + noLabel + '</button>' +
            '</div>';
        } else {
          inputHtml =
            '<div class="flex gap-2" data-qid="' + q.id + '" data-type="toggle">' +
            '<button type="button" class="toggle-btn active" data-value="no">' + noLabel + '</button>' +
            '<button type="button" class="toggle-btn" data-value="yes">' + yesLabel + '</button>' +
            '</div>';
        }
      }

      div.innerHTML = labelHtml + inputHtml;
      container.appendChild(div);
    });

    // Bind toggle click handlers and re-evaluate conditional visibility on change
    container.querySelectorAll('[data-type="toggle"]').forEach(function (group) {
      group.querySelectorAll('.toggle-btn').forEach(function (btn) {
        btn.addEventListener('click', function () {
          group.querySelectorAll('.toggle-btn').forEach(function (b) { b.classList.remove('active'); });
          btn.classList.add('active');
          reevaluateVisibility(container);
        });
      });
    });

    // Re-evaluate on select changes too
    container.querySelectorAll('select.quiz-input').forEach(function (sel) {
      sel.addEventListener('change', function () {
        reevaluateVisibility(container);
      });
    });

    // Attach autocomplete to postcode/city text inputs
    container.querySelectorAll('input[data-type="text"]').forEach(function (input) {
      var qid = input.dataset.qid || '';
      if (qid.toLowerCase().indexOf('postcode') !== -1) {
        attachAutocomplete(input);
      }
    });

    // Multi-stop UI for private-hire
    stopCount = 0;
    if (serviceKey === 'private-hire') {
      var destEl = container.querySelector('[data-qid="destinationPostcode"]');
      if (destEl) {
        // Walk up to find the question wrapper (direct child of container)
        var destDiv = destEl;
        while (destDiv.parentNode !== container) {
          destDiv = destDiv.parentNode;
        }

        var stopsSection = document.createElement('div');
        stopsSection.id = 'stopsSection';
        stopsSection.innerHTML =
          '<div id="stopsContainer" class="space-y-2"></div>' +
          '<button type="button" id="addStopBtn" class="text-sm text-afj-accent hover:text-afj-green font-medium mt-1">+ Add a stop</button>';

        destDiv.after(stopsSection);

        document.getElementById('addStopBtn').addEventListener('click', function () {
          if (stopCount >= 2) return;
          stopCount++;
          var stopId = 'stop' + stopCount;

          var stopWrap = document.createElement('div');
          stopWrap.className = 'flex items-center gap-2';
          stopWrap.dataset.stopId = stopId;

          var inp = document.createElement('input');
          inp.type = 'text';
          inp.dataset.qid = stopId;
          inp.dataset.type = 'text';
          inp.placeholder = 'Stop ' + stopCount + ' postcode or city';
          inp.autocomplete = 'off';
          inp.className = 'quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent';

          var rmBtn = document.createElement('button');
          rmBtn.type = 'button';
          rmBtn.className = 'text-gray-400 hover:text-red-500 transition-colors text-xl font-bold px-2 flex-shrink-0';
          rmBtn.innerHTML = '&times;';
          rmBtn.addEventListener('click', function () {
            stopWrap.remove();
            stopCount--;
            if (stopCount < 2) document.getElementById('addStopBtn').classList.remove('hidden');
            var remaining = document.getElementById('stopsContainer').querySelectorAll('[data-stop-id]');
            remaining.forEach(function (el, i) {
              var num = i + 1;
              el.dataset.stopId = 'stop' + num;
              var rinp = el.querySelector('input');
              if (rinp) { rinp.dataset.qid = 'stop' + num; rinp.placeholder = 'Stop ' + num + ' postcode or city'; }
            });
          });

          stopWrap.appendChild(inp);
          stopWrap.appendChild(rmBtn);
          document.getElementById('stopsContainer').appendChild(stopWrap);

          attachAutocomplete(inp);
          // Make autocomplete wrapper flex-friendly
          var acWrap = inp.closest('.autocomplete-wrap');
          if (acWrap) acWrap.classList.add('flex-1', 'min-w-0');

          if (stopCount >= 2) document.getElementById('addStopBtn').classList.add('hidden');
        });
      }
    }
  }

  // Check if an element is inside a hidden showWhen wrapper
  function isHiddenConditional(el) {
    var parent = el.closest('[data-show-when]');
    return parent && parent.classList.contains('hidden');
  }

  function collectAnswers() {
    var answers = {};
    var valid = true;

    // Collect from text, date, time, select inputs (skip hidden conditional fields)
    document.querySelectorAll('.quiz-input').forEach(function (input) {
      if (isHiddenConditional(input)) return;

      var qid = input.dataset.qid;
      var required = input.dataset.required === 'true';
      var val = input.value.trim();

      if (required && !val) {
        valid = false;
        input.style.borderColor = '#E53E3E';
      } else {
        input.style.borderColor = '';
      }

      if (val) answers[qid] = val;
    });

    // Collect from toggle groups (skip hidden conditional fields)
    document.querySelectorAll('[data-type="toggle"]').forEach(function (group) {
      if (isHiddenConditional(group)) return;

      var qid = group.dataset.qid;
      var activeBtn = group.querySelector('.toggle-btn.active');
      if (activeBtn) {
        answers[qid] = activeBtn.dataset.value;
      }
    });

    // For same-day return, returnPickupTime is effectively required
    if (answers.returnJourney === 'yes' && answers.returnType !== 'no' && !answers.returnPickupTime) {
      var rptInput = document.querySelector('[data-qid="returnPickupTime"]');
      if (rptInput && !isHiddenConditional(rptInput)) {
        valid = false;
        rptInput.style.borderColor = '#E53E3E';
      }
    }

    return valid ? answers : null;
  }

  // Step 2: get estimate
  document.getElementById('getEstimateBtn').addEventListener('click', function () {
    var answers = collectAnswers();
    if (!answers) return;

    currentAnswers = answers;

    var btn = document.getElementById('getEstimateBtn');
    btn.disabled = true;
    btn.textContent = 'Calculating...';

    fetch('/api/quote/estimate', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ service: selectedService, answers: currentAnswers }),
    })
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (data.success) {
          currentEstimate = data.estimate;
          var svc = quoteRules.services[selectedService];
          document.getElementById('estimateServiceLabel').textContent = svc.label;

          // Show distance and travel time
          var distanceEl = document.getElementById('estimateDistance');
          if (data.estimate.distanceMiles) {
            var distText = data.estimate.distanceMiles + ' miles';
            if (data.estimate.durationMinutes) {
              var totalMin = data.estimate.durationMinutes;
              var hrs = Math.floor(totalMin / 60);
              var mins = totalMin % 60;
              var timeStr = hrs > 0 ? hrs + 'h ' + mins + 'm' : mins + ' min';
              distText += ' \u00B7 approx. ' + timeStr;
            }
            distanceEl.textContent = distText;
            distanceEl.classList.remove('hidden');
          } else {
            distanceEl.classList.add('hidden');
          }

          // Show waiting time (same-day return only)
          var waitingEl = document.getElementById('estimateWaiting');
          if (data.estimate.waitingHours) {
            waitingEl.textContent = 'Waiting time: ' + data.estimate.waitingHours + ' hours';
            waitingEl.classList.remove('hidden');
          } else {
            waitingEl.classList.add('hidden');
          }

          // Show notes
          var notesEl = document.getElementById('estimateNotes');
          var notes = [];
          if (data.estimate.numberOfStops) {
            notes.push(data.estimate.numberOfStops + ' additional stop' + (data.estimate.numberOfStops > 1 ? 's' : ''));
          }
          if (data.estimate.deadheadMiles) {
            notes.push('Includes driver travel from base (' + data.estimate.deadheadMiles + ' mi)');
          }
          if (data.estimate.dvsaBreakApplied) {
            notes.push('DVSA break allowance included');
          }
          if (data.estimate.surchargeLabels && data.estimate.surchargeLabels.length) {
            notes.push(data.estimate.surchargeLabels.join(', '));
          }
          if (data.estimate.regularDiscountApplied) {
            notes.push('Regular booking discount applied');
          }
          if (data.estimate.minimumApplied) {
            notes.push('Minimum booking rate applied');
          }
          if (notes.length) {
            notesEl.textContent = notes.join(' \u00B7 ');
            notesEl.classList.remove('hidden');
          } else {
            notesEl.classList.add('hidden');
          }

          document.getElementById('estimateLow').textContent = '\u00A3' + data.estimate.low;
          document.getElementById('estimateHigh').textContent = '\u00A3' + data.estimate.high;
          document.getElementById('estimatePerUnit').textContent = data.estimate.perUnit;
          showStep('step3');
        } else {
          alert(data.error || 'Failed to calculate estimate.');
        }
      })
      .catch(function () {
        alert('Something went wrong. Please try again.');
      })
      .finally(function () {
        btn.disabled = false;
        btn.textContent = 'Get My Estimate';
      });
  });

  // Step 3: request exact quote
  document.getElementById('requestQuoteBtn').addEventListener('click', function () {
    var svc = quoteRules.services[selectedService];
    document.getElementById('formService').value = svc.label;
    document.getElementById('formEstimate').value = '\u00A3' + currentEstimate.low + ' \u2013 \u00A3' + currentEstimate.high + ' ' + currentEstimate.perUnit;

    // Build answers summary
    var lines = [];
    if (svc.questions) {
      svc.questions.forEach(function (q) {
        var val = currentAnswers[q.id];
        if (!val) return;
        if (q.options) {
          var opt = q.options.find(function (o) { return o.value === val; });
          lines.push(q.label + ': ' + (opt ? opt.label : val));
        } else {
          lines.push(q.label + ': ' + val);
        }
      });
    }
    document.getElementById('formAnswers').value = lines.join('\n');

    showStep('step4');
  });

  // Back buttons
  document.getElementById('backEnterprise').addEventListener('click', function () { showStep('step1'); });
  document.getElementById('back2').addEventListener('click', function () { showStep('step1'); });
  document.getElementById('back3').addEventListener('click', function () { showStep('step2'); });
  document.getElementById('back4').addEventListener('click', function () { showStep('step3'); });

  // Step 4: submit form via Web3Forms
  var quoteForm = document.getElementById('quoteForm');
  quoteForm.addEventListener('submit', function (e) {
    e.preventDefault();

    var email = document.getElementById('quote-email');
    var name = document.getElementById('quote-name');
    var successEl = document.getElementById('quoteSuccess');
    var errorEl = document.getElementById('quoteError');
    var submitBtn = document.getElementById('submitQuoteBtn');
    var valid = true;

    successEl.classList.add('hidden');
    errorEl.classList.add('hidden');
    quoteForm.querySelectorAll('.form-error').forEach(function (el) { el.classList.add('hidden'); });

    if (!name.value.trim()) {
      valid = false;
    }

    if (!email.value || !email.value.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
      quoteForm.querySelector('[data-for="quote-email"]').classList.remove('hidden');
      valid = false;
    }

    if (!valid) return;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';

    var formData = new FormData(quoteForm);

    fetch('https://api.web3forms.com/submit', {
      method: 'POST',
      body: formData,
    })
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (data.success) {
          successEl.classList.remove('hidden');
          quoteForm.classList.add('hidden');
        } else {
          errorEl.classList.remove('hidden');
        }
      })
      .catch(function () {
        errorEl.classList.remove('hidden');
      })
      .finally(function () {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Quote Request';
      });
  });
</script>
