---
import PageLayout from '../../layouts/PageLayout.astro';
import quoteRules from '../../data/quote-rules.json';

const breadcrumbs = [{ label: 'Get a Quote' }];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Transport Quote — AFJ Limited',
  provider: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    telephone: '0121 689 1000',
  },
  description:
    'Get an instant estimated quote for private minibus hire and airport transfers from AFJ Limited. Enterprise quotes available for SEND transport, patient transport and fleet services.',
};

/* Service icon SVG paths keyed by service ID */
const serviceIcons: Record<string, { viewBox: string; d: string; fill?: boolean }> = {
  'private-hire': { viewBox: '0 0 24 24', d: 'M8 17a1.5 1.5 0 100-3 1.5 1.5 0 000 3zm8 0a1.5 1.5 0 100-3 1.5 1.5 0 000 3zM3 11l1.5-5A2 2 0 016.4 4h11.2a2 2 0 011.9 1.4L21 11M3 11v6a1 1 0 001 1h1m-2-7h18m0 0v6a1 1 0 01-1 1h-1m0 0H6' },
  'airport': { viewBox: '0 0 24 24', d: 'M12 19l-2-6L3 11l1.5-2 5.5 1L12 4l2 6 5.5-1L21 11l-7 2-2 6z', fill: true },
  'send-transport': { viewBox: '0 0 24 24', d: 'M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422A12.083 12.083 0 0121 12.75V18a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 18v-5.25c0-1.24.38-2.45 1.084-3.476L12 14z' },
  'nepts': { viewBox: '0 0 24 24', d: 'M12 4v6m0 0v6m0-6h6m-6 0H6M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  'executive': { viewBox: '0 0 24 24', d: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z' },
  'fleet-maintenance': { viewBox: '0 0 24 24', d: 'M11.42 15.17l-5.1-5.1a2 2 0 010-2.83l.7-.7a2 2 0 012.83 0l.71.7 2.83-2.83-.71-.7a4 4 0 00-5.66 0l-.7.7a4 4 0 000 5.66l5.1 5.1a1 1 0 001.42-1.42zM21.07 4.22a4 4 0 00-5.66 0l-.7.7a4 4 0 000 5.66l5.1 5.1a1 1 0 001.42-1.42l-5.1-5.1a2 2 0 010-2.83l.7-.7a2 2 0 012.83 0l.71.7a1 1 0 001.42-1.42l-.71-.7z' },
};
---

<PageLayout
  title="Get a Quote"
  description="Get an instant estimated quote for private minibus hire and airport transfers from AFJ Limited. Enterprise quotes available for SEND transport, patient transport and fleet services."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <section class="section-padding">
    <div class="container-wide max-w-3xl">
      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="text-afj-green mb-3">Get a Quote</h1>
        <p class="text-afj-secondary text-lg max-w-2xl mx-auto">
          Select a service below. Private hire and airport transfers receive an instant estimate. Enterprise services connect you with our contracts team.
        </p>
      </div>

      <!-- Progress Steps -->
      <div class="flex items-center justify-center max-w-md mx-auto mb-10" id="progressBar">
        <div class="step-indicator active" data-step="1">
          <span class="step-circle">
            <span class="step-number">1</span>
            <svg class="step-check" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
          </span>
          <span class="step-label hidden sm:inline">Service</span>
        </div>
        <div class="step-line-track"><div class="step-line-fill"></div></div>
        <div class="step-indicator" data-step="2">
          <span class="step-circle">
            <span class="step-number">2</span>
            <svg class="step-check" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
          </span>
          <span class="step-label hidden sm:inline">Details</span>
        </div>
        <div class="step-line-track"><div class="step-line-fill"></div></div>
        <div class="step-indicator" data-step="3">
          <span class="step-circle">
            <span class="step-number">3</span>
            <svg class="step-check" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
          </span>
          <span class="step-label hidden sm:inline">Estimate</span>
        </div>
        <div class="step-line-track"><div class="step-line-fill"></div></div>
        <div class="step-indicator" data-step="4">
          <span class="step-circle">
            <span class="step-number">4</span>
            <svg class="step-check" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
          </span>
          <span class="step-label hidden sm:inline">Contact</span>
        </div>
      </div>

      <!-- Steps wrapper for transitions -->
      <div class="steps-wrapper">

        <!-- STEP 1: Service Selection -->
        <div id="step1" class="wizard-step active-step">
          <h2 class="text-xl font-bold text-gray-900 mb-6 text-center">Which service do you need?</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4" id="serviceGrid">
            {Object.entries(quoteRules.services).map(([key, svc]) => {
              const icon = serviceIcons[key];
              return (
                <button
                  class="service-card"
                  data-service={key}
                  data-type={(svc as any).type}
                >
                  <span
                    class:list={[
                      'absolute top-3 right-3 text-xs font-semibold px-2.5 py-1 rounded-full inline-flex items-center gap-1',
                      (svc as any).type === 'instant'
                        ? 'bg-green-100 text-green-700'
                        : 'bg-blue-100 text-blue-700',
                    ]}
                  >
                    {(svc as any).type === 'instant' && (
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
                    )}
                    {(svc as any).type === 'instant' ? 'Instant Quote' : 'Enterprise'}
                  </span>
                  <div class="flex items-start gap-4 pr-24">
                    <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-afj-accent/10 to-afj-green/10 flex items-center justify-center flex-shrink-0 group-hover:from-afj-accent/20 group-hover:to-afj-green/20 transition-all">
                      {icon && (
                        <svg class="w-5 h-5 text-afj-accent" fill={icon.fill ? 'currentColor' : 'none'} stroke={icon.fill ? 'none' : 'currentColor'} viewBox={icon.viewBox}>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon.d} />
                        </svg>
                      )}
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900 group-hover:text-afj-accent transition-colors">{(svc as any).label}</h3>
                      <p class="text-sm text-gray-500 mt-1">{(svc as any).description}</p>
                    </div>
                  </div>
                </button>
              );
            })}
          </div>
        </div>

        <!-- STEP ENTERPRISE: Inline Enquiry Form -->
        <div id="stepEnterprise" class="wizard-step">
          <div class="flex items-center gap-3 mb-6">
            <button id="backEnterprise" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <h2 class="text-xl font-bold text-gray-900" id="enterpriseTitle">Enterprise Service</h2>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
            <div class="flex items-center gap-4 mb-6 pb-5 border-b border-gray-100">
              <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-gray-900" id="enterpriseServiceName"></h3>
                <p class="text-sm text-gray-500" id="enterpriseDescription"></p>
              </div>
            </div>

            <form id="enterpriseForm" class="space-y-4">
              <div>
                <label for="ent-org" class="block text-sm font-medium text-afj-text mb-1">Organisation Name <span class="text-afj-red">*</span></label>
                <input type="text" id="ent-org" required placeholder="e.g. Birmingham City Council" class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent" />
              </div>
              <div>
                <label for="ent-type" class="block text-sm font-medium text-afj-text mb-1">Organisation Type</label>
                <select id="ent-type" class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text bg-white focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent">
                  <option value="">Select...</option>
                  <option value="council">Local Authority / Council</option>
                  <option value="nhs">NHS Trust</option>
                  <option value="school">School / Academy</option>
                  <option value="charity">Charity</option>
                  <option value="other">Other</option>
                </select>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                  <label for="ent-name" class="block text-sm font-medium text-afj-text mb-1">Contact Name <span class="text-afj-red">*</span></label>
                  <input type="text" id="ent-name" required placeholder="Your full name" class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent" />
                </div>
                <div>
                  <label for="ent-email" class="block text-sm font-medium text-afj-text mb-1">Email <span class="text-afj-red">*</span></label>
                  <input type="email" id="ent-email" required placeholder="your.email@org.uk" class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent" />
                  <p class="form-error text-afj-red text-xs mt-1 hidden" data-for="ent-email">Please enter a valid email address.</p>
                </div>
              </div>
              <div>
                <label for="ent-phone" class="block text-sm font-medium text-afj-text mb-1">Phone</label>
                <input type="tel" id="ent-phone" placeholder="07400 123456" class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent" />
              </div>
              <div>
                <label for="ent-details" class="block text-sm font-medium text-afj-text mb-1">Brief Description of Requirements</label>
                <textarea id="ent-details" rows="3" placeholder="Number of routes, students/patients, locations, start date..." class="quiz-input w-full px-4 py-3 border border-gray-300 rounded-lg text-afj-text focus:outline-none focus:ring-2 focus:ring-afj-accent focus:border-transparent resize-y"></textarea>
              </div>
              <button type="submit" id="enterpriseSubmitBtn" class="w-full bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors">
                Submit Enterprise Enquiry
              </button>
            </form>

            <div id="enterpriseSuccess" class="hidden text-center py-6">
              <div class="w-14 h-14 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-7 h-7 text-green-600 success-check-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Enquiry Sent</h3>
              <p class="text-gray-600">Thank you! Our contracts team will be in touch within 24 hours.</p>
            </div>

            <div id="enterpriseError" class="hidden bg-red-50 text-red-700 rounded-lg p-4 text-sm mt-4" role="alert">
              Sorry, there was an error. Please try again or call us directly.
            </div>

            <div class="text-center mt-5 pt-4 border-t border-gray-100">
              <p class="text-sm text-gray-500">Or call our contracts team: <a href="tel:01216891000" class="text-afj-accent font-semibold hover:text-afj-green transition-colors">0121 689 1000</a></p>
            </div>
          </div>
        </div>

        <!-- STEP 2: Service-Specific Questions -->
        <div id="step2" class="wizard-step">
          <div class="flex items-center gap-3 mb-6">
            <button id="back2" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <h2 class="text-xl font-bold text-gray-900" id="step2Title">Tell us more</h2>
          </div>

          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div id="questionsContainer" class="space-y-5"></div>
            <button
              id="getEstimateBtn"
              class="mt-6 w-full bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors"
            >
              Get My Estimate
            </button>
          </div>
        </div>

        <!-- STEP 3: Estimate Display -->
        <div id="step3" class="wizard-step">
          <div class="flex items-center gap-3 mb-6">
            <button id="back3" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            </button>
            <h2 class="text-xl font-bold text-gray-900">Your Estimated Quote</h2>
          </div>

          <!-- Skeleton loading state -->
          <div id="estimateLoading" class="hidden">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <div class="animate-pulse">
                <div class="h-4 bg-gray-200 rounded w-1/3 mx-auto mb-6"></div>
                <div class="bg-gray-50 rounded-lg p-5 mb-4">
                  <div class="grid grid-cols-3 gap-4">
                    <div class="h-8 bg-gray-200 rounded"></div>
                    <div class="h-8 bg-gray-200 rounded"></div>
                    <div class="h-8 bg-gray-200 rounded"></div>
                  </div>
                </div>
                <div class="bg-green-50 rounded-lg p-6 mb-4">
                  <div class="flex items-center justify-center gap-3">
                    <div class="h-10 bg-green-200 rounded w-24"></div>
                    <div class="h-6 bg-gray-200 rounded w-4"></div>
                    <div class="h-10 bg-green-200 rounded w-24"></div>
                  </div>
                </div>
                <div class="h-3 bg-gray-200 rounded w-2/3 mx-auto mb-3"></div>
                <div class="h-3 bg-gray-200 rounded w-1/2 mx-auto"></div>
              </div>
            </div>
          </div>

          <!-- Actual estimate content -->
          <div id="estimateContent" class="hidden">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-8">
              <p class="text-sm font-medium text-gray-500 mb-5 text-center" id="estimateServiceLabel"></p>

              <!-- Journey Summary -->
              <div id="journeySummary" class="mb-5 hidden">
                <div class="bg-gray-50 rounded-lg p-4 sm:p-5">
                  <div class="grid grid-cols-2 sm:grid-cols-3 gap-4 text-center">
                    <div>
                      <p class="text-2xl font-bold text-afj-green" id="summaryDistance">--</p>
                      <p class="text-xs text-gray-500">miles</p>
                    </div>
                    <div>
                      <p class="text-2xl font-bold text-afj-green" id="summaryDuration">--</p>
                      <p class="text-xs text-gray-500">est. travel time</p>
                    </div>
                    <div id="summaryReturnWrap" class="hidden col-span-2 sm:col-span-1">
                      <p class="text-sm font-semibold text-gray-700" id="summaryReturnType">--</p>
                      <p class="text-xs text-gray-500">return type</p>
                    </div>
                  </div>
                  <p id="summaryReturnMsg" class="mt-3 text-sm text-gray-600 text-center hidden"></p>
                </div>
              </div>

              <!-- Route Timeline -->
              <div id="routeVisual" class="mb-5 hidden">
                <div class="flex items-stretch gap-4 px-2">
                  <div class="flex flex-col items-center" id="routeDots">
                    <div class="w-3 h-3 rounded-full bg-afj-accent flex-shrink-0"></div>
                    <div class="w-0.5 flex-1 bg-gray-300 min-h-[1.5rem]"></div>
                    <div id="routeStopDots"></div>
                    <div class="w-3 h-3 rounded-full bg-afj-green flex-shrink-0"></div>
                    <div id="routeReturnDots" class="hidden">
                      <div class="w-0.5 h-5 bg-gray-300 mx-auto"></div>
                      <div class="w-3 h-3 rounded-full border-2 border-afj-accent bg-white mx-auto"></div>
                    </div>
                  </div>
                  <div class="flex flex-col justify-between py-0.5 min-w-0">
                    <div class="mb-2">
                      <p class="text-sm font-medium text-gray-900 truncate" id="routePickup">--</p>
                      <p class="text-xs text-gray-500" id="routePickupTime">--</p>
                    </div>
                    <div id="routeStopLabels"></div>
                    <div class="mt-2">
                      <p class="text-sm font-medium text-gray-900 truncate" id="routeDest">--</p>
                      <p class="text-xs text-gray-500" id="routeDestInfo"></p>
                    </div>
                    <div id="routeReturnLabel" class="hidden mt-2">
                      <p class="text-sm font-medium text-gray-900">Return to pickup</p>
                      <p class="text-xs text-gray-500" id="routeReturnTime">--</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Price range -->
              <div class="text-center py-5 bg-green-50 rounded-lg mb-4">
                <div class="flex items-center justify-center gap-3">
                  <span class="text-3xl sm:text-4xl font-bold text-afj-green" id="estimateLow"></span>
                  <span class="text-xl text-gray-400">&ndash;</span>
                  <span class="text-3xl sm:text-4xl font-bold text-afj-green" id="estimateHigh"></span>
                </div>
                <p class="text-sm text-gray-500 mt-1" id="estimatePerUnit"></p>
              </div>

              <!-- Flags -->
              <div id="estimateFlags" class="flex flex-wrap gap-2 justify-center mb-3 hidden"></div>

              <!-- Surcharge labels -->
              <div id="estimateSurcharges" class="flex flex-wrap gap-2 justify-center mb-4 hidden"></div>

              <!-- Discount badge -->
              <div id="estimateDiscount" class="flex justify-center mb-4 hidden">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">
                  <svg class="w-3.5 h-3.5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/></svg>
                  <span id="discountText"></span>
                </span>
              </div>

              <!-- What's included -->
              <div class="bg-green-50 rounded-lg p-5 text-left mb-5">
                <h4 class="text-sm font-semibold text-green-800 mb-3">What's included</h4>
                <ul class="space-y-2 text-sm text-green-700">
                  <li class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Professional, DBS-checked driver
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Vehicle and fuel costs
                  </li>
                  <li class="flex items-start gap-2">
                    <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Fully insured journey
                  </li>
                  <li id="includesWheelchair" class="flex items-start gap-2 hidden">
                    <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Wheelchair-accessible vehicle
                  </li>
                  <li id="includesMeetGreet" class="flex items-start gap-2 hidden">
                    <svg class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                    Meet and greet service
                  </li>
                </ul>
                <p class="text-xs text-gray-500 mt-3">
                  This is an indicative estimate. Your final quote may differ depending on specific route details and accessibility needs.
                </p>
              </div>

              <!-- CTAs -->
              <div class="flex flex-col sm:flex-row gap-3 mb-6">
                <button
                  id="requestQuoteBtn"
                  class="flex-1 bg-afj-accent text-white font-semibold py-3 px-6 rounded-lg hover:bg-afj-green transition-colors"
                >
                  Request Exact Quote
                </button>
                <a
                  href="tel:01216891000"
                  class="flex-1 border-2 border-afj-accent text-afj-accent font-semibold py-3 px-6 rounded-lg hover:bg-afj-accent hover:text-white transition-colors text-center"
                >
                  Call 0121 689 1000
                </a>
              </div>

              <!-- Trust signals -->
