    // Stops
    if (answers.stop1) {
      stopDotsEl.innerHTML += '<div class="w-2 h-2 rounded-full bg-gray-400 my-1 mx-auto"></div><div class="w-0.5 flex-1 bg-gray-300 min-h-[1rem] mx-auto"></div>';
      stopLabelsEl.innerHTML += '<div class="my-1"><p class="text-xs text-gray-500">Via: ' + answers.stop1 + '</p></div>';
    }
    if (answers.stop2) {
      stopDotsEl.innerHTML += '<div class="w-2 h-2 rounded-full bg-gray-400 my-1 mx-auto"></div><div class="w-0.5 flex-1 bg-gray-300 min-h-[1rem] mx-auto"></div>';
      stopLabelsEl.innerHTML += '<div class="my-1"><p class="text-xs text-gray-500">Via: ' + answers.stop2 + '</p></div>';
    }

    // Return
    if (answers.returnJourney === 'yes') {
      returnDots.classList.remove('hidden');
      returnLabel.classList.remove('hidden');
      var retTime = '';
      if (answers.returnPickupTime) retTime = 'Return at ' + answers.returnPickupTime;
      if (answers.returnDate) retTime += (retTime ? ' on ' : '') + answers.returnDate;
      document.getElementById('routeReturnTime').textContent = retTime;
    }

    visual.classList.remove('hidden');
  }

  // --- Step 2: get estimate ---
  document.getElementById('getEstimateBtn').addEventListener('click', function () {
    var answers = collectAnswers();
    if (!answers) return;

    currentAnswers = answers;

    var btn = document.getElementById('getEstimateBtn');
    btn.disabled = true;
    btn.textContent = 'Calculating...';

    // Show Step 3 with skeleton loading
    document.getElementById('estimateLoading').classList.remove('hidden');
    document.getElementById('estimateContent').classList.add('hidden');
    showStep('step3');

    fetch('/api/quote/estimate', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ service: selectedService, answers: currentAnswers }),
    })
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (data.success) {
          currentEstimate = data.estimate;
          var svc = quoteRules.services[selectedService];
          document.getElementById('estimateServiceLabel').textContent = svc.label;
          document.getElementById('estimateLow').textContent = '\u00A3' + data.estimate.low;
          document.getElementById('estimateHigh').textContent = '\u00A3' + data.estimate.high;
          document.getElementById('estimatePerUnit').textContent = data.estimate.perUnit;

          renderFlags(data.estimate);
          renderJourneySummary(data.estimate);
          renderSurcharges(data.estimate);
          renderDiscount(data.estimate);
          renderIncludes(data.estimate);
          renderRouteTimeline(currentAnswers, data.estimate);

          document.getElementById('estimateLoading').classList.add('hidden');
          document.getElementById('estimateContent').classList.remove('hidden');
        } else {
          // Go back to step 2 on error
          showStep('step2');
          alert(data.error || 'Failed to calculate estimate.');
        }
      })
      .catch(function () {
        showStep('step2');
        alert('Something went wrong. Please try again.');
      })
      .finally(function () {
        btn.disabled = false;
        btn.textContent = 'Get My Estimate';
      });
  });

  // --- Step 3: request exact quote ---
  document.getElementById('requestQuoteBtn').addEventListener('click', function () {
    var svc = quoteRules.services[selectedService];
    document.getElementById('formService').value = svc.label;
    document.getElementById('formEstimate').value = '\u00A3' + currentEstimate.low + ' \u2013 \u00A3' + currentEstimate.high + ' ' + currentEstimate.perUnit;

    var lines = [];
    if (svc.questions) {
      svc.questions.forEach(function (q) {
        var val = currentAnswers[q.id];
        if (!val) return;
        if (q.options) {
          var opt = q.options.find(function (o) { return o.value === val; });
          lines.push(q.label + ': ' + (opt ? opt.label : val));
        } else {
          lines.push(q.label + ': ' + val);
        }
      });
    }
    if (currentAnswers.stop1) lines.push('Stop 1: ' + currentAnswers.stop1);
    if (currentAnswers.stop2) lines.push('Stop 2: ' + currentAnswers.stop2);
    document.getElementById('formAnswers').value = lines.join('\n');

    showStep('step4');
  });

  // --- Back buttons ---
  document.getElementById('backEnterprise').addEventListener('click', function () { showStep('step1'); });
  document.getElementById('back2').addEventListener('click', function () { showStep('step1'); });
  document.getElementById('back3').addEventListener('click', function () { showStep('step2'); });
  document.getElementById('back4').addEventListener('click', function () { showStep('step3'); });

  // --- Contact preference toggle ---
  var prefGroup = document.getElementById('contactPrefGroup');
  if (prefGroup) {
    prefGroup.querySelectorAll('.contact-pref-btn').forEach(function (label) {
      label.addEventListener('click', function () {
        prefGroup.querySelectorAll('.contact-pref-btn').forEach(function (l) { l.classList.remove('active'); });
        label.classList.add('active');
      });
    });
  }

  // --- Step 4: submit form ---
  var quoteForm = document.getElementById('quoteForm');
  quoteForm.addEventListener('submit', function (e) {
    e.preventDefault();

    var emailEl = document.getElementById('quote-email');
    var nameEl = document.getElementById('quote-name');
    var phoneEl = document.getElementById('quote-phone');
    var successEl = document.getElementById('quoteSuccess');
    var errorEl = document.getElementById('quoteError');
    var submitBtn = document.getElementById('submitQuoteBtn');
    var valid = true;

    successEl.classList.add('hidden');
    errorEl.classList.add('hidden');
    quoteForm.querySelectorAll('.form-error').forEach(function (el) { el.classList.add('hidden'); });

    if (!nameEl.value.trim()) {
      valid = false;
      nameEl.style.borderColor = '#E53E3E';
    } else {
      nameEl.style.borderColor = '';
    }

    if (!emailEl.value || !emailEl.value.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
      quoteForm.querySelector('[data-for="quote-email"]').classList.remove('hidden');
      emailEl.style.borderColor = '#E53E3E';
      valid = false;
    } else {
      emailEl.style.borderColor = '';
    }

    // Phone validation (optional but must be valid UK if provided)
    if (phoneEl.value.trim()) {
      var cleaned = phoneEl.value.replace(/[\s\-\(\)]/g, '');
      if (!/^(\+44|0)[0-9]{9,10}$/.test(cleaned)) {
        quoteForm.querySelector('[data-for="quote-phone"]').classList.remove('hidden');
        phoneEl.style.borderColor = '#E53E3E';
        valid = false;
      } else {
        phoneEl.style.borderColor = '';
      }
    }

    if (!valid) return;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';

    var prefRadio = quoteForm.querySelector('input[name="contactPreference"]:checked');
    var contactPref = prefRadio ? prefRadio.value : 'phone';

    var payload = {
      name: nameEl.value.trim(),
      email: emailEl.value.trim(),
      phone: (phoneEl.value || '').trim(),
      contactPreference: contactPref,
      message: (document.getElementById('quote-details').value || '').trim(),
      service: document.getElementById('formService').value,
      estimate: document.getElementById('formEstimate').value,
      answersSummary: document.getElementById('formAnswers').value,
    };

    fetch('/api/quote/request', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(payload),
    })
      .then(function (res) { return res.json(); })
      .then(function (data) {
        if (data.success) {
          var prefLabels = { phone: 'phone', email: 'email', whatsapp: 'WhatsApp' };
          document.getElementById('successContactMethod').textContent = prefLabels[contactPref] || 'phone';
          document.getElementById('successEmail').textContent = payload.email;
          successEl.classList.remove('hidden');
          quoteForm.style.display = 'none';
        } else {
          errorEl.classList.remove('hidden');
        }
      })
      .catch(function () {
        errorEl.classList.remove('hidden');
      })
      .finally(function () {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Quote Request';
      });
  });
</script>
