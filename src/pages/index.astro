---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEOHead from '../components/layout/SEOHead.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import CoreValues from '../components/sections/CoreValues.astro';
import ServiceCard from '../components/sections/ServiceCard.astro';
import StatsCounter from '../components/sections/StatsCounter.astro';
import TestimonialSlider from '../components/sections/TestimonialSlider.astro';
import AccreditationBadges from '../components/sections/AccreditationBadges.astro';
import CTABanner from '../components/ui/CTABanner.astro';
import SocialSidebar from '../components/ui/SocialSidebar.astro';
import CookieBanner from '../components/ui/CookieBanner.astro';

const services = [
  {
    title: 'Home to School Transport',
    description: 'Over 2,000 students transported safely every day across the North West and West Midlands. DBS-checked drivers and wheelchair-accessible vehicles.',
    href: '/services/send-transport',
    image: '/images/misc/send-vehicle-with-wheelchair-ramp.webp',
  },
  {
    title: 'Non-Emergency Patient Transport',
    description: 'CQC rated "Good". NHS trust contracts with trained Ambulance Care Assistants for all patient needs.',
    href: '/services/patient-transport',
    image: '/images/fleet/patient-transport-team-hands-together.jpg',
  },
  {
    title: 'Fleet Maintenance',
    description: 'In-house workshop with skilled technicians and state-of-the-art facilities. Minimising downtime, maximising vehicle lifespan.',
    href: '/services/fleet-maintenance',
    image: '/images/fleet/mechanic-fixing-vehicle.jpg',
  },
  {
    title: 'Vehicle Conversions',
    description: 'Wheelchair-accessible and ambulance conversions. VOSA certified. The only UK PTS provider that builds its own ambulances.',
    href: '/services/vehicle-conversions',
    image: '/images/services/staff-converting-minibus.png',
  },
  {
    title: 'Driver, ACA & PA Training',
    description: 'QualSafe-approved training programmes. Driver CPC, Ambulance Care Assistant, and Passenger Assistant certification.',
    href: '/services/driver-training',
    image: '/images/misc/driver-and-pa-inside-minibus.webp',
  },
  {
    title: 'Private Minibus Hire',
    description: 'Modern fleet of 16-seater wheelchair-accessible minibuses for corporate events, school trips, and group travel.',
    href: '/services/private-hire',
    image: '/images/services/Private-Hire.png',
  },
  {
    title: 'Executive Minibus Hire',
    description: 'Luxury minibus hire with driver for corporate travel, events, race days, and airport transfers.',
    href: '/services/executive-minibus',
    image: '/images/services/customer-in-front-of-minibus.webp',
  },
  {
    title: 'Airport Transfers',
    description: 'Reliable airport transfer services to and from Birmingham Airport and other major UK airports.',
    href: '/services/airport-transfers',
    image: '/images/fleet/airport-transfers.jpg',
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': 'https://www.afjltd.co.uk/#organization',
  name: 'AFJ Limited',
  alternateName: 'AFJ',
  description: 'Your Partner in Safe, Reliable Transport Solutions. Specialist SEND school transport, non-emergency patient transport, fleet maintenance, vehicle conversions, and training services across the North West and West Midlands.',
  url: 'https://www.afjltd.co.uk',
  logo: 'https://www.afjltd.co.uk/images/logo/afj-logo-final.png',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  foundingDate: '2006',
  address: [
    {
      '@type': 'PostalAddress',
      streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
      addressLocality: 'Birmingham',
      addressRegion: 'West Midlands',
      postalCode: 'B7 4JD',
      addressCountry: 'GB',
    },
    {
      '@type': 'PostalAddress',
      streetAddress: 'AFJ Manchester Office',
      addressLocality: 'Manchester',
      addressRegion: 'Greater Manchester',
      addressCountry: 'GB',
    },
  ],
  geo: { '@type': 'GeoCoordinates', latitude: 52.493, longitude: -1.878 },
  areaServed: [
    { '@type': 'City', name: 'Birmingham' },
    { '@type': 'City', name: 'Manchester' },
    { '@type': 'AdministrativeArea', name: 'West Midlands' },
    { '@type': 'AdministrativeArea', name: 'North West England' },
    { '@type': 'City', name: 'Sandwell' },
    { '@type': 'City', name: 'Coventry' },
  ],
  openingHoursSpecification: {
    '@type': 'OpeningHoursSpecification',
    dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    opens: '08:00',
    closes: '18:00',
  },
  sameAs: [
    'https://www.facebook.com/afjtravel',
    'https://uk.linkedin.com/company/afj-ltd',
  ],
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Home to School Transport (SEND)', url: 'https://www.afjltd.co.uk/services/send-transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport (NEPTS)', url: 'https://www.afjltd.co.uk/services/patient-transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Fleet Maintenance', url: 'https://www.afjltd.co.uk/services/fleet-maintenance' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Vehicle Conversions', url: 'https://www.afjltd.co.uk/services/vehicle-conversions' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Driver, ACA & PA Training', url: 'https://www.afjltd.co.uk/services/driver-training' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire', url: 'https://www.afjltd.co.uk/services/private-hire' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Executive Minibus Hire', url: 'https://www.afjltd.co.uk/services/executive-minibus' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Airport Transfers', url: 'https://www.afjltd.co.uk/services/airport-transfers' } },
    ],
  },
  priceRange: '$$',
};
---

<BaseLayout
  title="AFJ Limited | Safe, Reliable Transport Solutions in Birmingham"
  description="Specialist SEND transport, patient transport, fleet maintenance and vehicle conversions across Birmingham and Manchester. CQC rated Good. Since 2006."
>
  <SEOHead
    title="AFJ Limited | Safe, Reliable Transport Solutions in Birmingham"
    description="Specialist SEND transport, patient transport, fleet maintenance and vehicle conversions across Birmingham and Manchester. CQC rated Good. Since 2006."
    jsonLD={jsonLD}
  />

  <Header />
  <SocialSidebar />

  <main id="main-content">
    <!-- Hero Slider -->
    <Hero />

    <!-- Core Values -->
    <CoreValues />

    <!-- Services Section -->
    <section class="section-padding">
      <div class="container-wide">
        <div class="text-center mb-10">
          <h2 class="text-afj-green mb-3">Our Services</h2>
          <p class="text-afj-secondary max-w-2xl mx-auto">
            From school transport to patient care, fleet maintenance to driver training — we provide
            comprehensive transport solutions tailored to your needs.
          </p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {services.map((service) => (
            <ServiceCard
              title={service.title}
              description={service.description}
              href={service.href}
              image={service.image}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Stats -->
    <StatsCounter />

    <!-- Testimonials -->
    <TestimonialSlider />

    <!-- Accreditations -->
    <AccreditationBadges />

    <!-- CTA -->
    <CTABanner
      heading="Ready to Book Your Transport?"
      description="Whether you need school transport, patient services, or private hire — get in touch today for a free quote."
      variant="green"
    />
  </main>

  <Footer />
  <CookieBanner />
</BaseLayout>
