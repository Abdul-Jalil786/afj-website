---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/sections/Hero.astro';
import FAQ from '../components/sections/FAQ.astro';
import SocialSidebar from '../components/ui/SocialSidebar.astro';

const breadcrumbs = [{ label: 'Book Transport' }];

const faqItems = [
  {
    question: 'Is this a booking or an enquiry?',
    answer: 'This is an enquiry form. Submitting it does not confirm a booking. Our team will contact you to discuss your requirements, provide a quotation, and confirm availability before any booking is made.',
  },
  {
    question: 'How quickly will I receive a response?',
    answer: 'We aim to respond to all transport enquiries within 24 hours during working days (Monday to Friday, 8am–6pm). For urgent requirements, please call us directly on 0121 689 1000.',
  },
  {
    question: 'What types of transport can I enquire about?',
    answer: 'We provide SEND home-to-school transport, non-emergency patient transport (NEPTS), private minibus and coach hire, airport transfers, corporate transport, and school trip transport. We can accommodate groups of 1 to 48 passengers.',
  },
  {
    question: 'Do you provide wheelchair accessible vehicles?',
    answer: 'Yes. We operate a range of wheelchair accessible vehicles with ramps and tail lifts. Please specify your accessibility requirements in the form so we can allocate the right vehicle.',
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  name: 'Book Transport',
  description: 'Enquire about transport services with AFJ Limited. SEND, NEPTS, private hire, airport transfers, and group transport across Birmingham and Manchester.',
  url: 'https://www.afjltd.co.uk/book-transport',
};
---

<PageLayout
  title="Book Transport"
  description="Enquire about transport services with AFJ Limited. SEND, NEPTS, private hire, airport transfers across Birmingham and Manchester. Free, no-obligation quotes."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Book Transport" subtitle="Submit an enquiry and our team will provide a free, no-obligation quote." />

  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <!-- Enquiry Form -->
        <div>
          <h2 class="text-afj-green mb-2">Transport Enquiry</h2>
          <p class="text-afj-secondary mb-6">Complete the form below with your transport requirements. All fields marked with <span class="text-afj-red">*</span> are required.</p>

          <form id="transport-enquiry-form" class="space-y-5">
            <!-- Name -->
            <div>
              <label for="full-name" class="block text-sm font-medium text-afj-text mb-1">Full Name <span class="text-afj-red">*</span></label>
              <input
                type="text"
                id="full-name"
                name="full_name"
                required
                autocomplete="name"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="Your full name"
              />
            </div>

            <!-- Organisation -->
            <div>
              <label for="organisation" class="block text-sm font-medium text-afj-text mb-1">Organisation</label>
              <input
                type="text"
                id="organisation"
                name="organisation"
                autocomplete="organization"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="School, council, company, or N/A"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-afj-text mb-1">Email Address <span class="text-afj-red">*</span></label>
              <input
                type="email"
                id="email"
                name="email"
                required
                autocomplete="email"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="you@example.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-afj-text mb-1">Phone Number <span class="text-afj-red">*</span></label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                autocomplete="tel"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="07xxx xxx xxx"
              />
            </div>

            <!-- Service Type -->
            <div>
              <label for="service-type" class="block text-sm font-medium text-afj-text mb-1">Service Required <span class="text-afj-red">*</span></label>
              <select
                id="service-type"
                name="service_type"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors bg-white"
              >
                <option value="">Select a service</option>
                <option value="send-transport">SEND Home-to-School Transport</option>
                <option value="patient-transport">Non-Emergency Patient Transport</option>
                <option value="private-hire">Private Minibus Hire</option>
                <option value="executive-hire">Executive Minibus Hire</option>
                <option value="airport-transfer">Airport Transfer</option>
                <option value="school-trip">School Trip / Group Transport</option>
                <option value="corporate">Corporate Transport</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Number of Passengers -->
            <div>
              <label for="passengers" class="block text-sm font-medium text-afj-text mb-1">Number of Passengers <span class="text-afj-red">*</span></label>
              <input
                type="number"
                id="passengers"
                name="passengers"
                required
                min="1"
                max="200"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="e.g. 12"
              />
            </div>

            <!-- Accessibility Requirements -->
            <div>
              <label for="accessibility" class="block text-sm font-medium text-afj-text mb-1">Accessibility Requirements</label>
              <select
                id="accessibility"
                name="accessibility"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors bg-white"
              >
                <option value="none">No specific requirements</option>
                <option value="wheelchair-ramp">Wheelchair accessible (ramp)</option>
                <option value="tail-lift">Tail lift required</option>
                <option value="wheelchair-multiple">Multiple wheelchair positions</option>
                <option value="harness">Specialist harness / seating</option>
                <option value="other">Other (please specify in message)</option>
              </select>
            </div>

            <!-- Pickup Area -->
            <div>
              <label for="pickup-area" class="block text-sm font-medium text-afj-text mb-1">Pickup Area</label>
              <input
                type="text"
                id="pickup-area"
                name="pickup_area"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="e.g. Birmingham city centre, B7"
              />
            </div>

            <!-- Dropoff Area -->
            <div>
              <label for="dropoff-area" class="block text-sm font-medium text-afj-text mb-1">Drop-off Area</label>
              <input
                type="text"
                id="dropoff-area"
                name="dropoff_area"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors"
                placeholder="e.g. Manchester airport, Solihull"
              />
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-afj-text mb-1">Additional Details</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-afj-green focus:border-afj-green transition-colors resize-y"
                placeholder="Preferred dates, times, frequency, or any other details..."
              ></textarea>
            </div>

            <!-- Honeypot -->
            <div class="hidden" aria-hidden="true">
              <input type="checkbox" name="botcheck" tabindex="-1" autocomplete="off" />
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="btn-red w-full text-center text-lg py-3"
            >
              Submit Enquiry
            </button>

            <p class="text-xs text-afj-secondary text-center">
              By submitting this form, you agree to our <a href="/privacy-policy" class="text-afj-sky-blue hover:text-afj-accent">Privacy Policy</a> and <a href="/terms" class="text-afj-sky-blue hover:text-afj-accent">Terms and Conditions</a>.
            </p>
          </form>

          <!-- Status Messages -->
          <div id="form-success" class="hidden mt-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <p class="text-green-800 font-medium">Thank you for your enquiry!</p>
            <p class="text-green-700 text-sm mt-1">Our team will review your requirements and contact you within 24 hours with a quotation.</p>
          </div>
          <div id="form-error" class="hidden mt-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <p class="text-red-800 font-medium">Something went wrong.</p>
            <p class="text-red-700 text-sm mt-1">Please try again or contact us directly on <a href="tel:01216891000" class="underline">0121 689 1000</a>.</p>
          </div>
        </div>

        <!-- Right Column: Info -->
        <div>
          <h2 class="text-afj-green mb-6">Why Choose AFJ Limited?</h2>

          <div class="space-y-6">
            <div class="bg-afj-light-white rounded-lg p-6">
              <h3 class="font-bold text-afj-text text-lg mb-3">What Happens Next</h3>
              <ol class="space-y-3 text-afj-secondary text-sm">
                <li class="flex items-start gap-3">
                  <span class="bg-afj-green text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-xs font-bold">1</span>
                  <span>We receive your enquiry and review your requirements.</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="bg-afj-green text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-xs font-bold">2</span>
                  <span>Our team contacts you within 24 hours to discuss details.</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="bg-afj-green text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-xs font-bold">3</span>
                  <span>We provide a free, no-obligation quotation.</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="bg-afj-green text-white rounded-full w-6 h-6 flex items-center justify-center flex-shrink-0 text-xs font-bold">4</span>
                  <span>Once you approve, we confirm the booking and allocate vehicles.</span>
                </li>
              </ol>
            </div>

            <div class="bg-afj-light-white rounded-lg p-6">
              <h3 class="font-bold text-afj-text text-lg mb-3">Our Transport Services</h3>
              <ul class="space-y-2 text-afj-secondary text-sm">
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  SEND home-to-school transport (council contracts and private)
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Non-emergency patient transport (CQC rated)
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Private minibus and coach hire (1–48 passengers)
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Airport transfers (Birmingham and Manchester)
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Executive transport and corporate events
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-afj-green flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Wheelchair accessible and tail lift vehicles available
                </li>
              </ul>
            </div>

            <div class="bg-afj-light-white rounded-lg p-6">
              <h3 class="font-bold text-afj-text text-lg mb-3">Prefer to Talk?</h3>
              <p class="text-afj-secondary text-sm mb-3">Our team is available Monday to Friday, 8am–6pm.</p>
              <ul class="space-y-2">
                <li>
                  <a href="tel:01216891000" class="flex items-center gap-2 text-afj-sky-blue hover:text-afj-accent text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    0121 689 1000 (Birmingham)
                  </a>
                </li>
                <li>
                  <a href="tel:01615052902" class="flex items-center gap-2 text-afj-sky-blue hover:text-afj-accent text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    0161 505 2902 (Manchester)
                  </a>
                </li>
                <li>
                  <a href="mailto:sales@afjltd.co.uk" class="flex items-center gap-2 text-afj-sky-blue hover:text-afj-accent text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    sales@afjltd.co.uk
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <FAQ items={faqItems} heading="Transport Booking FAQ" />
</PageLayout>

<script is:inline>
  const form = document.getElementById('transport-enquiry-form');
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      successMsg.classList.add('hidden');
      errorMsg.classList.add('hidden');

      const formData = new FormData(form);

      // Honeypot check
      if (formData.get('botcheck')) return;

      // Basic validation
      const email = formData.get('email');
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        errorMsg.querySelector('p:last-child').textContent = 'Please enter a valid email address.';
        errorMsg.classList.remove('hidden');
        return;
      }

      const submitBtn = form.querySelector('button[type="submit"]');
      submitBtn.disabled = true;
      submitBtn.textContent = 'Submitting...';

      try {
        const data = {
          name: formData.get('full_name'),
          email: formData.get('email'),
          phone: formData.get('phone'),
          organisation: formData.get('organisation') || 'N/A',
          service_type: formData.get('service_type'),
          passengers: formData.get('passengers'),
          accessibility: formData.get('accessibility'),
          pickup_area: formData.get('pickup_area') || 'Not specified',
          dropoff_area: formData.get('dropoff_area') || 'Not specified',
          message: formData.get('message') || 'No additional details provided.',
        };

        const response = await fetch('/api/contact/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: data.name,
            email: data.email,
            phone: data.phone,
            message: `TRANSPORT ENQUIRY\n\nOrganisation: ${data.organisation}\nService: ${data.service_type}\nPassengers: ${data.passengers}\nAccessibility: ${data.accessibility}\nPickup area: ${data.pickup_area}\nDrop-off area: ${data.dropoff_area}\n\n${data.message}`,
          }),
        });

        if (response.ok) {
          form.reset();
          successMsg.classList.remove('hidden');
          form.classList.add('hidden');
        } else {
          errorMsg.classList.remove('hidden');
        }
      } catch {
        errorMsg.classList.remove('hidden');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Submit Enquiry';
      }
    });
  }
</script>
