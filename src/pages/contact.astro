---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/sections/Hero.astro';
import ContactForm from '../components/sections/ContactForm.astro';
import FAQ from '../components/sections/FAQ.astro';
import SocialSidebar from '../components/ui/SocialSidebar.astro';

const breadcrumbs = [{ label: 'Contact' }];

const faqItems = [
  {
    question: 'What are your office hours?',
    answer: 'Our office is open Monday to Friday, 8:00 AM to 6:00 PM. For urgent patient transport enquiries, we are available 24/7.',
  },
  {
    question: 'How quickly do you respond to enquiries?',
    answer: 'We aim to respond to all enquiries within 24 hours during working days. For urgent matters, please call us directly on 0121 689 1000.',
  },
  {
    question: 'Do you provide free quotes?',
    answer: 'Yes, all quotes are completely free and without obligation. Simply fill in the contact form or call us with your requirements.',
  },
  {
    question: 'What areas do you serve?',
    answer: 'We primarily serve Birmingham, Manchester, the West Midlands, and the North West. We also offer long-distance transport and nationwide airport transfers.',
  },
  {
    question: 'How do I book a service?',
    answer: 'You can book by calling 0121 689 1000, emailing info@afjltd.co.uk, or filling in the contact form on this page. We will confirm your booking within 24 hours.',
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  mainEntity: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    telephone: '0121 689 1000',
    email: 'info@afjltd.co.uk',
    address: {
      '@type': 'PostalAddress',
      streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
      addressLocality: 'Birmingham',
      addressRegion: 'West Midlands',
      postalCode: 'B7 4JD',
      addressCountry: 'GB',
    },
    openingHoursSpecification: {
      '@type': 'OpeningHoursSpecification',
      dayOfWeek: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
      opens: '08:00',
      closes: '18:00',
    },
  },
};
---

<PageLayout
  title="Contact Us"
  description="Contact AFJ Limited in Birmingham. Call 0121 689 1000 or email info@afjltd.co.uk. Free quotes for transport services. AFJ Business Center, Nechells, B7 4JD."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Contact Us" subtitle="Get in touch for a free, no-obligation quote. We are here to help." />

  <!-- Contact Section -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        <!-- Contact Form -->
        <div>
          <h2 class="text-afj-green mb-2">Send Us a Message</h2>
          <p class="text-afj-secondary mb-6">Fill in the form below and our team will get back to you within 24 hours.</p>
          <ContactForm />
        </div>

        <!-- Contact Details -->
        <div>
          <h2 class="text-afj-green mb-6">Our Details</h2>

          <!-- Head Office -->
          <div class="bg-afj-light-white rounded-lg p-6 mb-6">
            <h3 class="font-bold text-afj-text text-lg mb-4">Head Office â€” Birmingham</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Address</p>
                  <p class="text-afj-secondary text-sm">AFJ Business Center<br />2-18 Forster Street, Nechells<br />Birmingham, B7 4JD</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Phone</p>
                  <a href="tel:01216891000" class="text-afj-sky-blue hover:text-afj-accent text-sm">0121 689 1000</a>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Email</p>
                  <a href="mailto:info@afjltd.co.uk" class="text-afj-sky-blue hover:text-afj-accent text-sm block">info@afjltd.co.uk</a>
                  <a href="mailto:sales@afjltd.co.uk" class="text-afj-sky-blue hover:text-afj-accent text-sm block">sales@afjltd.co.uk</a>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Office Hours</p>
                  <p class="text-afj-secondary text-sm">Monday - Friday: 8:00 AM - 6:00 PM</p>
                  <p class="text-afj-secondary text-sm">Patient Transport: 24/7</p>
                </div>
              </li>
            </ul>
          </div>

          <!-- Manchester Office -->
          <div class="bg-afj-light-white rounded-lg p-6 mb-6">
            <h3 class="font-bold text-afj-text text-lg mb-4">Manchester Office</h3>
            <ul class="space-y-4">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Address</p>
                  <p class="text-afj-secondary text-sm">Dob Lane Chapel<br />3 Oldham Rd, Failsworth<br />Greater Manchester, M35 0BR</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <div>
                  <p class="font-medium text-afj-text">Phone</p>
                  <a href="tel:01615052902" class="text-afj-sky-blue hover:text-afj-accent text-sm">0161 505 2902</a>
                </div>
              </li>
            </ul>
          </div>

          <!-- Map -->
          <div class="rounded-lg overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2430.5!2d-1.8724!3d52.4912!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4870bc8a5a05ab01%3A0x2a3bca3b5e8c7b4a!2s2-18+Forster+St%2C+Nechells%2C+Birmingham+B7+4JD!5e0!3m2!1sen!2suk!4v1707000000000"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrading"
              title="AFJ Business Center, 2-18 Forster Street, Nechells, Birmingham, B7 4JD"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <FAQ items={faqItems} heading="Frequently Asked Questions" />
</PageLayout>
