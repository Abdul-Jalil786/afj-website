---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import departments from '../../data/departments.json';
import { authenticateRequest } from '../../lib/cf-auth';

const userEmail = await authenticateRequest(Astro.request);
if (!userEmail) {
  return new Response('<h1>Access Denied</h1><p><a href="/">Return to website</a></p>', { status: 403, headers: { 'Content-Type': 'text/html' } });
}

type DeptKey = keyof typeof departments;
let userDepartment: DeptKey = 'management';
for (const [key, dept] of Object.entries(departments) as [DeptKey, typeof departments[DeptKey]][]) {
  if (dept && typeof dept === 'object' && Array.isArray(dept.emails) && dept.emails.includes(userEmail)) {
    userDepartment = key;
    break;
  }
}

const canView = userDepartment === 'management';
---

<AdminLayout title="Conversion Tracking" userEmail={userEmail}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Conversion Tracking</h1>
        <p class="text-gray-600 mt-1">Track quote conversions, analyse trends, and log phone bookings.</p>
      </div>
      <button id="addPhoneBtn" class="bg-afj-accent text-white font-medium py-2 px-4 rounded-lg hover:bg-afj-green transition-colors text-sm">
        + Add Phone Booking
      </button>
    </div>

    {!canView ? (
      <div class="bg-amber-50 border border-amber-200 rounded-lg p-6 text-center">
        <p class="text-amber-800 font-medium">Management access required.</p>
      </div>
    ) : (
      <div>
        <!-- Dashboard Metrics -->
        <div id="metricsPanel" class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6">
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase">This Week</p>
            <p id="weekQuotes" class="text-2xl font-bold text-gray-900">--</p>
            <p class="text-xs text-gray-500">quotes | <span id="weekConverted" class="text-afj-green font-semibold">--</span> converted | <span id="weekRate" class="font-semibold">--%</span></p>
          </div>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase">This Month</p>
            <p id="monthQuotes" class="text-2xl font-bold text-gray-900">--</p>
            <p class="text-xs text-gray-500">quotes | <span id="monthConverted" class="text-afj-green font-semibold">--</span> converted | <span id="monthRate" class="font-semibold">--%</span></p>
          </div>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase">Avg Quote vs Booking</p>
            <p id="avgQuote" class="text-lg font-bold text-gray-500">£--</p>
            <p id="avgBooking" class="text-lg font-bold text-afj-green">£--</p>
          </div>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase">Source Breakdown</p>
            <div id="sourceBreakdown" class="text-sm text-gray-700 mt-1">--</div>
          </div>
        </div>

        <!-- Secondary metrics row -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase mb-2">Top 5 Routes</p>
            <div id="topRoutes" class="text-sm text-gray-700 space-y-1">--</div>
          </div>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase mb-2">By Service</p>
            <div id="serviceStats" class="text-sm text-gray-700 space-y-1">--</div>
          </div>
          <div class="bg-white rounded-lg shadow-sm border p-4">
            <p class="text-xs text-gray-500 uppercase mb-2">By Passengers</p>
            <div id="paxStats" class="text-sm text-gray-700 space-y-1">--</div>
          </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-lg shadow-sm border p-4 mb-4">
          <div class="grid grid-cols-2 sm:grid-cols-5 gap-3">
            <div>
              <label class="block text-xs text-gray-500 mb-1">From</label>
              <input type="date" id="filterFrom" class="w-full px-2 py-1.5 border rounded text-sm" />
            </div>
            <div>
              <label class="block text-xs text-gray-500 mb-1">To</label>
              <input type="date" id="filterTo" class="w-full px-2 py-1.5 border rounded text-sm" />
            </div>
            <div>
              <label class="block text-xs text-gray-500 mb-1">Service</label>
              <select id="filterService" class="w-full px-2 py-1.5 border rounded text-sm bg-white">
                <option value="">All</option>
                <option value="private-hire">Private Hire</option>
                <option value="airport">Airport</option>
              </select>
            </div>
            <div>
              <label class="block text-xs text-gray-500 mb-1">Source</label>
              <select id="filterSource" class="w-full px-2 py-1.5 border rounded text-sm bg-white">
                <option value="">All</option>
                <option value="website">Website</option>
                <option value="james-chat">James Chat</option>
                <option value="phone">Phone</option>
              </select>
            </div>
            <div>
              <label class="block text-xs text-gray-500 mb-1">Status</label>
              <select id="filterStatus" class="w-full px-2 py-1.5 border rounded text-sm bg-white">
                <option value="">All</option>
                <option value="pending">Pending</option>
                <option value="converted">Converted</option>
                <option value="lost">Lost</option>
              </select>
            </div>
          </div>
          <div class="mt-3 flex gap-2">
            <input type="text" id="searchInput" placeholder="Search pickup/destination..." class="flex-1 px-3 py-1.5 border rounded text-sm" />
            <button id="applyFilters" class="bg-gray-800 text-white px-4 py-1.5 rounded text-sm hover:bg-gray-700">Filter</button>
          </div>
        </div>

        <!-- Quote Table -->
        <div class="bg-white rounded-lg shadow-sm border overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="bg-gray-50 text-left">
              <tr>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase cursor-pointer" data-sort="timestamp">Date</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">Service</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">From</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">To</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">Pax</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">Quote</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">Source</th>
                <th class="px-4 py-3 text-xs text-gray-500 uppercase">Status</th>
              </tr>
            </thead>
            <tbody id="quoteTableBody" class="divide-y">
              <tr><td colspan="8" class="px-4 py-8 text-center text-gray-400">Loading...</td></tr>
            </tbody>
          </table>
        </div>

        <!-- Slide-out Panel -->
        <div id="slidePanel" class="fixed inset-y-0 right-0 w-96 bg-white shadow-2xl transform translate-x-full transition-transform z-50 overflow-y-auto">
          <div class="p-6">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-lg font-bold text-gray-900">Quote Details</h2>
              <button id="closePanel" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
            </div>
            <div id="panelDetails" class="space-y-3 text-sm mb-6"></div>
            <div id="panelActions" class="space-y-3">
              <div class="border-t pt-4">
                <h3 class="font-semibold text-gray-900 mb-3">Mark as Converted</h3>
                <div class="space-y-2">
                  <input type="number" id="convertValue" placeholder="Booking value (£)" step="0.01" class="w-full px-3 py-2 border rounded text-sm" />
                  <input type="text" id="convertName" placeholder="Customer name (optional)" class="w-full px-3 py-2 border rounded text-sm" />
                  <textarea id="convertNotes" placeholder="Notes (optional)" rows="2" class="w-full px-3 py-2 border rounded text-sm"></textarea>
                  <button id="convertBtn" class="w-full bg-afj-green text-white py-2 rounded font-medium hover:bg-green-700 transition-colors">Mark as Converted</button>
                </div>
              </div>
              <div class="border-t pt-4">
                <h3 class="font-semibold text-gray-900 mb-3">Mark as Lost</h3>
                <select id="lostReason" class="w-full px-3 py-2 border rounded text-sm bg-white mb-2">
                  <option value="Too expensive">Too expensive</option>
                  <option value="Went with competitor">Went with competitor</option>
                  <option value="No longer needed">No longer needed</option>
                  <option value="No response">No response</option>
                  <option value="Other">Other</option>
                </select>
                <button id="lostBtn" class="w-full bg-red-500 text-white py-2 rounded font-medium hover:bg-red-600 transition-colors">Mark as Lost</button>
              </div>
            </div>
            <div id="panelStatus" class="mt-4 text-sm hidden"></div>
          </div>
        </div>
        <div id="panelOverlay" class="fixed inset-0 bg-black/30 z-40 hidden"></div>

        <!-- Phone Booking Modal -->
        <div id="phoneModal" class="fixed inset-0 bg-black/40 z-50 hidden flex items-center justify-center">
          <div class="bg-white rounded-xl shadow-2xl w-full max-w-lg mx-4 p-6">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-lg font-bold text-gray-900">Add Phone Booking</h2>
              <button id="closePhoneModal" class="text-gray-400 hover:text-gray-600 text-2xl">&times;</button>
            </div>
            <div class="grid grid-cols-2 gap-3 text-sm">
              <div>
                <label class="block text-xs text-gray-500 mb-1">Service *</label>
                <select id="phoneService" class="w-full px-3 py-2 border rounded bg-white">
                  <option value="private-hire">Private Hire</option>
                  <option value="airport">Airport Transfer</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Passengers</label>
                <select id="phonePax" class="w-full px-3 py-2 border rounded bg-white">
                  <option value="1-4">1-4</option>
                  <option value="5-8">5-8</option>
                  <option value="9-16">9-16</option>
                  <option value="17-24">17-24</option>
                  <option value="25-33">25-33</option>
                  <option value="34-48">34-48</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Pickup *</label>
                <input type="text" id="phonePickup" placeholder="e.g. B7 4QS" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Destination *</label>
                <input type="text" id="phoneDest" placeholder="e.g. M1 1AD" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Date</label>
                <input type="date" id="phoneDate" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Time</label>
                <input type="time" id="phoneTime" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Return type</label>
                <select id="phoneReturn" class="w-full px-3 py-2 border rounded bg-white">
                  <option value="one-way">One-way</option>
                  <option value="same-day">Same-day return</option>
                  <option value="different-day">Different-day return</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Quoted price (£)</label>
                <input type="number" id="phoneQuoted" step="0.01" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Booking value (£) *</label>
                <input type="number" id="phoneBookingVal" step="0.01" class="w-full px-3 py-2 border rounded" />
              </div>
              <div>
                <label class="block text-xs text-gray-500 mb-1">Customer name</label>
                <input type="text" id="phoneCustomer" class="w-full px-3 py-2 border rounded" />
              </div>
              <div class="col-span-2">
                <label class="block text-xs text-gray-500 mb-1">Notes</label>
                <textarea id="phoneNotes" rows="2" class="w-full px-3 py-2 border rounded"></textarea>
              </div>
            </div>
            <div id="phoneStatus" class="text-sm mt-3 hidden"></div>
            <button id="phoneSubmit" class="w-full mt-4 bg-afj-accent text-white py-2.5 rounded-lg font-medium hover:bg-afj-green transition-colors">
              Add Booking
            </button>
          </div>
        </div>
      </div>
    )}
  </div>

  <script is:inline>
    var currentQuoteId = null;

    function loadData() {
      var params = new URLSearchParams();
      var from = document.getElementById('filterFrom').value;
      var to = document.getElementById('filterTo').value;
      var service = document.getElementById('filterService').value;
      var source = document.getElementById('filterSource').value;
      var status = document.getElementById('filterStatus').value;
      if (from) params.set('from', from);
      if (to) params.set('to', to);
      if (service) params.set('service', service);
      if (source) params.set('source', source);
      if (status) params.set('status', status);

      fetch('/api/admin/conversions?' + params.toString())
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (!data.success) return;
          renderMetrics(data.metrics);
          renderTable(data.entries);
        })
        .catch(function(err) { console.error('Failed to load conversions:', err); });
    }

    function renderMetrics(m) {
      document.getElementById('weekQuotes').textContent = m.week.total;
      document.getElementById('weekConverted').textContent = m.week.converted;
      document.getElementById('weekRate').textContent = m.week.rate + '%';
      document.getElementById('monthQuotes').textContent = m.month.total;
      document.getElementById('monthConverted').textContent = m.month.converted;
      document.getElementById('monthRate').textContent = m.month.rate + '%';
      document.getElementById('avgQuote').textContent = '\u00A3' + m.all.avgQuote;
      document.getElementById('avgBooking').textContent = '\u00A3' + m.all.avgBooking;

      // Source breakdown
      var srcHtml = '';
      for (var key in m.sourceCounts) {
        srcHtml += '<div>' + key + ': <strong>' + m.sourceCounts[key] + '</strong></div>';
      }
      document.getElementById('sourceBreakdown').innerHTML = srcHtml || '--';

      // Top routes
      var routeHtml = '';
      m.topRoutes.forEach(function(r) {
        routeHtml += '<div>' + r.route + ' <span class="text-gray-400">(' + r.count + ')</span></div>';
      });
      document.getElementById('topRoutes').innerHTML = routeHtml || 'No data yet';

      // Service stats
      var svcHtml = '';
      for (var svc in m.serviceStats) {
        var s = m.serviceStats[svc];
        var rate = s.total > 0 ? Math.round((s.converted / s.total) * 100) : 0;
        svcHtml += '<div>' + svc + ': ' + s.converted + '/' + s.total + ' <span class="text-gray-400">(' + rate + '%)</span></div>';
      }
      document.getElementById('serviceStats').innerHTML = svcHtml || 'No data yet';

      // Pax stats
      var paxHtml = '';
      for (var pax in m.paxStats) {
        var p = m.paxStats[pax];
        var pRate = p.total > 0 ? Math.round((p.converted / p.total) * 100) : 0;
        paxHtml += '<div>' + pax + ' pax: ' + p.converted + '/' + p.total + ' <span class="text-gray-400">(' + pRate + '%)</span></div>';
      }
      document.getElementById('paxStats').innerHTML = paxHtml || 'No data yet';
    }

    function statusBadge(entry) {
      if (entry.converted) return '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Converted</span>';
      if (entry.lostReason) return '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700">Lost</span>';
      return '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">Pending</span>';
    }

    function sourceBadge(src) {
      var colors = { website: 'bg-blue-100 text-blue-700', 'james-chat': 'bg-purple-100 text-purple-700', phone: 'bg-gray-100 text-gray-700' };
      return '<span class="px-2 py-0.5 rounded-full text-xs font-medium ' + (colors[src] || 'bg-gray-100 text-gray-700') + '">' + src + '</span>';
    }

    function renderTable(entries) {
      var search = (document.getElementById('searchInput').value || '').toUpperCase();
      if (search) {
        entries = entries.filter(function(e) {
          return e.pickup.includes(search) || e.destination.includes(search);
        });
      }

      var body = document.getElementById('quoteTableBody');
      if (entries.length === 0) {
        body.innerHTML = '<tr><td colspan="8" class="px-4 py-8 text-center text-gray-400">No quotes found</td></tr>';
        return;
      }

      var html = '';
      entries.forEach(function(e) {
        var d = new Date(e.timestamp);
        var dateStr = d.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
        html += '<tr class="hover:bg-gray-50 cursor-pointer quote-row" data-id="' + e.id + '">' +
          '<td class="px-4 py-3 text-gray-700">' + dateStr + '</td>' +
          '<td class="px-4 py-3">' + e.service + '</td>' +
          '<td class="px-4 py-3 font-mono">' + e.pickup + '</td>' +
          '<td class="px-4 py-3 font-mono">' + e.destination + '</td>' +
          '<td class="px-4 py-3">' + e.passengers + '</td>' +
          '<td class="px-4 py-3 font-semibold">\u00A3' + e.quoteLow + ' \u2013 \u00A3' + e.quoteHigh + '</td>' +
          '<td class="px-4 py-3">' + sourceBadge(e.source) + '</td>' +
          '<td class="px-4 py-3">' + statusBadge(e) + '</td>' +
          '</tr>';
      });
      body.innerHTML = html;

      // Bind row clicks
      document.querySelectorAll('.quote-row').forEach(function(row) {
        row.addEventListener('click', function() {
          var id = this.dataset.id;
          var entry = entries.find(function(e) { return e.id === id; });
          if (entry) openPanel(entry);
        });
      });
    }

    function openPanel(entry) {
      currentQuoteId = entry.id;
      var panel = document.getElementById('slidePanel');
      var overlay = document.getElementById('panelOverlay');

      var d = new Date(entry.timestamp);
      var html = '' +
        '<div><strong>ID:</strong> ' + entry.id + '</div>' +
        '<div><strong>Date:</strong> ' + d.toLocaleDateString('en-GB') + ' ' + d.toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) + '</div>' +
        '<div><strong>Service:</strong> ' + entry.service + '</div>' +
        '<div><strong>Route:</strong> ' + entry.pickup + ' \u2192 ' + entry.destination + '</div>' +
        '<div><strong>Passengers:</strong> ' + entry.passengers + '</div>' +
        '<div><strong>Travel date:</strong> ' + (entry.date || 'N/A') + ' at ' + (entry.time || 'N/A') + '</div>' +
        '<div><strong>Return:</strong> ' + entry.returnType + '</div>' +
        '<div><strong>Quote:</strong> \u00A3' + entry.quoteLow + ' \u2013 \u00A3' + entry.quoteHigh + '</div>' +
        '<div><strong>Source:</strong> ' + entry.source + '</div>';

      if (entry.converted) {
        html += '<div class="mt-2 p-2 bg-green-50 rounded"><strong>Converted:</strong> \u00A3' + (entry.convertedValue || 'N/A') + '</div>';
      }
      if (entry.lostReason) {
        html += '<div class="mt-2 p-2 bg-red-50 rounded"><strong>Lost:</strong> ' + entry.lostReason + '</div>';
      }
      if (entry.customerName) {
        html += '<div><strong>Customer:</strong> ' + entry.customerName + '</div>';
      }
      if (entry.notes) {
        html += '<div><strong>Notes:</strong> ' + entry.notes + '</div>';
      }

      document.getElementById('panelDetails').innerHTML = html;

      // Hide actions if already resolved
      var actions = document.getElementById('panelActions');
      actions.style.display = (entry.converted || entry.lostReason) ? 'none' : 'block';

      panel.classList.remove('translate-x-full');
      overlay.classList.remove('hidden');
    }

    function closePanel() {
      document.getElementById('slidePanel').classList.add('translate-x-full');
      document.getElementById('panelOverlay').classList.add('hidden');
      currentQuoteId = null;
    }

    document.getElementById('closePanel').addEventListener('click', closePanel);
    document.getElementById('panelOverlay').addEventListener('click', closePanel);

    // Convert quote
    document.getElementById('convertBtn').addEventListener('click', function() {
      if (!currentQuoteId) return;
      this.disabled = true;
      this.textContent = 'Saving...';

      fetch('/api/admin/conversions', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: currentQuoteId,
          action: 'convert',
          convertedValue: document.getElementById('convertValue').value,
          customerName: document.getElementById('convertName').value,
          notes: document.getElementById('convertNotes').value,
        }),
      })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.success) { closePanel(); loadData(); }
          else { showPanelStatus(data.error || 'Failed', true); }
        })
        .catch(function() { showPanelStatus('Network error', true); })
        .finally(function() {
          var btn = document.getElementById('convertBtn');
          btn.disabled = false;
          btn.textContent = 'Mark as Converted';
        });
    });

    // Lost quote
    document.getElementById('lostBtn').addEventListener('click', function() {
      if (!currentQuoteId) return;
      this.disabled = true;
      this.textContent = 'Saving...';

      fetch('/api/admin/conversions', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: currentQuoteId,
          action: 'lost',
          lostReason: document.getElementById('lostReason').value,
        }),
      })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.success) { closePanel(); loadData(); }
          else { showPanelStatus(data.error || 'Failed', true); }
        })
        .catch(function() { showPanelStatus('Network error', true); })
        .finally(function() {
          var btn = document.getElementById('lostBtn');
          btn.disabled = false;
          btn.textContent = 'Mark as Lost';
        });
    });

    function showPanelStatus(msg, isErr) {
      var el = document.getElementById('panelStatus');
      el.textContent = msg;
      el.className = 'mt-4 text-sm ' + (isErr ? 'text-red-600' : 'text-green-600');
    }

    // Filter button
    document.getElementById('applyFilters').addEventListener('click', loadData);

    // Phone booking modal
    document.getElementById('addPhoneBtn').addEventListener('click', function() {
      document.getElementById('phoneModal').classList.remove('hidden');
    });
    document.getElementById('closePhoneModal').addEventListener('click', function() {
      document.getElementById('phoneModal').classList.add('hidden');
    });

    document.getElementById('phoneSubmit').addEventListener('click', function() {
      var pickup = document.getElementById('phonePickup').value;
      var dest = document.getElementById('phoneDest').value;
      var bookingVal = document.getElementById('phoneBookingVal').value;

      if (!pickup || !dest || !bookingVal) {
        showPhoneStatus('Please fill required fields (*)', true);
        return;
      }

      this.disabled = true;
      this.textContent = 'Saving...';

      fetch('/api/admin/conversions', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          service: document.getElementById('phoneService').value,
          pickup: pickup,
          destination: dest,
          passengers: document.getElementById('phonePax').value,
          date: document.getElementById('phoneDate').value,
          time: document.getElementById('phoneTime').value,
          returnType: document.getElementById('phoneReturn').value,
          quotedPrice: document.getElementById('phoneQuoted').value,
          bookingValue: bookingVal,
          customerName: document.getElementById('phoneCustomer').value,
          notes: document.getElementById('phoneNotes').value,
        }),
      })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.success) {
            document.getElementById('phoneModal').classList.add('hidden');
            loadData();
          } else {
            showPhoneStatus(data.error || 'Failed', true);
          }
        })
        .catch(function() { showPhoneStatus('Network error', true); })
        .finally(function() {
          var btn = document.getElementById('phoneSubmit');
          btn.disabled = false;
          btn.textContent = 'Add Booking';
        });
    });

    function showPhoneStatus(msg, isErr) {
      var el = document.getElementById('phoneStatus');
      el.textContent = msg;
      el.className = 'text-sm mt-3 ' + (isErr ? 'text-red-600' : 'text-green-600');
    }

    // Initial load
    loadData();
  </script>
</AdminLayout>
