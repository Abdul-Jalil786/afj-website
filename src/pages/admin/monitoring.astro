---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import departments from '../../data/departments.json';
import { authenticateRequest } from '../../lib/cf-auth';

const userEmail = await authenticateRequest(Astro.request);
if (!userEmail) {
  return new Response('<h1>Access Denied</h1><p>You must be authenticated via Cloudflare Zero Trust to access the admin dashboard.</p><p><a href="/">Return to website</a></p>', { status: 403, headers: { 'Content-Type': 'text/html' } });
}

type DeptKey = keyof typeof departments;
let userDepartment: DeptKey = 'management';

for (const [key, dept] of Object.entries(departments) as [DeptKey, typeof departments[DeptKey]][]) {
  if (dept && typeof dept === 'object' && Array.isArray(dept.emails) && dept.emails.includes(userEmail)) {
    userDepartment = key;
    break;
  }
}

const canView = userDepartment === 'management';

// Load all reports
function loadReport(name: string): any {
  try {
    const mod = import.meta.glob('../../data/reports/*.json', { eager: true });
    const key = `../../data/reports/${name}`;
    return (mod[key] as any)?.default || null;
  } catch {
    return null;
  }
}

const reports: Record<string, any> = {};
const reportFiles = ['security-report', 'seo-report', 'remediation-report', 'marketing-report', 'competitor-report', 'performance-report', 'pricing-report', 'compliance-check-report', 'meta-report'];
for (const name of reportFiles) {
  try {
    const mod = await import(`../../data/reports/${name}.json`);
    reports[name] = mod.default || mod;
  } catch {
    reports[name] = null;
  }
}

let history: Record<string, any[]> = {};
try {
  const histMod = await import('../../data/reports/history.json');
  history = histMod.default || histMod;
} catch { /* no history yet */ }

// Agent definitions
const agents = [
  {
    id: 'security',
    name: 'Security',
    icon: '&#128274;',
    schedule: 'Daily 3:00 UTC',
    reportKey: 'security-report',
    usesAI: true,
  },
  {
    id: 'seo',
    name: 'SEO',
    icon: '&#128269;',
    schedule: 'Daily 4:00 UTC',
    reportKey: 'seo-report',
    usesAI: true,
  },
  {
    id: 'remediation',
    name: 'Remediation',
    icon: '&#128295;',
    schedule: 'Daily 5:00 UTC',
    reportKey: 'remediation-report',
    usesAI: true,
  },
  {
    id: 'marketing',
    name: 'Marketing',
    icon: '&#128227;',
    schedule: 'Monday 7:00 UTC',
    reportKey: 'marketing-report',
    usesAI: true,
  },
  {
    id: 'competitor',
    name: 'Competitor',
    icon: '&#127919;',
    schedule: 'Sunday 21:00 UTC',
    reportKey: 'competitor-report',
    usesAI: true,
  },
  {
    id: 'performance',
    name: 'Performance',
    icon: '&#9889;',
    schedule: 'Daily 6:00 UTC',
    reportKey: 'performance-report',
    usesAI: false,
  },
  {
    id: 'pricing',
    name: 'Pricing Intelligence',
    icon: '&#128176;',
    schedule: 'Sunday 22:00 UTC',
    reportKey: 'pricing-report',
    usesAI: true,
  },
  {
    id: 'compliance',
    name: 'Compliance Check',
    icon: '&#9989;',
    schedule: 'Daily 7:00 UTC',
    reportKey: 'compliance-check-report',
    usesAI: false,
  },
  {
    id: 'meta',
    name: 'Meta Agent',
    icon: '&#129302;',
    schedule: '1st of month 8:00 UTC',
    reportKey: 'meta-report',
    usesAI: true,
  },
];

// Load proposed fixes for the fixes tab
let proposedFixes: any[] = [];
try {
  const fixesMod = await import('../../data/proposed-fixes.json');
  const fixesData = fixesMod.default || fixesMod;
  proposedFixes = fixesData.fixes || [];
} catch { /* no fixes yet */ }

const pendingFixCount = proposedFixes.filter((f: any) => f.status === 'pending').length;

// Check for tab param
const activeTab = Astro.url.searchParams.get('tab') || 'agents';

function getGradeColour(grade: string): string {
  const colours: Record<string, string> = { A: 'text-green-600 bg-green-50 border-green-200', B: 'text-lime-600 bg-lime-50 border-lime-200', C: 'text-yellow-600 bg-yellow-50 border-yellow-200', D: 'text-orange-600 bg-orange-50 border-orange-200', F: 'text-red-600 bg-red-50 border-red-200' };
  return colours[grade] || 'text-gray-600 bg-gray-50 border-gray-200';
}

function getTrend(agentId: string): string {
  const entries = (history as Record<string, any[]>)[agentId] || [];
  if (entries.length < 2) return 'stable';
  const gradeOrder: Record<string, number> = { A: 5, B: 4, C: 3, D: 2, F: 1 };
  const recent = entries.slice(-3);
  const first = gradeOrder[recent[0].grade] || 3;
  const last = gradeOrder[recent[recent.length - 1].grade] || 3;
  if (last > first) return 'improving';
  if (last < first) return 'declining';
  return 'stable';
}

function trendIcon(trend: string): string {
  if (trend === 'improving') return '<span class="text-green-500" title="Improving">&#9650;</span>';
  if (trend === 'declining') return '<span class="text-red-500" title="Declining">&#9660;</span>';
  return '<span class="text-gray-400" title="Stable">&#9644;</span>';
}
---

<AdminLayout title="Monitoring" userEmail={userEmail}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Monitoring Dashboard</h1>
        <p class="text-gray-600 mt-1">Automated agents scanning security, SEO, marketing, competitors and performance</p>
      </div>
    </div>

    {!canView ? (
      <div class="bg-amber-50 border border-amber-200 rounded-lg p-6 text-center">
        <p class="text-amber-800 font-medium">You do not have permission to view monitoring data.</p>
        <p class="text-amber-600 text-sm mt-1">Only the Management department can access this page.</p>
      </div>
    ) : (
      <div>
        <!-- Tab Navigation -->
        <div class="flex border-b border-gray-200 mb-6">
          <button class="mon-tab px-4 py-3 text-sm font-medium border-b-2 transition-colors" data-tab="agents" class:list={[activeTab === 'agents' ? 'border-afj-accent text-afj-accent' : 'border-transparent text-gray-500 hover:text-gray-700']}>
            Agents
          </button>
          <button class="mon-tab px-4 py-3 text-sm font-medium border-b-2 transition-colors" data-tab="fixes" class:list={[activeTab === 'fixes' ? 'border-afj-accent text-afj-accent' : 'border-transparent text-gray-500 hover:text-gray-700']}>
            Proposed Fixes
            {pendingFixCount > 0 && <span class="ml-1 px-1.5 py-0.5 rounded-full text-xs bg-red-100 text-red-700 font-medium">{pendingFixCount}</span>}
          </button>
          <button class="mon-tab px-4 py-3 text-sm font-medium border-b-2 transition-colors" data-tab="health" class:list={[activeTab === 'health' ? 'border-afj-accent text-afj-accent' : 'border-transparent text-gray-500 hover:text-gray-700']}>
            Agent Health
          </button>
        </div>

        <!-- Tab: Agents -->
        <div id="panelAgents" class:list={[activeTab !== 'agents' && 'hidden']}>
        <!-- Agent Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          {agents.map(agent => {
            const report = reports[agent.reportKey];
            const hasReport = report && report.generatedAt;
            const grade = hasReport ? (report.grade || (report.status === 'pending' ? 'P' : '?')) : '—';
            const trend = getTrend(agent.id);
            const generatedAt = hasReport ? new Date(report.generatedAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) : 'Never';

            return (
              <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow" data-agent={agent.id}>
                <div class="p-5">
                  <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center gap-2">
                      <span class="text-2xl" set:html={agent.icon} />
                      <h3 class="text-lg font-semibold text-gray-900">{agent.name}</h3>
                    </div>
                    {hasReport && grade !== '—' ? (
                      <div class={`flex items-center gap-1.5 px-3 py-1 rounded-full border font-bold text-lg ${getGradeColour(grade)}`}>
                        {grade}
                        <Fragment set:html={trendIcon(trend)} />
                      </div>
                    ) : (
                      <span class="text-gray-400 text-sm">No data</span>
                    )}
                  </div>

                  <div class="text-sm text-gray-500 space-y-1">
                    <p><span class="font-medium text-gray-700">Schedule:</span> {agent.schedule}</p>
                    <p><span class="font-medium text-gray-700">Last run:</span> {generatedAt}</p>
                    <p><span class="font-medium text-gray-700">AI-powered:</span> {agent.usesAI ? 'Yes' : 'No'}</p>
                  </div>

                  <div class="mt-4 flex gap-2">
                    {hasReport && (
                      <button
                        class="flex-1 py-2 px-4 bg-afj-dark-blue text-white text-sm font-medium rounded-md hover:bg-afj-dark-blue/90 transition-colors expand-btn"
                        data-target={`detail-${agent.id}`}
                      >
                        View Report
                      </button>
                    )}
                    <button
                      class="flex-1 py-2 px-4 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700 transition-colors run-agent-btn"
                      data-agent-id={agent.id}
                      data-agent-name={agent.name}
                    >
                      Run Now
                    </button>
                  </div>
                </div>

                {/* Expandable detail panel */}
                {hasReport && (
                  <div id={`detail-${agent.id}`} class="hidden border-t border-gray-200 p-5 bg-gray-50 text-sm" data-detail>
                    {/* Security */}
                    {agent.id === 'security' && report.counts && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Issue Summary</h4>
                        <div class="flex gap-3 mb-3">
                          <span class="px-2 py-1 rounded bg-red-100 text-red-700 text-xs font-medium">Critical: {report.counts.critical}</span>
                          <span class="px-2 py-1 rounded bg-orange-100 text-orange-700 text-xs font-medium">High: {report.counts.high}</span>
                          <span class="px-2 py-1 rounded bg-yellow-100 text-yellow-700 text-xs font-medium">Medium: {report.counts.medium}</span>
                          <span class="px-2 py-1 rounded bg-green-100 text-green-700 text-xs font-medium">Low: {report.counts.low}</span>
                        </div>
                        {report.aiAnalysis?.summary && <p class="text-gray-700">{report.aiAnalysis.summary}</p>}
                        {report.aiAnalysis?.recommendations?.length > 0 && (
                          <ul class="mt-2 space-y-1 text-gray-600 list-disc list-inside">
                            {report.aiAnalysis.recommendations.map((r: string) => <li>{r}</li>)}
                          </ul>
                        )}
                      </div>
                    )}

                    {/* SEO */}
                    {agent.id === 'seo' && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">SEO Overview</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Pages</span><p class="font-bold">{report.sitemapCount || 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Issues</span><p class="font-bold">{report.pages?.filter((p: any) => p.issueCount > 0).length || 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Broken Links</span><p class="font-bold">{report.brokenLinks?.broken?.length || 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Avg Response</span><p class="font-bold">{report.pages?.length ? Math.round(report.pages.reduce((s: number, p: any) => s + (p.responseTime || 0), 0) / report.pages.length) : 0}ms</p></div>
                        </div>
                        {report.aiAnalysis?.summary && <p class="text-gray-700">{report.aiAnalysis.summary}</p>}
                      </div>
                    )}

                    {/* Marketing */}
                    {agent.id === 'marketing' && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Marketing Overview</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Blog Posts</span><p class="font-bold">{report.blogCount || 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Days Since Last</span><p class="font-bold">{report.daysSinceLastBlog ?? '?'}</p></div>
                        </div>
                        {report.contentGaps?.length > 0 && (
                          <div class="mb-3">
                            <h5 class="font-medium text-gray-800 mb-1">Content Gaps</h5>
                            <ul class="space-y-1 text-gray-600 list-disc list-inside">
                              {report.contentGaps.slice(0, 5).map((g: any) => <li><strong>[{g.priority}]</strong> {g.topic}</li>)}
                            </ul>
                          </div>
                        )}
                        {report.blogIdeas?.length > 0 && (
                          <div>
                            <h5 class="font-medium text-gray-800 mb-1">Blog Ideas</h5>
                            <ul class="space-y-1 text-gray-600 list-disc list-inside">
                              {report.blogIdeas.slice(0, 3).map((b: any) => <li>{b.title}</li>)}
                            </ul>
                          </div>
                        )}
                        {report.overallAssessment && <p class="text-gray-700 mt-2">{report.overallAssessment}</p>}
                      </div>
                    )}

                    {/* Competitor */}
                    {agent.id === 'competitor' && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Competitor Overview</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Competitors</span><p class="font-bold">{report.competitorCount || 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Changes</span><p class="font-bold">{report.changesDetected || 0}</p></div>
                        </div>
                        {report.changes?.length > 0 && (
                          <div class="mb-3">
                            <h5 class="font-medium text-gray-800 mb-1">Recent Changes</h5>
                            <ul class="space-y-1 text-gray-600 list-disc list-inside">
                              {report.changes.map((c: any) => <li><strong>{c.competitor}</strong> — {c.path} content changed</li>)}
                            </ul>
                          </div>
                        )}
                        {report.aiAnalysis?.summary && <p class="text-gray-700">{report.aiAnalysis.summary}</p>}
                      </div>
                    )}

                    {/* Performance */}
                    {agent.id === 'performance' && report.health && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Performance Overview</h4>
                        <div class="grid grid-cols-3 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Pages Up</span><p class="font-bold text-green-600">{report.health.pagesUp}/{report.health.totalPages}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Avg Time</span><p class="font-bold">{report.health.avgResponseTime}ms</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Max Time</span><p class="font-bold">{report.health.maxResponseTime}ms</p></div>
                        </div>
                        {report.health.pagesDown > 0 && (
                          <div class="bg-red-50 border border-red-200 rounded p-3 mb-3">
                            <p class="text-red-700 font-medium">Pages Down ({report.health.pagesDown})</p>
                            <ul class="mt-1 space-y-1 text-red-600 list-disc list-inside">
                              {report.health.details.filter((d: any) => !d.ok).map((d: any) => <li>{d.path} — {d.error || `HTTP ${d.status}`}</li>)}
                            </ul>
                          </div>
                        )}
                        <div class="flex gap-3 text-xs">
                          <span class={report.adminProtection?.allProtected ? 'text-green-600' : 'text-red-600'}>
                            Admin: {report.adminProtection?.allProtected ? 'Protected' : 'UNPROTECTED'}
                          </span>
                          <span class={report.ssl?.ok ? 'text-green-600' : 'text-red-600'}>
                            SSL: {report.ssl?.ok ? 'Active' : 'ISSUE'}
                          </span>
                          <span class={report.contentIntegrity?.allOk ? 'text-green-600' : 'text-yellow-600'}>
                            Content: {report.contentIntegrity?.allOk ? 'OK' : 'Issues'}
                          </span>
                        </div>
                      </div>
                    )}

                    {/* Remediation */}
                    {agent.id === 'remediation' && report && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Remediation Overview</h4>
                        <div class="grid grid-cols-3 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">New Fixes</span><p class="font-bold">{report.newFixes ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Pending</span><p class="font-bold">{report.pendingFixes ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Total</span><p class="font-bold">{report.totalFixes ?? 0}</p></div>
                        </div>
                        <a href="/admin/monitoring?tab=fixes" class="inline-block mt-2 text-afj-accent hover:underline text-sm font-medium">Review proposed fixes &rarr;</a>
                      </div>
                    )}

                    {/* Pricing Intelligence */}
                    {agent.id === 'pricing' && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Pricing Intelligence</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Quotes</span><p class="font-bold">{report.quoteCount ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Recommendations</span><p class="font-bold">{report.recommendations?.length ?? 0}</p></div>
                        </div>
                        {report.insights && <p class="text-gray-700">{typeof report.insights === 'string' ? report.insights.slice(0, 300) : ''}</p>}
                        <a href="/admin/pricing-intelligence" class="inline-block mt-2 text-afj-accent hover:underline text-sm font-medium">View full report &rarr;</a>
                      </div>
                    )}

                    {/* Compliance Check */}
                    {agent.id === 'compliance' && report && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Compliance Check</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">MOT Checked</span><p class="font-bold">{report.motChecked ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">DBS Checked</span><p class="font-bold">{report.dbsChecked ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">MOT Expiring</span><p class="font-bold text-amber-600">{report.motExpiring ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">DBS Expiring</span><p class="font-bold text-amber-600">{report.dbsExpiring ?? 0}</p></div>
                        </div>
                        {report.alertCount > 0 && <p class="text-amber-700 text-sm font-medium">{report.alertCount} compliance alert(s)</p>}
                        <a href="/admin/compliance-records" class="inline-block mt-2 text-afj-accent hover:underline text-sm font-medium">View records &rarr;</a>
                      </div>
                    )}

                    {/* Meta Agent */}
                    {agent.id === 'meta' && report && (
                      <div>
                        <h4 class="font-semibold text-gray-900 mb-2">Agent Health</h4>
                        <div class="grid grid-cols-2 gap-2 mb-3">
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Agents</span><p class="font-bold">{report.agentCount ?? 0}</p></div>
                          <div class="bg-white rounded p-2 border"><span class="text-xs text-gray-500">Health</span><p class="font-bold capitalize">{report.overallHealth ?? '?'}</p></div>
                        </div>
                        {report.summary && <p class="text-gray-700">{typeof report.summary === 'string' ? report.summary.slice(0, 300) : ''}</p>}
                        <a href="/admin/monitoring?tab=health" class="inline-block mt-2 text-afj-accent hover:underline text-sm font-medium">View health report &rarr;</a>
                      </div>
                    )}
                  </div>
                )}
              </div>
            );
          })}
        </div>

        <!-- History Chart (text-based) -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">Grade History (last 90 days)</h2>

          {Object.keys(history).length === 0 ? (
            <p class="text-gray-500">No history data yet. Reports will appear here after agents have run.</p>
          ) : (
            <div class="overflow-x-auto">
              <table class="w-full text-sm">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="py-2 px-3 text-left font-medium text-gray-700">Agent</th>
                    <th class="py-2 px-3 text-left font-medium text-gray-700">Trend</th>
                    <th class="py-2 px-3 text-left font-medium text-gray-700">Recent Grades</th>
                    <th class="py-2 px-3 text-left font-medium text-gray-700">Last Summary</th>
                  </tr>
                </thead>
                <tbody>
                  {Object.entries(history).map(([agentId, entries]) => {
                    const agentEntries = entries as any[];
                    if (!agentEntries || agentEntries.length === 0) return null;
                    const recent = agentEntries.slice(-10);
                    const trend = getTrend(agentId);
                    const last = agentEntries[agentEntries.length - 1];
                    const agentDef = agents.find(a => a.id === agentId);

                    return (
                      <tr class="border-b border-gray-100">
                        <td class="py-2 px-3 font-medium text-gray-900">{agentDef?.name || agentId}</td>
                        <td class="py-2 px-3">
                          <Fragment set:html={trendIcon(trend)} />
                          <span class="ml-1 text-xs text-gray-500">{trend}</span>
                        </td>
                        <td class="py-2 px-3">
                          <div class="flex gap-1">
                            {recent.map((e: any) => (
                              <span class={`inline-block w-7 h-7 rounded text-center leading-7 text-xs font-bold border ${getGradeColour(e.grade)}`} title={e.date}>
                                {e.grade}
                              </span>
                            ))}
                          </div>
                        </td>
                        <td class="py-2 px-3 text-gray-600 max-w-xs truncate">{last?.summary || '—'}</td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          )}
        </div>
        </div>
        {/* End Agents panel */}

        {/* Tab: Agent Health */}
        <div id="panelHealth" class:list={[activeTab !== 'health' && 'hidden']}>
          {reports['meta-report'] ? (
            <div class="space-y-6">
              {/* Overview */}
              <div class="bg-white rounded-lg border border-gray-200 p-6">
                <div class="flex items-center justify-between mb-4">
                  <h2 class="text-lg font-semibold text-gray-900">Agent Health Overview</h2>
                  <span class:list={[
                    'px-3 py-1 rounded-full text-sm font-bold',
                    reports['meta-report'].overallHealth === 'healthy' ? 'bg-green-100 text-green-700' :
                    reports['meta-report'].overallHealth === 'degraded' ? 'bg-amber-100 text-amber-700' :
                    'bg-red-100 text-red-700'
                  ]}>
                    {reports['meta-report'].overallHealth}
                  </span>
                </div>
                <p class="text-gray-700">{reports['meta-report'].summary}</p>
                <p class="text-xs text-gray-400 mt-2">
                  Last analysed: {new Date(reports['meta-report'].generatedAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' })}
                </p>
              </div>

              {/* Agent Assessments */}
              {reports['meta-report'].agentAssessments?.length > 0 && (
                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                  <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="font-semibold text-gray-900">Individual Agent Status</h3>
                  </div>
                  <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                      <thead>
                        <tr class="bg-gray-50 border-b border-gray-200">
                          <th class="py-2 px-4 text-left font-medium text-gray-700">Agent</th>
                          <th class="py-2 px-4 text-left font-medium text-gray-700">Health</th>
                          <th class="py-2 px-4 text-left font-medium text-gray-700">Trend</th>
                          <th class="py-2 px-4 text-left font-medium text-gray-700">Assessment</th>
                        </tr>
                      </thead>
                      <tbody>
                        {reports['meta-report'].agentAssessments.map((a: any) => (
                          <tr class="border-b border-gray-100">
                            <td class="py-2 px-4 font-medium text-gray-900 capitalize">{a.name}</td>
                            <td class="py-2 px-4">
                              <span class:list={[
                                'px-2 py-0.5 rounded-full text-xs font-medium',
                                a.health === 'healthy' ? 'bg-green-100 text-green-700' :
                                a.health === 'degraded' ? 'bg-amber-100 text-amber-700' :
                                a.health === 'critical' ? 'bg-red-100 text-red-700' :
                                'bg-gray-100 text-gray-500'
                              ]}>
                                {a.health}
                              </span>
                            </td>
                            <td class="py-2 px-4 capitalize text-gray-600">{a.trend}</td>
                            <td class="py-2 px-4 text-gray-600 max-w-sm truncate">{a.assessment}</td>
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>
                </div>
              )}

              {/* Recommendations */}
              {reports['meta-report'].recommendations?.length > 0 && (
                <div class="bg-white rounded-lg border border-gray-200 p-6">
                  <h3 class="font-semibold text-gray-900 mb-4">Recommendations</h3>
                  <div class="space-y-3">
                    {reports['meta-report'].recommendations.map((r: any) => (
                      <div class="flex items-start gap-3 p-3 rounded-lg bg-gray-50">
                        <span class:list={[
                          'px-2 py-0.5 rounded-full text-xs font-medium flex-shrink-0 mt-0.5',
                          r.priority === 'high' ? 'bg-red-100 text-red-700' :
                          r.priority === 'medium' ? 'bg-amber-100 text-amber-700' :
                          'bg-gray-100 text-gray-600'
                        ]}>
                          {r.priority}
                        </span>
                        <div>
                          <p class="font-medium text-gray-900">{r.title}</p>
                          <p class="text-sm text-gray-600 mt-0.5">{r.description}</p>
                          {r.category && <span class="text-xs text-gray-400 mt-1 inline-block">{r.category}</span>}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              {/* Cost Estimate */}
              {reports['meta-report'].costEstimate && (
                <div class="bg-white rounded-lg border border-gray-200 p-6">
                  <h3 class="font-semibold text-gray-900 mb-2">Cost Estimate</h3>
                  <p class="text-2xl font-bold text-gray-900">{reports['meta-report'].costEstimate.estimatedMonthlyCost}</p>
                  <p class="text-sm text-gray-500 mt-1">{reports['meta-report'].costEstimate.breakdown}</p>
                </div>
              )}
            </div>
          ) : (
            <div class="bg-white rounded-lg border border-gray-200 p-8 text-center text-gray-400">
              <p>No meta agent report yet. The meta agent runs on the 1st of each month.</p>
              <p class="text-xs mt-1">Trigger it manually from GitHub Actions if needed.</p>
            </div>
          )}
        </div>

        {/* Tab: Proposed Fixes */}
        <div id="panelFixes" class:list={[activeTab !== 'fixes' && 'hidden']}>
          <div class="mb-4 flex flex-wrap gap-3">
            <select id="fixFilterStatus" class="px-3 py-2 border border-gray-300 rounded-md text-sm">
              <option value="" selected>All statuses</option>
              <option value="pending">Pending</option>
              <option value="resolved">Resolved</option>
              <option value="dismissed">Dismissed</option>
            </select>
            <select id="fixFilterSource" class="px-3 py-2 border border-gray-300 rounded-md text-sm">
              <option value="">All sources</option>
              <option value="security-agent">Security</option>
              <option value="seo-agent">SEO</option>
            </select>
          </div>

          <div id="fixesList" class="space-y-3">
            <div class="bg-white rounded-lg border border-gray-200 p-8 text-center text-gray-400">Loading fixes...</div>
          </div>

          {/* Fix Detail Modal */}
          <div id="fixModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50 p-4">
            <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[80vh] overflow-y-auto">
              <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                <h3 id="fixModalTitle" class="text-lg font-semibold text-gray-900"></h3>
                <button id="fixModalClose" class="text-gray-400 hover:text-gray-600">&times;</button>
              </div>
              <div class="p-6">
                <div id="fixModalMeta" class="flex gap-2 mb-4"></div>
                <p id="fixModalDesc" class="text-sm text-gray-600 mb-4"></p>
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Claude Code Prompt</h4>
                  <pre id="fixModalPrompt" class="bg-blue-50 border border-blue-200 rounded-md p-3 text-sm whitespace-pre-wrap overflow-x-auto max-h-60"></pre>
                </div>
                <div id="fixModalActions" class="flex gap-3">
                  <button id="fixCopyBtn" class="flex-1 bg-afj-dark-blue text-white font-semibold py-2.5 rounded-lg hover:bg-afj-dark-blue/90 transition-colors text-sm">Copy Prompt</button>
                  <button id="fixDismissBtn" class="flex-1 bg-gray-600 text-white font-semibold py-2.5 rounded-lg hover:bg-gray-700 transition-colors text-sm">Dismiss</button>
                </div>
                <div id="fixDismissForm" class="hidden mt-4">
                  <textarea id="fixDismissReason" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" rows="2" placeholder="Reason for dismissal (optional)"></textarea>
                  <button id="fixDismissConfirm" class="mt-2 bg-gray-600 text-white text-sm font-medium px-4 py-2 rounded-md hover:bg-gray-700">Confirm Dismiss</button>
                </div>
                <p id="fixCopyFeedback" class="hidden mt-3 text-sm text-green-600 font-medium text-center">Copied to clipboard!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
  </div>

  <script>
    // Expand buttons for agent report panels
    document.querySelectorAll('.expand-btn').forEach(function(btn) {
      btn.addEventListener('click', function() {
        var targetId = this.getAttribute('data-target');
        if (!targetId) return;
        var panel = document.getElementById(targetId);
        if (!panel) return;
        var isHidden = panel.classList.contains('hidden');
        panel.classList.toggle('hidden');
        this.textContent = isHidden ? 'Hide Report' : 'View Report';
      });
    });

    // Tab switching
    document.querySelectorAll('.mon-tab').forEach(function(btn) {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.mon-tab').forEach(function(t) {
          t.classList.remove('border-afj-accent', 'text-afj-accent');
          t.classList.add('border-transparent', 'text-gray-500');
        });
        btn.classList.add('border-afj-accent', 'text-afj-accent');
        btn.classList.remove('border-transparent', 'text-gray-500');
        document.getElementById('panelAgents').classList.add('hidden');
        document.getElementById('panelFixes').classList.add('hidden');
        document.getElementById('panelHealth').classList.add('hidden');
        var tab = btn.getAttribute('data-tab');
        document.getElementById('panel' + tab.charAt(0).toUpperCase() + tab.slice(1)).classList.remove('hidden');
      });
    });

    // ── Fixes tab logic ──
    var SEVERITY_BADGES = {
      high: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700">High</span>',
      medium: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">Medium</span>',
      low: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Low</span>',
    };
    var FIX_STATUS_BADGES = {
      pending: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">Pending</span>',
      resolved: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Resolved</span>',
      dismissed: '<span class="px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Dismissed</span>',
    };
    var SOURCE_LABELS = { 'security-agent': 'Security', 'seo-agent': 'SEO' };

    var fixesList = document.getElementById('fixesList');
    var currentFixId = null;
    var currentFixPrompt = '';

    function loadFixes() {
      var params = new URLSearchParams();
      var status = document.getElementById('fixFilterStatus').value;
      var source = document.getElementById('fixFilterSource').value;
      if (status) params.set('status', status);
      if (source) params.set('source', source);

      fetch('/api/admin/proposed-fixes?' + params.toString())
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (!data.success) return;
          var fixes = data.data.fixes;
          if (fixes.length === 0) {
            fixesList.innerHTML = '<div class="bg-white rounded-lg border border-gray-200 p-8 text-center text-gray-400">No fixes matching your filters.</div>';
            return;
          }
          fixesList.innerHTML = fixes.map(function(f) {
            var sevBadge = SEVERITY_BADGES[f.severity] || '';
            var statusBadge = FIX_STATUS_BADGES[f.status] || '';
            var sourceLabel = SOURCE_LABELS[f.source] || f.source;
            return '<div class="bg-white rounded-lg border border-gray-200 p-4 hover:shadow-sm transition-shadow cursor-pointer fix-row" data-fix-id="' + f.id + '">'
              + '<div class="flex items-center justify-between">'
              + '<div class="min-w-0">'
              + '<div class="flex items-center gap-2 flex-wrap">'
              + '<h3 class="text-sm font-semibold text-gray-900">' + f.title + '</h3>'
              + sevBadge + ' ' + statusBadge
              + '</div>'
              + '<p class="text-xs text-gray-500 mt-1">Source: ' + sourceLabel + ' &middot; ' + f.createdAt + '</p>'
              + '</div>'
              + '<svg class="w-5 h-5 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>'
              + '</div></div>';
          }).join('');
        })
        .catch(function() {
          fixesList.innerHTML = '<div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center text-red-700">Failed to load fixes.</div>';
        });
    }

    document.getElementById('fixFilterStatus').addEventListener('change', loadFixes);
    document.getElementById('fixFilterSource').addEventListener('change', loadFixes);

    // Open fix detail modal
    fixesList.addEventListener('click', function(e) {
      var row = e.target.closest('.fix-row');
      if (!row) return;
      var fixId = row.getAttribute('data-fix-id');

      fetch('/api/admin/proposed-fixes')
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (!data.success) return;
          var fix = data.data.fixes.find(function(f) { return f.id === fixId; });
          if (!fix) return;
          currentFixId = fix.id;
          currentFixPrompt = fix.claudeCodePrompt || '';

          document.getElementById('fixModalTitle').textContent = fix.title;
          document.getElementById('fixModalDesc').textContent = fix.description;
          document.getElementById('fixModalPrompt').textContent = fix.claudeCodePrompt || '(no prompt available)';

          var metaHtml = (SEVERITY_BADGES[fix.severity] || '') + ' ' + (FIX_STATUS_BADGES[fix.status] || '') + ' <span class="text-xs text-gray-500">' + (SOURCE_LABELS[fix.source] || fix.source) + '</span>';
          document.getElementById('fixModalMeta').innerHTML = metaHtml;

          // Show/hide action buttons based on status
          var actions = document.getElementById('fixModalActions');
          if (fix.status === 'pending') {
            actions.classList.remove('hidden');
          } else {
            actions.classList.add('hidden');
          }
          document.getElementById('fixDismissForm').classList.add('hidden');
          document.getElementById('fixCopyFeedback').classList.add('hidden');
          document.getElementById('fixModal').classList.remove('hidden');
        });
    });

    document.getElementById('fixModalClose').addEventListener('click', function() {
      document.getElementById('fixModal').classList.add('hidden');
    });

    // Copy prompt to clipboard
    document.getElementById('fixCopyBtn').addEventListener('click', function() {
      if (!currentFixPrompt) return;
      navigator.clipboard.writeText(currentFixPrompt).then(function() {
        var fb = document.getElementById('fixCopyFeedback');
        fb.classList.remove('hidden');
        setTimeout(function() { fb.classList.add('hidden'); }, 2000);
      });
    });

    // Dismiss fix
    document.getElementById('fixDismissBtn').addEventListener('click', function() {
      document.getElementById('fixDismissForm').classList.remove('hidden');
    });

    document.getElementById('fixDismissConfirm').addEventListener('click', function() {
      if (!currentFixId) return;
      var reason = document.getElementById('fixDismissReason').value.trim();

      fetch('/api/admin/proposed-fixes', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ action: 'dismiss', id: currentFixId, reason: reason }),
      })
        .then(function(r) { return r.json(); })
        .then(function(data) {
          if (data.success) {
            document.getElementById('fixModal').classList.add('hidden');
            loadFixes();
          }
        });
    });

    // Close modal on backdrop click
    document.getElementById('fixModal').addEventListener('click', function(e) {
      if (e.target === this) {
        this.classList.add('hidden');
      }
    });

    // Initial load if on fixes tab
    if (document.getElementById('panelFixes') && !document.getElementById('panelFixes').classList.contains('hidden')) {
      loadFixes();
    }

    // Load fixes when switching to fixes tab
    document.querySelectorAll('.mon-tab').forEach(function(btn) {
      btn.addEventListener('click', function() {
        if (btn.getAttribute('data-tab') === 'fixes') {
          setTimeout(loadFixes, 100);
        }
      });
    });

    // ── Run Now buttons ──
    var allRunBtns = document.querySelectorAll('.run-agent-btn');

    function setAllRunBtnsDisabled(disabled) {
      allRunBtns.forEach(function(btn) {
        btn.disabled = disabled;
        if (disabled && !btn.classList.contains('running')) {
          btn.classList.add('opacity-50', 'cursor-not-allowed');
        }
      });
    }

    allRunBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        var agentId = btn.getAttribute('data-agent-id');
        var agentName = btn.getAttribute('data-agent-name');
        if (!agentId) return;

        // Set running state
        var originalText = btn.textContent;
        btn.textContent = 'Running...';
        btn.classList.add('running', 'animate-pulse');
        btn.disabled = true;
        setAllRunBtnsDisabled(true);

        fetch('/api/admin/run-agent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ agent: agentId }),
        })
          .then(function(r) { return r.json(); })
          .then(function(data) {
            if (data.success) {
              btn.textContent = 'Done!';
              btn.classList.remove('animate-pulse', 'bg-green-600', 'hover:bg-green-700');
              btn.classList.add('bg-green-700');
              // Reload the page after a short delay to show updated report
              setTimeout(function() { window.location.reload(); }, 1500);
            } else {
              btn.textContent = 'Failed';
              btn.classList.remove('animate-pulse', 'bg-green-600', 'hover:bg-green-700');
              btn.classList.add('bg-red-600');
              alert(agentName + ' agent failed: ' + (data.error || 'Unknown error'));
              setTimeout(function() {
                btn.textContent = originalText;
                btn.classList.remove('bg-red-600', 'running');
                btn.classList.add('bg-green-600', 'hover:bg-green-700');
                setAllRunBtnsDisabled(false);
                allRunBtns.forEach(function(b) { b.classList.remove('opacity-50', 'cursor-not-allowed'); });
              }, 3000);
            }
          })
          .catch(function() {
            btn.textContent = 'Error';
            btn.classList.remove('animate-pulse', 'bg-green-600', 'hover:bg-green-700');
            btn.classList.add('bg-red-600');
            setTimeout(function() {
              btn.textContent = originalText;
              btn.classList.remove('bg-red-600', 'running');
              btn.classList.add('bg-green-600', 'hover:bg-green-700');
              setAllRunBtnsDisabled(false);
              allRunBtns.forEach(function(b) { b.classList.remove('opacity-50', 'cursor-not-allowed'); });
            }, 3000);
          });
      });
    });
  </script>
</AdminLayout>
