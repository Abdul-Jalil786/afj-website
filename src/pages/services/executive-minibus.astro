---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import TestimonialSlider from '../../components/TestimonialSlider.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Services', href: '/services' },
  { label: 'Executive Minibus Hire' },
];

const amenities = [
  'Luxury leather seating',
  'On-board coffee machine',
  'Surround sound audio system',
  'Ambient interior lighting',
  'Air conditioning',
  'USB charging ports',
  'Wi-Fi connectivity',
  'Tinted privacy windows',
];

const occasions = [
  {
    title: 'Race Days',
    description: 'Cheltenham, Royal Ascot, Warwick Races, and other prestigious race meetings. Arrive in style and comfort.',
  },
  {
    title: 'Corporate Events',
    description: 'Conferences, client hospitality, team events, and business travel. Make the right impression.',
  },
  {
    title: 'Airport Transfers',
    description: 'Birmingham Airport and other UK airports. Stress-free transfers for your group.',
  },
  {
    title: 'Special Occasions',
    description: 'Weddings, anniversaries, milestone birthdays, and celebrations. Travel together in luxury.',
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Executive Minibus Hire',
  provider: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    telephone: '0121 689 1000',
  },
  description: 'Luxury executive minibus hire with driver in Birmingham. Premium amenities including leather seats, coffee machine, and surround sound. Perfect for race days, corporate events, and airport transfers.',
  areaServed: ['Birmingham', 'West Midlands', 'United Kingdom'],
  serviceType: 'Executive Minibus Hire',
};
---

<PageLayout
  title="Executive Minibus Hire"
  description="Luxury executive minibus hire with driver in Birmingham. Leather seats, coffee machine, surround sound. Race days, corporate events, airport transfers."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Executive Minibus Hire" subtitle="Luxury travel with premium amenities. Professional drivers for every occasion." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Luxury Minibus Hire</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            Experience premium group travel with AFJ's executive minibus hire service. Our luxury minibuses are fitted with top-of-the-range amenities to ensure your journey is as enjoyable as the destination.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            From race days at Cheltenham and Royal Ascot to corporate events, airport transfers, and special celebrations, our professional drivers ensure a smooth, comfortable, and punctual service every time.
          </p>
          <div class="flex flex-wrap gap-3">
            <a href="/contact" class="btn-primary">Get a Quote</a>
            <a href="tel:01216891000" class="btn-outline">Call 0121 689 1000</a>
          </div>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/fleet/mbs1a111qmy.webp" alt="AFJ executive luxury minibus" class="max-h-[400px] w-auto object-contain" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Amenities -->
  <section class="section-padding bg-afj-dark-blue text-white">
    <div class="container-wide">
      <h2 class="text-center mb-8">Premium Amenities</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {amenities.map((amenity) => (
          <div class="flex items-center gap-2 bg-white/5 rounded-lg p-3">
            <svg class="w-4 h-4 text-afj-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-white/90 text-sm">{amenity}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Occasions -->
  <section class="section-padding">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Perfect For Every Occasion</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {occasions.map((occasion) => (
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-afj-green font-bold text-lg mb-2">{occasion.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{occasion.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <TestimonialSlider />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Book Your Executive Minibus</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your event and we will create a tailored package.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <CTABanner
    heading="Travel in Style"
    description="Luxury executive minibus hire with professional driver. Contact us today for a personalised quote."
    variant="green"
  />
</PageLayout>
