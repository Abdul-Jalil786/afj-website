---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Services', href: '/services' },
  { label: 'Airport Transfers' },
];

const airports = [
  'Birmingham Airport (BHX)',
  'Manchester Airport (MAN)',
  'London Heathrow (LHR)',
  'London Gatwick (LGW)',
  'East Midlands Airport (EMA)',
  'Bristol Airport (BRS)',
];

const features = [
  {
    title: 'Professional Drivers',
    description: 'Experienced, courteous drivers who know the best routes to get you to your flight on time.',
  },
  {
    title: 'Flight Monitoring',
    description: 'We track your flight status so your driver is ready when you land, even if your flight is delayed.',
  },
  {
    title: 'Group Travel',
    description: 'Minibuses for groups of up to 16 passengers with generous luggage space.',
  },
  {
    title: 'Executive Options',
    description: 'Luxury minibus transfers available with premium amenities for a first-class experience.',
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Airport Transfer Services',
  provider: {
    '@type': 'LocalBusiness',
    name: 'AFJ Limited',
    telephone: '0121 689 1000',
  },
  description: 'Reliable airport transfer services from Birmingham to all major UK airports. Professional drivers, flight monitoring, and group travel options.',
  areaServed: ['Birmingham', 'West Midlands', 'United Kingdom'],
  serviceType: 'Airport Transfers',
};
---

<PageLayout
  title="Airport Transfers"
  description="Reliable airport transfers from Birmingham. Professional drivers, flight monitoring, group minibus travel to Birmingham Airport, Manchester, Heathrow, and more."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Airport Transfers" subtitle="Reliable, comfortable airport transfer services to and from all major UK airports." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Airport Transfer Services</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            Start and end your journey stress-free with AFJ's professional airport transfer service. Whether you are travelling for business or leisure, our experienced drivers ensure you arrive at the airport on time and return home in comfort.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            We offer both standard and executive minibus transfers, perfect for individuals, families, and groups of up to 16 passengers. With generous luggage space and comfortable seating, our vehicles are ideal for airport runs.
          </p>
          <div class="flex flex-wrap gap-3">
            <a href="/contact" class="btn-primary">Book a Transfer</a>
            <a href="tel:01216891000" class="btn-outline">Call 0121 689 1000</a>
          </div>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/fleet/mbs1a111q.webp" alt="AFJ airport transfer minibus" class="max-h-[400px] w-auto object-contain" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Airports Served -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Airports We Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {airports.map((airport) => (
          <div class="bg-white rounded-lg shadow-sm p-4 text-center hover:shadow-md transition-shadow">
            <svg class="w-8 h-8 text-afj-accent mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
            <p class="text-afj-text font-medium text-sm">{airport}</p>
          </div>
        ))}
      </div>
      <p class="text-afj-secondary text-sm text-center mt-4">
        Transfers to other UK airports also available on request.
      </p>
    </div>
  </section>

  <!-- Features -->
  <section class="section-padding">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ Airport Transfers?</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map((feature) => (
          <div class="bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow">
            <h3 class="text-afj-green font-bold text-lg mb-2">{feature.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Book Your Airport Transfer</h2>
      <p class="text-afj-secondary text-center mb-8">Provide your flight details and we will arrange everything.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <CTABanner
    heading="Stress-Free Airport Transfers"
    description="Professional drivers, flight tracking, and comfortable vehicles. Book your airport transfer today."
    variant="green"
  />
</PageLayout>
