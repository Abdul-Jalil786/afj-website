---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import FleetGallery from '../../components/FleetGallery.astro';
import AccreditationBadges from '../../components/AccreditationBadges.astro';
import FAQ from '../../components/FAQ.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Areas', href: '/areas' },
  { label: 'Coventry' },
];

const stats = [
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 100, suffix: '%', label: 'DBS Checked Staff' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
  { value: 1, suffix: '', label: 'CQC "Good" Rating' },
];

const services = [
  { title: 'Home to School Transport', description: 'SEND school transport for Coventry schools with DBS-checked drivers, passenger assistants, and wheelchair-accessible vehicles.', href: '/services/send-transport' },
  { title: 'Patient Transport', description: 'CQC-rated "Good" non-emergency patient transport serving hospitals and clinics in the Coventry area.', href: '/services/patient-transport' },
  { title: 'Private Minibus Hire', description: 'Modern minibuses for group travel, school trips, and events in Coventry and the surrounding area.', href: '/services/private-hire' },
];

const galleryImages = [
  { src: '/images/misc/minibuses.webp', alt: 'AFJ minibuses available for Coventry services' },
  { src: '/images/fleet/patient-transport-team-hands-together.jpg', alt: 'Patient transport team serving Coventry' },
  { src: '/images/misc/send-vehicle-with-wheelchair-ramp.webp', alt: 'Wheelchair-accessible vehicle for Coventry schools' },
  { src: '/images/fleet/ambulance.jpg', alt: 'AFJ ambulance available in Coventry' },
];

const badges = [
  { src: '/images/accreditations/CQCGood.png', alt: 'CQC Good Rating', name: 'CQC Good' },
  { src: '/images/accreditations/BCC.png', alt: 'Birmingham City Council Accredited', name: 'Birmingham City Council' },
  { src: '/images/accreditations/NWAS.jpg', alt: 'NHS Approved', name: 'NHS' },
];

const faqItems = [
  {
    question: 'What transport services does AFJ provide in Coventry?',
    answer: 'AFJ Limited provides SEND school transport, CQC-rated "Good" non-emergency patient transport, and private minibus hire for the Coventry area. We serve schools, hospitals, and individuals across the city and surrounding areas.',
  },
  {
    question: 'Does AFJ cover all of Coventry?',
    answer: 'Yes, we provide transport services across the entire Coventry area. Our services extend from our Birmingham base to cover Coventry city centre and surrounding areas, as part of our wider West Midlands coverage.',
  },
  {
    question: 'Does AFJ offer patient transport in Coventry?',
    answer: 'Yes, our non-emergency patient transport service is CQC-rated "Good". We transport patients to and from hospitals and clinics in Coventry, covering renal dialysis, outpatient appointments, hospital discharges, and long-distance transfers.',
  },
  {
    question: 'How do I book transport in Coventry?',
    answer: 'Contact us on 0121 689 1000, email info@afjltd.co.uk, or fill in the booking form on this page. Our team will provide a tailored quote within 24 hours.',
  },
];

const otherAreas = [
  { name: 'Birmingham', href: '/areas/birmingham' },
  { name: 'Manchester', href: '/areas/manchester' },
  { name: 'Sandwell', href: '/areas/sandwell' },
  { name: 'West Midlands', href: '/areas/west-midlands' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited — Coventry',
  description: 'AFJ Limited provides SEND school transport, CQC-rated patient transport, and private minibus hire in Coventry and the surrounding area.',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  url: 'https://www.afjltd.co.uk/areas/coventry',
  address: {
    '@type': 'PostalAddress',
    streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
    addressLocality: 'Birmingham',
    addressRegion: 'West Midlands',
    postalCode: 'B7 4JD',
    addressCountry: 'GB',
  },
  areaServed: {
    '@type': 'City',
    name: 'Coventry',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'SEND School Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire' } },
    ],
  },
};
---

<PageLayout
  title="Transport Services Coventry"
  description="AFJ Limited — SEND school transport, CQC-rated patient transport, and private minibus hire in Coventry. DBS-checked staff and wheelchair-accessible vehicles."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Transport Services in Coventry" subtitle="SEND school transport, CQC-rated patient transport, and private hire for Coventry and surrounding areas." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Reliable Transport in Coventry</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            AFJ Limited extends its trusted transport services to Coventry and the surrounding area. With over 18 years of experience and a CQC "Good" rating, we provide safe, reliable, and compassionate transport for schools, hospitals, and individuals.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            Our fleet of wheelchair-accessible minibuses and fully equipped ambulances, driven by DBS-checked professionals, ensure that Coventry residents receive the same high standard of service that has made us a trusted name across the West Midlands.
          </p>
          <a href="/contact" class="btn-primary">Get in Touch</a>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/misc/minibuses.webp" alt="AFJ minibuses available for Coventry services" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Services Grid -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Our Services in Coventry</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {services.map((service) => (
          <a href={service.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h3 class="text-afj-green font-bold text-lg mb-2 group-hover:text-afj-accent transition-colors">{service.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose AFJ -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ in Coventry?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport for Coventry residents.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">18+ Years Experience</h4>
            <p class="text-afj-secondary text-sm">Established in 2006, delivering reliable transport across the West Midlands.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">DBS-Checked Staff</h4>
            <p class="text-afj-secondary text-sm">Every driver and passenger assistant is fully DBS checked and professionally trained.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Wheelchair Accessible</h4>
            <p class="text-afj-secondary text-sm">Full fleet of wheelchair-accessible minibuses and ambulances available.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Gallery -->
  <FleetGallery images={galleryImages} heading="Our Fleet Serving Coventry" />

  <!-- Accreditations -->
  <AccreditationBadges badges={badges} />

  <!-- FAQ -->
  <FAQ items={faqItems} heading="Coventry Transport — Frequently Asked Questions" />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Get a Quote for Coventry</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your transport requirements and we will get back to you within 24 hours.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <!-- Other Areas -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-6">We Also Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {otherAreas.map((area) => (
          <a href={area.href} class="bg-afj-light-white rounded-lg p-4 text-center hover:shadow-md transition-shadow block">
            <p class="text-afj-text font-medium">{area.name}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="Transport Solutions for Coventry"
    description="Contact AFJ Limited today for safe, reliable transport services in Coventry and the West Midlands."
    variant="green"
  />
</PageLayout>
