---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import FleetGallery from '../../components/FleetGallery.astro';
import AccreditationBadges from '../../components/AccreditationBadges.astro';
import FAQ from '../../components/FAQ.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Areas', href: '/areas' },
  { label: 'Manchester' },
];

const stats = [
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 100, suffix: '%', label: 'DBS Checked Staff' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
  { value: 1, suffix: '', label: 'CQC "Good" Rating' },
];

const services = [
  { title: 'Home to School Transport', description: 'SEND school transport for Manchester City Council and surrounding boroughs. DBS-checked drivers and passenger assistants with wheelchair-accessible minibuses.', href: '/services/send-transport' },
  { title: 'Patient Transport', description: 'CQC-rated "Good" non-emergency patient transport serving NHS trusts across Greater Manchester and the North West.', href: '/services/patient-transport' },
  { title: 'Private Minibus Hire', description: 'Modern 16-seater minibuses for group travel, school trips, corporate events, and days out across Manchester and the North West.', href: '/services/private-hire' },
];

const galleryImages = [
  { src: '/images/fleet/patient-transport-crew.webp', alt: 'AFJ patient transport crew serving Manchester' },
  { src: '/images/fleet/patient-transport-crew-2.jpg', alt: 'Patient transport team in Manchester' },
  { src: '/images/fleet/staff-in-ambulance-pushing-stretcher.jpg', alt: 'Ambulance crew with stretcher' },
  { src: '/images/misc/minibuses.webp', alt: 'AFJ minibuses available in Manchester' },
];

const badges = [
  { src: '/images/accreditations/CQCGood.png', alt: 'CQC Good Rating', name: 'CQC Good' },
  { src: '/images/accreditations/MCC.png', alt: 'Manchester City Council Accredited', name: 'Manchester City Council' },
  { src: '/images/accreditations/OCC.png', alt: 'Oldham Council Accredited', name: 'Oldham Council' },
  { src: '/images/accreditations/TBC.png', alt: 'Trafford Borough Council Accredited', name: 'Trafford Council' },
  { src: '/images/accreditations/tameside-metropolitan-borough-council-vector-logo-small.png', alt: 'Tameside Metropolitan Borough Council', name: 'Tameside Council' },
  { src: '/images/accreditations/LCC.jpg', alt: 'Lancashire County Council Accredited', name: 'Lancashire Council' },
  { src: '/images/accreditations/NWAS.jpg', alt: 'NHS Approved', name: 'NHS' },
];

const faqItems = [
  {
    question: 'What services does AFJ provide in Manchester?',
    answer: 'AFJ Limited provides SEND school transport, non-emergency patient transport (CQC rated "Good"), and private minibus hire across Greater Manchester. We hold contracts with Manchester City Council and several surrounding borough councils.',
  },
  {
    question: 'Which Manchester boroughs does AFJ cover?',
    answer: 'We serve across Greater Manchester including Manchester, Oldham, Trafford, Tameside, and extending into Lancashire. Our North West operations cover school transport and patient transport contracts across these areas.',
  },
  {
    question: 'Is AFJ accredited by Manchester City Council?',
    answer: 'Yes, AFJ Limited is accredited by Manchester City Council along with Oldham Council, Trafford Borough Council, Tameside Council, and Lancashire County Council for transport services.',
  },
  {
    question: 'Does AFJ provide patient transport in Manchester?',
    answer: 'Yes, our non-emergency patient transport service is CQC-rated "Good". We serve NHS trusts and hospitals across Greater Manchester, providing transport for renal dialysis, hospital discharges, outpatient appointments, and long-distance transfers.',
  },
  {
    question: 'How do I book a service in Manchester?',
    answer: 'You can contact us on 0121 689 1000, email info@afjltd.co.uk, or fill in the booking form on this page. Our team will get back to you within 24 hours with a tailored quote.',
  },
];

const otherAreas = [
  { name: 'Birmingham', href: '/areas/birmingham' },
  { name: 'Sandwell', href: '/areas/sandwell' },
  { name: 'Coventry', href: '/areas/coventry' },
  { name: 'West Midlands', href: '/areas/west-midlands' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited — Manchester',
  description: 'AFJ Limited provides SEND school transport, non-emergency patient transport, and private minibus hire across Greater Manchester and the North West.',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  url: 'https://www.afjltd.co.uk/areas/manchester',
  address: {
    '@type': 'PostalAddress',
    streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
    addressLocality: 'Birmingham',
    addressRegion: 'West Midlands',
    postalCode: 'B7 4JD',
    addressCountry: 'GB',
  },
  areaServed: {
    '@type': 'City',
    name: 'Manchester',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'SEND School Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire' } },
    ],
  },
};
---

<PageLayout
  title="Transport Services Manchester"
  description="AFJ Limited — SEND school transport, patient transport, and private hire in Manchester. Council accredited across Greater Manchester. CQC rated 'Good'."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Transport Services in Manchester" subtitle="Council-accredited SEND transport, CQC-rated patient transport, and private hire across Greater Manchester." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Trusted Transport in Manchester</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            AFJ Limited extends its trusted transport services across Greater Manchester and the wider North West region. With accreditations from Manchester City Council, Oldham, Trafford, Tameside, and Lancashire councils, we are a proven partner for school transport and patient care.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            Our CQC-rated "Good" patient transport service and council-accredited SEND transport ensure the highest standards of safety, reliability, and compassion for every passenger we serve in Manchester.
          </p>
          <a href="/contact" class="btn-primary">Get in Touch</a>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/fleet/patient-transport-crew.webp" alt="AFJ patient transport crew serving Manchester" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Services Grid -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Our Services in Manchester</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {services.map((service) => (
          <a href={service.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h3 class="text-afj-green font-bold text-lg mb-2 group-hover:text-afj-accent transition-colors">{service.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose AFJ in Manchester -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ in Manchester?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Multi-Council Accredited</h4>
            <p class="text-afj-secondary text-sm">Accredited by Manchester, Oldham, Trafford, Tameside, and Lancashire councils.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport serving Manchester hospitals and NHS trusts.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">DBS-Checked Staff</h4>
            <p class="text-afj-secondary text-sm">Every driver and passenger assistant is fully DBS checked and professionally trained.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">18+ Years Experience</h4>
            <p class="text-afj-secondary text-sm">Established in 2006, delivering reliable transport across the North West.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Gallery -->
  <FleetGallery images={galleryImages} heading="Our Manchester Operations" />

  <!-- Accreditations -->
  <AccreditationBadges badges={badges} />

  <!-- FAQ -->
  <FAQ items={faqItems} heading="Manchester Transport — Frequently Asked Questions" />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Get a Quote for Manchester</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your transport requirements and we will get back to you within 24 hours.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <!-- Other Areas -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-6">We Also Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {otherAreas.map((area) => (
          <a href={area.href} class="bg-afj-light-white rounded-lg p-4 text-center hover:shadow-md transition-shadow block">
            <p class="text-afj-text font-medium">{area.name}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="Transport Services Across Manchester"
    description="Contact AFJ Limited today for council-accredited transport across Greater Manchester and the North West."
    variant="navy"
  />
</PageLayout>
