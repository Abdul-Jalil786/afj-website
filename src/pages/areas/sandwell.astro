---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import FleetGallery from '../../components/FleetGallery.astro';
import AccreditationBadges from '../../components/AccreditationBadges.astro';
import FAQ from '../../components/FAQ.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Areas', href: '/areas' },
  { label: 'Sandwell' },
];

const stats = [
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 700, suffix: '+', label: 'Students Daily' },
  { value: 100, suffix: '%', label: 'DBS Checked Staff' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
];

const services = [
  { title: 'Home to School Transport', description: 'Sandwell Council accredited SEND school transport with DBS-checked drivers, passenger assistants, and wheelchair-accessible minibuses.', href: '/services/send-transport' },
  { title: 'Patient Transport', description: 'CQC-rated "Good" non-emergency patient transport for hospitals and clinics serving the Sandwell area.', href: '/services/patient-transport' },
  { title: 'Private Minibus Hire', description: 'Modern minibuses for group travel, school trips, and events in Sandwell and the surrounding West Midlands.', href: '/services/private-hire' },
];

const galleryImages = [
  { src: '/images/misc/minibuses-parked-in-depot.webp', alt: 'AFJ minibuses serving the Sandwell area' },
  { src: '/images/misc/send-vehicle-with-wheelchair-ramp.webp', alt: 'Wheelchair-accessible vehicle for Sandwell schools' },
  { src: '/images/fleet/patient-transport-crew-2.jpg', alt: 'Patient transport team serving Sandwell' },
  { src: '/images/misc/driver-and-pa-inside-minibus.webp', alt: 'Driver and passenger assistant in minibus' },
];

const badges = [
  { src: '/images/accreditations/CQCGood.png', alt: 'CQC Good Rating', name: 'CQC Good' },
  { src: '/images/accreditations/SCC.png', alt: 'Sandwell Council Accredited', name: 'Sandwell Council' },
  { src: '/images/accreditations/BCC.png', alt: 'Birmingham City Council Accredited', name: 'Birmingham City Council' },
  { src: '/images/accreditations/NWAS.jpg', alt: 'NHS Approved', name: 'NHS' },
];

const faqItems = [
  {
    question: 'What transport services does AFJ provide in Sandwell?',
    answer: 'AFJ Limited provides Sandwell Council accredited SEND school transport, CQC-rated "Good" non-emergency patient transport, and private minibus hire across the Sandwell borough including West Bromwich, Oldbury, Smethwick, Rowley Regis, Tipton, and Wednesbury.',
  },
  {
    question: 'Is AFJ accredited by Sandwell Council?',
    answer: 'Yes, AFJ Limited holds full accreditation from Sandwell Council for school transport services. We also hold Birmingham City Council accreditation and NHS approval.',
  },
  {
    question: 'Which areas of Sandwell does AFJ cover?',
    answer: 'We cover the entire Sandwell borough including West Bromwich, Oldbury, Smethwick, Rowley Regis, Tipton, and Wednesbury, as well as surrounding areas in the West Midlands.',
  },
  {
    question: 'How do I book transport in Sandwell?',
    answer: 'Contact us on 0121 689 1000, email info@afjltd.co.uk, or fill in the booking form on this page. Our team will get back to you within 24 hours with a tailored quote.',
  },
];

const otherAreas = [
  { name: 'Birmingham', href: '/areas/birmingham' },
  { name: 'Manchester', href: '/areas/manchester' },
  { name: 'Coventry', href: '/areas/coventry' },
  { name: 'West Midlands', href: '/areas/west-midlands' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited — Sandwell',
  description: 'AFJ Limited provides Sandwell Council accredited SEND school transport, CQC-rated patient transport, and private hire services across the Sandwell borough.',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  url: 'https://www.afjltd.co.uk/areas/sandwell',
  address: {
    '@type': 'PostalAddress',
    streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
    addressLocality: 'Birmingham',
    addressRegion: 'West Midlands',
    postalCode: 'B7 4JD',
    addressCountry: 'GB',
  },
  areaServed: {
    '@type': 'City',
    name: 'Sandwell',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'SEND School Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire' } },
    ],
  },
};
---

<PageLayout
  title="Transport Services Sandwell"
  description="AFJ Limited — Sandwell Council accredited SEND transport, CQC-rated patient transport, and private hire. Serving West Bromwich, Oldbury, Smethwick, and beyond."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Transport Services in Sandwell" subtitle="Sandwell Council accredited SEND transport, CQC-rated patient transport, and private hire across the borough." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Trusted Transport in Sandwell</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            AFJ Limited is proud to be Sandwell Council accredited, providing safe and reliable transport services across the borough. From SEND school transport in West Bromwich to patient transport in Smethwick, our team delivers compassionate, professional service every day.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            Based just minutes away in Birmingham, we have served the Sandwell community for over 18 years with DBS-checked staff, wheelchair-accessible vehicles, and a commitment to punctuality and care.
          </p>
          <a href="/contact" class="btn-primary">Get in Touch</a>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/misc/minibuses-parked-in-depot.webp" alt="AFJ minibuses serving the Sandwell area" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Services Grid -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Our Services in Sandwell</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {services.map((service) => (
          <a href={service.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h3 class="text-afj-green font-bold text-lg mb-2 group-hover:text-afj-accent transition-colors">{service.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose AFJ -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ in Sandwell?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Sandwell Council Accredited</h4>
            <p class="text-afj-secondary text-sm">Fully accredited by Sandwell Council for school transport services.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport for Sandwell residents.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Close Proximity</h4>
            <p class="text-afj-secondary text-sm">Based in neighbouring Birmingham — just minutes from Sandwell for fast response.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">DBS-Checked Staff</h4>
            <p class="text-afj-secondary text-sm">Every driver and passenger assistant is fully DBS checked and trained.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Gallery -->
  <FleetGallery images={galleryImages} heading="Our Fleet Serving Sandwell" />

  <!-- Accreditations -->
  <AccreditationBadges badges={badges} />

  <!-- FAQ -->
  <FAQ items={faqItems} heading="Sandwell Transport — Frequently Asked Questions" />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Get a Quote for Sandwell</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your transport requirements and we will get back to you within 24 hours.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <!-- Other Areas -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-6">We Also Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {otherAreas.map((area) => (
          <a href={area.href} class="bg-afj-light-white rounded-lg p-4 text-center hover:shadow-md transition-shadow block">
            <p class="text-afj-text font-medium">{area.name}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="Sandwell's Trusted Transport Provider"
    description="Contact AFJ Limited today for council-accredited transport services across Sandwell."
    variant="navy"
  />
</PageLayout>
