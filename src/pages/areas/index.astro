---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [{ label: 'Areas We Serve' }];

const areas = [
  {
    name: 'Birmingham',
    href: '/areas/birmingham',
    description: 'Our headquarters. Full range of transport services including SEND, patient transport, fleet maintenance, conversions, and training.',
    services: ['SEND Transport', 'Patient Transport', 'Fleet Maintenance', 'Conversions', 'Training', 'Private Hire'],
  },
  {
    name: 'Manchester',
    href: '/areas/manchester',
    description: 'Serving the North West with SEND school transport, patient transport, and private minibus hire across Greater Manchester.',
    services: ['SEND Transport', 'Patient Transport', 'Private Hire'],
  },
  {
    name: 'West Midlands',
    href: '/areas/west-midlands',
    description: 'Regional transport services across the entire West Midlands, from Wolverhampton to Solihull and everywhere in between.',
    services: ['SEND Transport', 'Patient Transport', 'Private Hire', 'Fleet Maintenance', 'Conversions'],
  },
  {
    name: 'Sandwell',
    href: '/areas/sandwell',
    description: 'Council-accredited transport services in Sandwell including SEND school transport and non-emergency patient transport.',
    services: ['SEND Transport', 'Patient Transport', 'Private Hire'],
  },
  {
    name: 'Coventry',
    href: '/areas/coventry',
    description: 'Reliable SEND school transport and patient transport services extending into Coventry and surrounding areas.',
    services: ['SEND Transport', 'Patient Transport', 'Private Hire'],
  },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited',
  description: 'AFJ Limited provides specialist transport services across Birmingham, Manchester, West Midlands, Sandwell, and Coventry.',
  telephone: '0121 689 1000',
  areaServed: [
    { '@type': 'City', name: 'Birmingham' },
    { '@type': 'City', name: 'Manchester' },
    { '@type': 'AdministrativeArea', name: 'West Midlands' },
    { '@type': 'City', name: 'Sandwell' },
    { '@type': 'City', name: 'Coventry' },
  ],
};
---

<PageLayout
  title="Areas We Serve"
  description="AFJ Limited serves Birmingham, Manchester, West Midlands, Sandwell, and Coventry with SEND transport, patient transport, fleet maintenance, and private hire."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Areas We Serve" subtitle="Trusted transport services across Birmingham, Manchester, and the wider West Midlands region." />

  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {areas.map((area) => (
          <a href={area.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h2 class="text-afj-green font-bold text-xl mb-2 group-hover:text-afj-accent transition-colors">{area.name}</h2>
            <p class="text-afj-secondary text-sm leading-relaxed mb-4">{area.description}</p>
            <div class="flex flex-wrap gap-2">
              {area.services.map((service) => (
                <span class="bg-afj-light-white text-afj-text text-xs px-2 py-1 rounded">{service}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="Need Transport in Your Area?"
    description="Contact AFJ Limited today. We serve communities across the West Midlands and North West."
    variant="navy"
  />
</PageLayout>
