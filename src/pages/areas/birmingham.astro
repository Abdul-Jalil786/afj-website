---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import FleetGallery from '../../components/FleetGallery.astro';
import AccreditationBadges from '../../components/AccreditationBadges.astro';
import FAQ from '../../components/FAQ.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Areas', href: '/areas' },
  { label: 'Birmingham' },
];

const stats = [
  { value: 700, suffix: '+', label: 'Students Daily' },
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
  { value: 200, suffix: '+', label: 'Vehicle Conversions' },
];

const services = [
  { title: 'Home to School Transport', description: 'SEND school transport for Birmingham City Council. Over 700 students transported daily with DBS-checked staff and wheelchair-accessible minibuses.', href: '/services/send-transport' },
  { title: 'Patient Transport', description: 'CQC-rated "Good" non-emergency patient transport serving NHS trusts and hospitals across Birmingham and the West Midlands.', href: '/services/patient-transport' },
  { title: 'Fleet Maintenance', description: 'In-house workshop in Nechells providing comprehensive fleet maintenance and car repair services for businesses and individuals.', href: '/services/fleet-maintenance' },
  { title: 'Vehicle Conversions', description: 'VOSA certified wheelchair-accessible, ambulance, and luxury conversions from our Birmingham workshop. Over 200 compliant builds delivered.', href: '/services/vehicle-conversions' },
  { title: 'Driver, ACA & PA Training', description: 'QualSafe-approved training programmes including Driver CPC, Ambulance Care Assistant, and Passenger Assistant certification.', href: '/services/driver-training' },
  { title: 'Private Minibus Hire', description: 'Modern 16-seater wheelchair-accessible minibuses for school trips, corporate events, days out, and group travel across Birmingham.', href: '/services/private-hire' },
  { title: 'Executive Minibus Hire', description: 'Luxury minibus hire with driver for corporate travel, race days, and premium events departing from Birmingham.', href: '/services/executive-minibus' },
  { title: 'Airport Transfers', description: 'Reliable group airport transfers to and from Birmingham Airport and other major UK airports.', href: '/services/airport-transfers' },
];

const galleryImages = [
  { src: '/images/fleet/afj-vehicles-parked.jpg', alt: 'AFJ fleet vehicles parked at Birmingham depot' },
  { src: '/images/fleet/afj-garage-with-vehicles.jpg', alt: 'AFJ garage and workshop in Birmingham' },
  { src: '/images/fleet/vehicle-in-depot-with-driver-and-guide.jpg', alt: 'Driver and guide with vehicle at AFJ Birmingham depot' },
  { src: '/images/fleet/patient-transport-crew.webp', alt: 'Patient transport crew at Birmingham base' },
  { src: '/images/misc/minibuses-parked-in-depot.webp', alt: 'Minibuses parked at AFJ Birmingham depot' },
  { src: '/images/fleet/ambulance.jpg', alt: 'AFJ ambulance at Birmingham headquarters' },
];

const badges = [
  { src: '/images/accreditations/CQCGood.png', alt: 'CQC Good Rating', name: 'CQC Good' },
  { src: '/images/accreditations/BCC.png', alt: 'Birmingham City Council Accredited', name: 'Birmingham City Council' },
  { src: '/images/accreditations/SCC.png', alt: 'Sandwell Council Accredited', name: 'Sandwell Council' },
  { src: '/images/accreditations/NWAS.jpg', alt: 'NHS Approved', name: 'NHS' },
  { src: '/images/accreditations/Finalist_Service-Excellence.jpg', alt: 'Service Excellence Award Finalist', name: 'Service Excellence' },
];

const faqItems = [
  {
    question: 'What transport services does AFJ provide in Birmingham?',
    answer: 'AFJ Limited offers a full range of transport services in Birmingham including SEND school transport, non-emergency patient transport (NEPTS), private minibus hire, executive minibus hire, airport transfers, fleet maintenance, vehicle conversions, and professional driver training. Our headquarters are based in Nechells, Birmingham.',
  },
  {
    question: 'Is AFJ accredited by Birmingham City Council?',
    answer: 'Yes, AFJ Limited is fully accredited by Birmingham City Council for school transport services. We have held council contracts for over 18 years and transport more than 700 students daily across Birmingham.',
  },
  {
    question: 'Which areas of Birmingham does AFJ cover?',
    answer: 'We cover all areas of Birmingham including Nechells, Aston, Erdington, Handsworth, Small Heath, Sparkbrook, Moseley, Kings Heath, Edgbaston, Selly Oak, Harborne, and surrounding areas. Our services also extend across the wider West Midlands.',
  },
  {
    question: 'Does AFJ offer patient transport in Birmingham?',
    answer: 'Yes, our patient transport service is CQC-rated "Good". We provide non-emergency transport for NHS trusts and hospitals across Birmingham, covering renal dialysis appointments, hospital discharges, outpatient visits, and long-distance transfers.',
  },
  {
    question: 'Where is AFJ based in Birmingham?',
    answer: 'Our headquarters and workshop are located at AFJ Business Center, 2-18 Forster Street, Nechells, Birmingham, B7 4JD. You can reach us on 0121 689 1000 or email info@afjltd.co.uk.',
  },
];

const otherAreas = [
  { name: 'Manchester', href: '/areas/manchester' },
  { name: 'Sandwell', href: '/areas/sandwell' },
  { name: 'Coventry', href: '/areas/coventry' },
  { name: 'West Midlands', href: '/areas/west-midlands' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited — Birmingham',
  description: 'Established in 2006, AFJ Limited provides specialist transport services in Birmingham including SEND school transport, non-emergency patient transport, fleet maintenance, vehicle conversions, and professional training.',
  foundingDate: '2006',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  url: 'https://www.afjltd.co.uk/areas/birmingham',
  address: {
    '@type': 'PostalAddress',
    streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
    addressLocality: 'Birmingham',
    addressRegion: 'West Midlands',
    postalCode: 'B7 4JD',
    addressCountry: 'GB',
  },
  areaServed: {
    '@type': 'City',
    name: 'Birmingham',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'SEND School Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Fleet Maintenance' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Vehicle Conversions' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Driver, ACA & PA Training' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire' } },
    ],
  },
};
---

<PageLayout
  title="Transport Services Birmingham"
  description="AFJ Limited — Birmingham's trusted transport provider since 2006. SEND school transport, patient transport, fleet maintenance, vehicle conversions, and private hire."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Transport Services in Birmingham" subtitle="Your trusted partner for safe, reliable transport solutions since 2006. Based in Nechells, serving all of Birmingham." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Birmingham's Trusted Transport Provider</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            AFJ Limited has been headquartered in Birmingham since 2006. From our base in Nechells, we provide the full spectrum of specialist transport services — from transporting over 700 students daily to delivering CQC-rated patient transport across the city.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            We are proud to be Birmingham City Council accredited, NHS approved, and the only UK Patient Transport Service provider that builds its own ambulances in-house. Our commitment to Birmingham's communities drives everything we do.
          </p>
          <a href="/contact" class="btn-primary">Get in Touch</a>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/fleet/afj-vehicles-parked.jpg" alt="AFJ fleet vehicles at Birmingham headquarters" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Services Grid -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Our Services in Birmingham</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <a href={service.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h3 class="text-afj-green font-bold text-lg mb-2 group-hover:text-afj-accent transition-colors">{service.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose AFJ in Birmingham -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ in Birmingham?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Birmingham Headquarters</h4>
            <p class="text-afj-secondary text-sm">Based in Nechells with our own workshop, training centre, and fleet depot.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Birmingham City Council Accredited</h4>
            <p class="text-afj-secondary text-sm">Trusted by Birmingham City Council for SEND school transport contracts.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport across Birmingham hospitals and clinics.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">In-House Everything</h4>
            <p class="text-afj-secondary text-sm">Fleet maintenance, ambulance conversions, and training all done on-site in Birmingham.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Same Pricing Year-Round</h4>
            <p class="text-afj-secondary text-sm">No bank holiday or seasonal surcharges. Fair, transparent pricing always.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">700+ Students Daily</h4>
            <p class="text-afj-secondary text-sm">Proven at scale — safely transporting hundreds of Birmingham students every day.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Gallery -->
  <FleetGallery images={galleryImages} heading="Our Birmingham Fleet & Facilities" />

  <!-- Accreditations -->
  <AccreditationBadges badges={badges} />

  <!-- FAQ -->
  <FAQ items={faqItems} heading="Birmingham Transport — Frequently Asked Questions" />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Get a Quote for Birmingham</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your transport requirements and we will get back to you within 24 hours.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <!-- Other Areas -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-6">We Also Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {otherAreas.map((area) => (
          <a href={area.href} class="bg-afj-light-white rounded-lg p-4 text-center hover:shadow-md transition-shadow block">
            <p class="text-afj-text font-medium">{area.name}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="Birmingham's Trusted Transport Partner"
    description="Contact AFJ Limited today for safe, reliable transport services across Birmingham and the West Midlands."
    variant="green"
  />
</PageLayout>
