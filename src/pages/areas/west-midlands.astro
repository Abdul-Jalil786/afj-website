---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import StatsCounter from '../../components/StatsCounter.astro';
import FleetGallery from '../../components/FleetGallery.astro';
import AccreditationBadges from '../../components/AccreditationBadges.astro';
import FAQ from '../../components/FAQ.astro';
import BookingForm from '../../components/BookingForm.astro';
import CTABanner from '../../components/CTABanner.astro';
import SocialSidebar from '../../components/SocialSidebar.astro';

const breadcrumbs = [
  { label: 'Areas', href: '/areas' },
  { label: 'West Midlands' },
];

const stats = [
  { value: 700, suffix: '+', label: 'Students Daily' },
  { value: 18, suffix: '+', label: 'Years Experience' },
  { value: 50, suffix: '+', label: 'Vehicles in Fleet' },
  { value: 200, suffix: '+', label: 'Vehicle Conversions' },
];

const services = [
  { title: 'Home to School Transport', description: 'SEND school transport across the West Midlands with council-accredited, DBS-checked drivers and wheelchair-accessible minibuses.', href: '/services/send-transport' },
  { title: 'Patient Transport', description: 'CQC-rated "Good" non-emergency patient transport serving NHS trusts and hospitals across the West Midlands region.', href: '/services/patient-transport' },
  { title: 'Fleet Maintenance', description: 'In-house workshop providing comprehensive fleet maintenance and repair services for businesses across the West Midlands.', href: '/services/fleet-maintenance' },
  { title: 'Vehicle Conversions', description: 'VOSA certified wheelchair-accessible, ambulance, and luxury minibus conversions. Over 200 compliant builds delivered.', href: '/services/vehicle-conversions' },
  { title: 'Driver, ACA & PA Training', description: 'QualSafe-approved training programmes for Driver CPC, Ambulance Care Assistants, and Passenger Assistants.', href: '/services/driver-training' },
  { title: 'Private Minibus Hire', description: 'Modern 16-seater minibuses for group travel, corporate events, and days out across the West Midlands.', href: '/services/private-hire' },
];

const galleryImages = [
  { src: '/images/fleet/afj-garage-with-vehicles.jpg', alt: 'AFJ garage and workshop in the West Midlands' },
  { src: '/images/fleet/afj-vehicles-parked.jpg', alt: 'AFJ fleet vehicles serving the West Midlands' },
  { src: '/images/misc/minibuses-parked-in-depot.webp', alt: 'Minibus fleet at AFJ depot' },
  { src: '/images/fleet/vehicle-in-depot-with-driver-and-guide.jpg', alt: 'Driver and guide with vehicle at depot' },
  { src: '/images/fleet/patient-transport-team-hands-together.jpg', alt: 'Patient transport team across the West Midlands' },
  { src: '/images/fleet/ambulance.jpg', alt: 'AFJ ambulance serving the West Midlands' },
];

const faqItems = [
  {
    question: 'What areas does AFJ cover in the West Midlands?',
    answer: 'AFJ Limited provides transport services across the entire West Midlands region including Birmingham, Sandwell, Wolverhampton, Solihull, Dudley, Walsall, and Coventry. Our headquarters are in Birmingham with services extending throughout the region.',
  },
  {
    question: 'What transport services are available across the West Midlands?',
    answer: 'We offer SEND school transport, non-emergency patient transport (CQC rated "Good"), fleet maintenance, VOSA certified vehicle conversions, QualSafe-approved driver training, private minibus hire, executive hire, and airport transfers across the West Midlands.',
  },
  {
    question: 'Is AFJ accredited by West Midlands councils?',
    answer: 'Yes, AFJ Limited holds accreditations from Birmingham City Council, Sandwell Council, and Wolverhampton City Council. We also hold NHS approval and a CQC "Good" rating for patient transport services.',
  },
  {
    question: 'Can AFJ provide transport for events across the West Midlands?',
    answer: 'Yes, our private and executive minibus hire services are available for events, corporate travel, school trips, and group outings anywhere in the West Midlands. We offer modern 16-seater minibuses with experienced drivers.',
  },
  {
    question: 'How do I get a quote for transport in the West Midlands?',
    answer: 'Contact us on 0121 689 1000, email info@afjltd.co.uk, or fill in the booking form on this page. We provide transparent, competitive pricing with no hidden charges or seasonal surcharges.',
  },
];

const otherAreas = [
  { name: 'Birmingham', href: '/areas/birmingham' },
  { name: 'Manchester', href: '/areas/manchester' },
  { name: 'Sandwell', href: '/areas/sandwell' },
  { name: 'Coventry', href: '/areas/coventry' },
];

const jsonLD = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  name: 'AFJ Limited — West Midlands',
  description: 'AFJ Limited provides specialist transport services across the West Midlands including SEND school transport, patient transport, fleet maintenance, vehicle conversions, and private hire.',
  telephone: '0121 689 1000',
  email: 'info@afjltd.co.uk',
  url: 'https://www.afjltd.co.uk/areas/west-midlands',
  address: {
    '@type': 'PostalAddress',
    streetAddress: 'AFJ Business Center, 2-18 Forster Street, Nechells',
    addressLocality: 'Birmingham',
    addressRegion: 'West Midlands',
    postalCode: 'B7 4JD',
    addressCountry: 'GB',
  },
  areaServed: {
    '@type': 'AdministrativeArea',
    name: 'West Midlands',
  },
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Transport Services',
    itemListElement: [
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'SEND School Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Non-Emergency Patient Transport' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Fleet Maintenance' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Vehicle Conversions' } },
      { '@type': 'Offer', itemOffered: { '@type': 'Service', name: 'Private Minibus Hire' } },
    ],
  },
};
---

<PageLayout
  title="Transport Services West Midlands"
  description="AFJ Limited — specialist transport across the West Midlands. SEND transport, patient transport, fleet maintenance, conversions, and private hire. Council and NHS accredited."
  breadcrumbs={breadcrumbs}
  jsonLD={jsonLD}
>
  <SocialSidebar />

  <Hero title="Transport Services in the West Midlands" subtitle="Comprehensive transport solutions across Birmingham, Sandwell, Wolverhampton, Solihull, and the wider West Midlands." />

  <!-- Introduction -->
  <section class="section-padding">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-center">
        <div>
          <h2 class="text-afj-green mb-4">Serving the West Midlands Since 2006</h2>
          <p class="text-afj-secondary mb-4 leading-relaxed">
            From our headquarters in Birmingham, AFJ Limited provides the full range of specialist transport services across the entire West Midlands region. Whether you need school transport in Sandwell, patient transport in Wolverhampton, or fleet maintenance in Solihull, we have you covered.
          </p>
          <p class="text-afj-secondary mb-6 leading-relaxed">
            With accreditations from multiple West Midlands councils, a CQC "Good" rating, and over 18 years of experience, AFJ is the region's trusted partner for safe, reliable, and compassionate transport.
          </p>
          <a href="/contact" class="btn-primary">Get in Touch</a>
        </div>
        <div class="flex items-center justify-center">
          <img src="/images/fleet/afj-garage-with-vehicles.jpg" alt="AFJ garage and fleet serving the West Midlands" class="rounded-lg w-full h-auto" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <StatsCounter stats={stats} />

  <!-- Services Grid -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide">
      <h2 class="text-afj-green text-center mb-8">Our Services Across the West Midlands</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <a href={service.href} class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow block group">
            <h3 class="text-afj-green font-bold text-lg mb-2 group-hover:text-afj-accent transition-colors">{service.title}</h3>
            <p class="text-afj-secondary text-sm leading-relaxed">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose AFJ -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-8">Why Choose AFJ in the West Midlands?</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Multi-Council Accredited</h4>
            <p class="text-afj-secondary text-sm">Accredited by Birmingham, Sandwell, and Wolverhampton councils for transport services.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">Regional Coverage</h4>
            <p class="text-afj-secondary text-sm">Services available across Birmingham, Sandwell, Wolverhampton, Solihull, Dudley, Walsall, and Coventry.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">In-House Capabilities</h4>
            <p class="text-afj-secondary text-sm">Workshop, training centre, and fleet depot all based in the West Midlands.</p>
          </div>
        </div>
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <div>
            <h4 class="font-bold text-afj-text mb-1">CQC Rated "Good"</h4>
            <p class="text-afj-secondary text-sm">Quality-assured patient transport across West Midlands hospitals and clinics.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fleet Gallery -->
  <FleetGallery images={galleryImages} heading="Our West Midlands Fleet & Facilities" />

  <!-- Accreditations — show all defaults -->
  <AccreditationBadges />

  <!-- FAQ -->
  <FAQ items={faqItems} heading="West Midlands Transport — Frequently Asked Questions" />

  <!-- Booking Form -->
  <section class="section-padding bg-afj-light-white">
    <div class="container-wide max-w-2xl">
      <h2 class="text-afj-green text-center mb-2">Get a Quote for the West Midlands</h2>
      <p class="text-afj-secondary text-center mb-8">Tell us about your transport requirements and we will get back to you within 24 hours.</p>
      <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
        <BookingForm />
      </div>
    </div>
  </section>

  <!-- Other Areas -->
  <section class="section-padding">
    <div class="container-wide max-w-4xl">
      <h2 class="text-afj-green text-center mb-6">We Also Serve</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {otherAreas.map((area) => (
          <a href={area.href} class="bg-afj-light-white rounded-lg p-4 text-center hover:shadow-md transition-shadow block">
            <p class="text-afj-text font-medium">{area.name}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <CTABanner
    heading="West Midlands Transport Solutions"
    description="Contact AFJ Limited today for reliable transport services across the entire West Midlands region."
    variant="green"
  />
</PageLayout>
