---
interface Props {
  href?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { href = '/contact', size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'text-sm px-4 py-2',
  md: 'text-base px-6 py-3',
  lg: 'text-lg px-8 py-4',
};
---

<a
  href={href}
  class={`inline-block bg-afj-red text-white font-bold rounded-lg hover:bg-red-700 transition-colors duration-200 ${sizeClasses[size]}`}
>
  Book Now!
</a>
