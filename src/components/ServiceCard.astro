---
interface Props {
  icon?: string;
  image?: string;
  title: string;
  description: string;
  href: string;
}

const { icon, image, title, description, href } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 p-6 group">
  <!-- Service Image -->
  {image && (
    <div class="aspect-video overflow-hidden rounded-lg -mx-6 -mt-6 mb-4">
      <img src={image} alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
    </div>
  )}

  <!-- Icon (shown when no image) -->
  {!image && (
    <div class="w-14 h-14 bg-afj-accent/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-afj-accent/20 transition-colors">
      {icon ? (
        <img src={icon} alt="" class="w-8 h-8" aria-hidden="true" />
      ) : (
        <svg class="w-8 h-8 text-afj-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      )}
    </div>
  )}

  <!-- Title -->
  <h3 class="text-afj-green font-bold text-lg mb-2">{title}</h3>

  <!-- Description -->
  <p class="text-afj-secondary text-sm leading-relaxed mb-4">{description}</p>

  <!-- Link -->
  <a
    href={href}
    class="inline-flex items-center gap-1 text-afj-accent font-semibold text-sm hover:text-afj-green transition-colors group-hover:gap-2"
  >
    Learn More
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>
