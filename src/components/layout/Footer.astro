---
const services = [
  { name: 'Home to School Transport', href: '/services/send-transport' },
  { name: 'Non-Emergency Patient Transport', href: '/services/patient-transport' },
  { name: 'Fleet Maintenance', href: '/services/fleet-maintenance' },
  { name: 'Private Minibus Hire', href: '/services/private-hire' },
  { name: 'Vehicle Conversions', href: '/services/vehicle-conversions' },
  { name: 'Driver, ACA & PA Training', href: '/services/driver-training' },
  { name: 'Executive Minibus Hire', href: '/services/executive-minibus' },
  { name: 'Airport Transfers', href: '/services/airport-transfers' },
];

const quickLinks = [
  { name: 'About Us', href: '/about' },
  { name: 'Our Fleet', href: '/fleet' },
  { name: 'Testimonials', href: '/testimonials' },
  { name: 'Book Transport', href: '/book-transport' },
  { name: 'Social Impact Report', href: '/social-impact' },
  { name: 'News', href: '/blog' },
  { name: 'Careers', href: '/careers' },
  { name: 'Contact', href: '/contact' },
  { name: 'FAQ', href: '/faq' },
  { name: 'Safeguarding Policy', href: '/safeguarding' },
  { name: 'Terms and Conditions', href: '/terms' },
  { name: 'Privacy Policy', href: '/privacy-policy' },
  { name: 'Carbon Reduction Plan', href: '/carbon-reduction-plan' },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-afj-dark-blue text-white">
  <!-- Main Footer -->
  <div class="container-wide section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <img src="/images/logo/logo.webp" alt="AFJ Limited" class="h-10 w-auto" width="40" height="40" />
          <span class="font-bold text-lg">AFJ Limited</span>
        </div>
        <p class="text-gray-300 text-sm mb-4 leading-relaxed">
          Your Partner in Safe, Reliable Transport Solutions. Established in 2006, providing
          specialist transport services across Birmingham, Manchester, and the wider UK.
        </p>
        <p class="text-afj-accent text-sm font-medium italic">
          Empowering Mobility, Ensuring Accessibility
        </p>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-bold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-gray-300 text-sm hover:text-afj-accent transition-colors">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 text-sm hover:text-afj-accent transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-bold text-lg mb-4">Contact Us</h3>
        <ul class="space-y-3 text-sm text-gray-300">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-afj-accent flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>AFJ Business Center,<br />2-18 Forster Street, Nechells,<br />Birmingham, B7 4JD</span>
          </li>
          <li>
            <a href="tel:01216891000" class="flex items-center gap-2 hover:text-afj-accent transition-colors">
              <svg class="w-5 h-5 text-afj-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              0121 689 1000
            </a>
          </li>
          <li>
            <a href="mailto:info@afjltd.co.uk" class="flex items-center gap-2 hover:text-afj-accent transition-colors">
              <svg class="w-5 h-5 text-afj-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              info@afjltd.co.uk
            </a>
          </li>
          <li>
            <a href="mailto:sales@afjltd.co.uk" class="flex items-center gap-2 hover:text-afj-accent transition-colors">
              <svg class="w-5 h-5 text-afj-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              sales@afjltd.co.uk
            </a>
          </li>
        </ul>

        <!-- Social Icons -->
        <div class="flex gap-3 mt-4">
          <a href="https://www.facebook.com/afjtravel/?locale=en_GB" aria-label="Facebook" class="w-9 h-9 bg-white/10 rounded-full flex items-center justify-center hover:bg-afj-accent transition-colors" target="_blank" rel="noopener noreferrer">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
          </a>
          <a href="https://uk.linkedin.com/company/afj-ltd" aria-label="LinkedIn" class="w-9 h-9 bg-white/10 rounded-full flex items-center justify-center hover:bg-afj-accent transition-colors" target="_blank" rel="noopener noreferrer">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10">
    <div class="container-wide py-4 flex flex-col sm:flex-row items-center justify-between gap-2 text-sm text-gray-300">
      <p>&copy; {currentYear} AFJ Limited. All rights reserved.</p>
      <div class="flex gap-4">
        <a href="/terms" class="hover:text-afj-accent transition-colors">Terms</a>
        <a href="/safeguarding" class="hover:text-afj-accent transition-colors">Safeguarding</a>
        <a href="/privacy-policy" class="hover:text-afj-accent transition-colors">Privacy Policy</a>
        <a href="/carbon-reduction-plan" class="hover:text-afj-accent transition-colors">Carbon Reduction Plan</a>
      </div>
    </div>
  </div>
</footer>
