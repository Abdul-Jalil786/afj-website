---
const services = [
  { name: 'Home to School Transport', href: '/services/send-transport' },
  { name: 'Non-Emergency Patient Transport', href: '/services/patient-transport' },
  { name: 'Fleet Maintenance', href: '/services/fleet-maintenance' },
  { name: 'Private Minibus Hire', href: '/services/private-hire' },
  { name: 'Vehicle Conversions', href: '/services/vehicle-conversions' },
  { name: 'Driver, ACA & PA Training', href: '/services/driver-training' },
  { name: 'Executive Minibus Hire', href: '/services/executive-minibus' },
  { name: 'Airport Transfers', href: '/services/airport-transfers' },
];

const quickLinks = [
  { name: 'About Us', href: '/about' },
  { name: 'Our Fleet', href: '/fleet' },
  { name: 'Testimonials', href: '/testimonials' },
  { name: 'Book Transport', href: '/book-transport' },
  { name: 'Social Impact Report', href: '/social-impact' },
  { name: 'News', href: '/blog' },
  { name: 'Careers', href: '/careers' },
  { name: 'Contact', href: '/contact' },
  { name: 'FAQ', href: '/faq' },
  { name: 'Safeguarding Policy', href: '/safeguarding' },
  { name: 'Terms and Conditions', href: '/terms' },
  { name: 'Privacy Policy', href: '/privacy-policy' },
  { name: 'Carbon Reduction Plan', href: '/carbon-reduction-plan' },
];

const currentYear = new Date().getFullYear();
---

<footer class="bg-afj-dark-blue text-white">
  <!-- Main Footer -->
  <div class="container-wide section-padding">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <img src="/images/logo/logo.webp" alt="AFJ Limited" class="h-10 w-auto" />
          <span class="font-bold text-lg">AFJ Limited</span>
        </div>
        <p class="text-gray-300 text-sm mb-4 leading-relaxed">
          Your Partner in Safe, Reliable Transport Solutions. Established in 2006, providing
          specialist transport services across Birmingham, Manchester, and the wider UK.
        </p>
        <p class="text-afj-accent text-sm font-medium italic">
          Empowering Mobility, Ensuring Accessibility
        </p>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-bold text-lg mb-4">Our Services</h3>
        <ul class="space-y-2">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-gray-300 text-sm hover:text-afj-accent transition-colors">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-bold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-300 text-sm hover:text-afj-accent transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="font-bold text-lg mb-4">Contact Us</h3>
        <ul class="space-y-3 text-sm text-gray-300">
