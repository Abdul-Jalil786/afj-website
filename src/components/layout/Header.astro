<!-- Main Header -->
<header id="main-header" class="bg-afj-primary sticky top-0 z-50 shadow-lg transition-shadow duration-300">
  <div class="container-wide">
    <div class="flex items-center justify-between py-3">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 flex-shrink-0">
        <img src="/images/logo/logo.webp" alt="AFJ Limited" class="h-12 w-auto" width="48" height="48" />
        <div class="hidden sm:block">
          <span class="text-white font-bold text-lg leading-none block">AFJ Limited</span>
          <span class="text-afj-accent text-xs">Safe, Reliable Transport</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1" aria-label="Main navigation">
        {navItems.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class:list={[
                'px-3 py-2 text-sm font-medium rounded-md transition-colors inline-flex items-center gap-1',
                currentPath === item.href || currentPath.startsWith(item.href + '/')
                  ? 'text-afj-accent'
                  : 'text-white hover:text-afj-accent',
              ]}
              {...(item.children ? { 'aria-haspopup': 'true', 'aria-expanded': 'false' } : {})}
            >
              {item.name}
              {item.children && (
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              )}
            </a>
            {item.children && (
              <div class="desktop-dropdown absolute left-0 top-full pt-2 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                <div class="bg-white rounded-lg shadow-xl border border-gray-100 py-2">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="block px-4 py-2 text-sm text-afj-text hover:bg-afj-light-white hover:text-afj-accent transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-afj-accent"
                    >
                      {child.name}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </nav>

      <!-- Right Side: Quote + Book Now + Mobile Toggle -->
      <div class="flex items-center gap-3">
        <a href="/quote" class="hidden lg:inline-block text-sm font-semibold text-white border border-white/30 px-4 py-2 rounded-lg hover:bg-white/10 transition-colors">
          Get a Quote
        </a>
        <a href="/contact" class="btn-red text-sm hidden sm:inline-block">
          Book Now!
        </a>
        <button
          id="mobile-menu-btn"
          class="lg:hidden text-white p-2"
          aria-label="Toggle menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg id="menu-open-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden hidden bg-afj-primary border-t border-white/10">
    <div class="container-wide py-4 space-y-1">
      {navItems.map((item) => (
        <div>
          <a
            href={item.href}
            class:list={[
              'block px-3 py-2 text-base font-medium rounded-md',
              currentPath === item.href ? 'text-afj-accent bg-white/5' : 'text-white hover:text-afj-accent hover:bg-white/5',
            ]}
          >
            {item.name}
          </a>
          {item.children && (
            <div class="ml-4 mt-1 space-y-1">
              {item.children.map((child) => (
                <a
                  href={child.href}
                  class="block px-3 py-1.5 text-sm text-gray-300 hover:text-afj-accent rounded-md"
                >
                  {child.name}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
      <div class="pt-3 border-t border-white/10 space-y-2">
        <a href="/quote" class="block text-center font-semibold text-white border border-white/30 py-3 rounded-lg hover:bg-white/10 transition-colors">Get a Quote</a>
        <a href="/contact" class="btn-red block text-center">Book Now!</a>
      </div>
      <div class="pt-2 space-y-1 text-sm text-gray-300">
        <a href="tel:01216891000" class="block px-3 py-1 hover:text-afj-accent">0121 689 1000</a>
        <a href="mailto:info@afjltd.co.uk" class="block px-3 py-1 hover:text-afj-accent">info@afjltd.co.uk</a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const openIcon = document.getElementById('menu-open-icon');
  const closeIcon = document.getElementById('menu-close-icon');

  if (menuBtn && mobileMenu && openIcon && closeIcon) {
    function closeMobileMenu() {
      mobileMenu.classList.add('hidden');
      openIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      menuBtn.setAttribute('aria-expanded', 'false');
    }

    menuBtn.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      openIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
      menuBtn.setAttribute('aria-expanded', String(!isOpen));
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
        closeMobileMenu();
        menuBtn.focus();
      }
    });
  }

  // Desktop dropdown keyboard support
  document.querySelectorAll('nav[aria-label="Main navigation"] .group').forEach((group) => {
    const trigger = group.querySelector('a[aria-haspopup]');
    const dropdown = group.querySelector('.desktop-dropdown');
    if (!trigger || !dropdown) return;

    function openDropdown() {
      dropdown.style.opacity = '1';
      dropdown.style.visibility = 'visible';
      trigger.setAttribute('aria-expanded', 'true');
    }

    function closeDropdown() {
      dropdown.style.opacity = '';
      dropdown.style.visibility = '';
      trigger.setAttribute('aria-expanded', 'false');
    }

    trigger.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ' || e.key === 'ArrowDown') {
        e.preventDefault();
        openDropdown();
        const firstLink = dropdown.querySelector('a');
        if (firstLink) firstLink.focus();
      }
    });

    dropdown.addEventListener('keydown', (e) => {
      const links = Array.from(dropdown.querySelectorAll('a'));
      const idx = links.indexOf(document.activeElement);

      if (e.key === 'ArrowDown') {
        e.preventDefault();
        if (idx < links.length - 1) links[idx + 1].focus();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        if (idx > 0) links[idx - 1].focus();
        else { closeDropdown(); trigger.focus(); }
      } else if (e.key === 'Escape') {
        closeDropdown();
        trigger.focus();
      }
    });

    group.addEventListener('focusout', (e) => {
      setTimeout(() => {
        if (!group.contains(document.activeElement)) closeDropdown();
      }, 0);
    });
  });
</script>
