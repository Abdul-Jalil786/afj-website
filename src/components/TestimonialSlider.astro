---
interface Testimonial {
  quote: string;
  name: string;
  rating?: number;
}

interface Props {
  testimonials?: Testimonial[];
}

const defaultTestimonials: Testimonial[] = [
  {
    quote: 'AFJ Travel helped me out of a hole, having forgotten to book the minibus for Cheltenham I contacted AFJ and they managed to arrange travel at a very competitive price. I needed to change some of the arrangements just before our travel date and nothing was too much trouble. On the day the driver was extremely accommodating and again nothing was too much trouble. We will be using them again next year.',
    name: 'Cheltenham Customer',
    rating: 5,
  },
  {
    quote: 'Booked AFJ Travel for my stag weekend, the booking and the reasonable price with AFJ were perfect for us. From Birmingham to Bournemouth, Second stop Bournemouth to Torquay. Our driver Khan for the weekend was an ultimate legend! Added humour to our journey from start to finish and fully embraced our madness, much appreciated. Would rebook with AFJ Travel anytime.',
    name: 'Stag Weekend Customer',
    rating: 5,
  },
  {
    quote: 'I used AFJ for a stag do to Wales and back and they were awesome. Our driver Steve was so good I would have paid a lot more to have kept him around for the whole weekend.',
    name: 'Wales Trip Customer',
    rating: 5,
  },
];

const testimonials = Astro.props.testimonials || defaultTestimonials;
---

<section class="section-padding bg-white">
  <div class="container-wide">
    <div class="text-center mb-10">
      <h2 class="text-afj-green mb-2">What Our Customers Say</h2>
      <p class="text-afj-secondary max-w-xl mx-auto">
        Trusted by councils, the NHS, and hundreds of satisfied customers across the UK.
      </p>
    </div>

    <div id="testimonial-slider" class="relative max-w-3xl mx-auto">
      {testimonials.map((testimonial, index) => (
        <div
          class:list={[
            'testimonial-slide text-center',
            index === 0 ? 'block' : 'hidden',
          ]}
          data-testimonial={index}
        >
          <!-- Stars -->
          <div class="flex items-center justify-center gap-1 mb-4" role="img" aria-label={`${testimonial.rating || 5} out of 5 stars`}>
            {Array.from({ length: testimonial.rating || 5 }).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="text-afj-text text-base md:text-lg leading-relaxed mb-4 italic">
            &ldquo;{testimonial.quote}&rdquo;
          </blockquote>

          <!-- Name -->
          <p class="font-semibold text-afj-green">{testimonial.name}</p>
        </div>
      ))}

      <!-- Dots Navigation -->
      <div class="flex items-center justify-center gap-2 mt-6">
        {testimonials.map((_, index) => (
          <button
            class:list={[
              'testimonial-dot w-3 h-3 rounded-full transition-colors',
              index === 0 ? 'bg-afj-accent' : 'bg-gray-300',
            ]}
            data-tdot={index}
            aria-label={`View testimonial ${index + 1}`}
          />
        ))}
      </div>
    </div>
  </div>
</section>

<script is:inline>
  (function () {
    var slides = document.querySelectorAll('.testimonial-slide');
    var dots = document.querySelectorAll('.testimonial-dot');
    if (!slides.length) return;

    var current = 0;
    var total = slides.length;
    var interval;

    function showSlide(index) {
      slides.forEach(function (s) { s.classList.add('hidden'); });
      dots.forEach(function (d) { d.classList.replace('bg-afj-accent', 'bg-gray-300'); });
      slides[index].classList.remove('hidden');
      if (dots[index]) dots[index].classList.replace('bg-gray-300', 'bg-afj-accent');
      current = index;
    }

    function next() {
      showSlide((current + 1) % total);
    }

    function startAutoPlay() {
      interval = setInterval(next, 6000);
    }

    function stopAutoPlay() {
      clearInterval(interval);
    }

    dots.forEach(function (dot, i) {
      dot.addEventListener('click', function () {
        stopAutoPlay();
        showSlide(i);
        startAutoPlay();
      });
    });

    var slider = document.getElementById('testimonial-slider');
    if (slider) {
      slider.addEventListener('mouseenter', stopAutoPlay);
      slider.addEventListener('mouseleave', startAutoPlay);
    }

    if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      startAutoPlay();
    }
  })();
</script>
