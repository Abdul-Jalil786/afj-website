---
interface Props {
  heading: string;
  description?: string;
  variant?: 'green' | 'navy';
}

const { heading, description, variant = 'green' } = Astro.props;

const bgClass = variant === 'green' ? 'bg-afj-accent' : 'bg-afj-dark-blue';
---

<section class={`${bgClass} text-white section-padding`}>
  <div class="container-wide text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-3">{heading}</h2>
    {description && (
      <p class="text-white/90 text-lg max-w-2xl mx-auto mb-6">{description}</p>
    )}
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a href="/contact" class="btn-red text-lg px-8 py-3">
        Book Now!
      </a>
      <a href="tel:01216891000" class="inline-flex items-center gap-2 text-white font-semibold text-lg hover:text-white/80 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        0121 689 1000
      </a>
    </div>
  </div>
</section>
