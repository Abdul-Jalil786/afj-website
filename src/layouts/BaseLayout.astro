---
import '../styles/global.css';
import ChatWidget from '../components/ui/ChatWidget.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'AFJ Limited â€” Your Partner in Safe, Reliable Transport Solutions' } = Astro.props;
const ga4Id = import.meta.env.GA4_MEASUREMENT_ID;
---

<!doctype html>
<html lang="en-GB">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/images/logo/afj-logo-final.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    {import.meta.env.PROD && ga4Id && (
      <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`}></script>
      <script is:inline define:vars={{ ga4Id }}>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', ga4Id);
      </script>
    )}
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="font-sans text-afj-text bg-white">
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-[100] focus:bg-afj-accent focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:font-semibold">
      Skip to main content
    </a>
    <slot />
    <!-- <ChatWidget /> disabled until build is finalised -->
  </body>
</html>
