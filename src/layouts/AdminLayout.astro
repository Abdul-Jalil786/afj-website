---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  userEmail?: string;
}

const { title, userEmail = '' } = Astro.props;

const adminNav = [
  { name: 'Dashboard', href: '/admin' },
  { name: 'Content', href: '/admin/content' },
  { name: 'Update Page', href: '/admin/pages' },
  { name: 'Pricing', href: '/admin/pricing' },
  { name: 'Conversions', href: '/admin/conversions' },
  { name: 'Intelligence', href: '/admin/pricing-intelligence' },
  { name: 'Compliance', href: '/admin/compliance' },
  { name: 'Monitoring', href: '/admin/monitoring' },
  { name: 'Testimonials', href: '/admin/testimonials' },
  { name: 'Approvals', href: '/admin/approvals' },
  { name: 'Notifications', href: '/admin/notifications' },
];

const currentPath = Astro.url.pathname;
---

<BaseLayout title={`${title} | AFJ Admin`}>
  <meta slot="head" name="robots" content="noindex, nofollow" />
  <!-- Admin Header -->
  <header class="bg-afj-dark-blue text-white shadow-lg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center gap-4">
          <a href="/admin" class="flex items-center gap-3">
            <img src="/images/logo/logo.webp" alt="AFJ Limited" class="h-10 w-auto" />
            <div>
              <span class="font-bold text-lg leading-none block">AFJ Limited</span>
              <span class="text-afj-accent text-xs">Admin Dashboard</span>
            </div>
          </a>
        </div>
        <div class="flex items-center gap-6">
          <nav class="hidden md:flex items-center gap-1" aria-label="Admin navigation">
            {adminNav.map((item) => (
              <a
                href={item.href}
                class:list={[
                  'px-3 py-2 text-sm font-medium rounded-md transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-afj-accent',
                  currentPath === item.href
                    ? 'bg-white/10 text-afj-accent'
                    : 'text-gray-300 hover:text-white hover:bg-white/5',
                ]}
              >
                {item.name}
              </a>
            ))}
          </nav>
          <div class="flex items-center gap-3 text-sm">
            <!-- Notification Bell -->
            <div class="relative" id="notif-bell-wrapper">
              <button
                id="notif-bell-btn"
                class="relative p-1.5 text-gray-300 hover:text-white transition-colors rounded-md focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-afj-accent"
                aria-label="Notifications"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span id="notif-badge" class="hidden absolute -top-0.5 -right-0.5 bg-red-500 text-white text-xs font-bold rounded-full min-w-[18px] h-[18px] flex items-center justify-center px-1 leading-none">0</span>
              </button>
              <!-- Dropdown -->
              <div id="notif-dropdown" class="hidden absolute right-0 top-full mt-2 w-80 bg-white rounded-lg shadow-xl border border-gray-200 z-50 overflow-hidden">
                <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
                  <h3 class="font-semibold text-gray-900 text-sm">Notifications</h3>
                  <a href="/admin/notifications" class="text-xs text-afj-accent hover:underline">View all</a>
                </div>
                <div id="notif-list" class="max-h-80 overflow-y-auto divide-y divide-gray-100">
                  <p class="px-4 py-6 text-gray-400 text-sm text-center">Loading...</p>
                </div>
              </div>
            </div>
            {userEmail && <span class="text-gray-400 hidden sm:inline">{userEmail}</span>}
            <a href="/" class="text-gray-400 hover:text-white text-sm">Exit Admin</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Mobile Admin Nav -->
    <nav class="md:hidden border-t border-white/10 px-4 py-2 flex gap-2 overflow-x-auto" aria-label="Admin navigation mobile">
      {adminNav.map((item) => (
        <a
          href={item.href}
          class:list={[
            'px-3 py-1.5 text-xs font-medium rounded-md whitespace-nowrap focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-afj-accent',
            currentPath === item.href
              ? 'bg-white/10 text-afj-accent'
              : 'text-gray-300 hover:text-white',
          ]}
        >
          {item.name}
        </a>
      ))}
    </nav>
  </header>

  <main id="main-content" class="min-h-screen bg-gray-50">
    <slot />
  </main>

  <!-- Minimal Admin Footer -->
  <footer class="bg-afj-dark-blue text-gray-400 text-sm py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      AFJ Limited Admin Dashboard &middot; <a href="/" class="hover:text-white">Back to website</a>
    </div>
  </footer>
  <script is:inline>
    (function() {
      var bellBtn = document.getElementById('notif-bell-btn');
      var dropdown = document.getElementById('notif-dropdown');
      var badge = document.getElementById('notif-badge');
      var list = document.getElementById('notif-list');
      if (!bellBtn || !dropdown) return;

      var TYPE_EMOJIS = {
        'blog-draft': '\u{1F4DD}',
        'pricing-recommendation': '\u{1F4B0}',
        'security-fix': '\u{1F6E1}\uFE0F',
        'seo-fix': '\u{1F50D}',
        'compliance-expiry': '\u{26A0}\uFE0F',
        'social-draft': '\u{1F4F1}',
        'conversion-milestone': '\u{1F4C8}',
        'agent-critical': '\u{1F6A8}',
      };

      var PRIORITY_DOTS = { high: 'bg-red-500', medium: 'bg-amber-500', low: 'bg-gray-400' };

      function timeAgo(dateStr) {
        var diff = Date.now() - new Date(dateStr).getTime();
        var mins = Math.floor(diff / 60000);
        if (mins < 1) return 'just now';
        if (mins < 60) return mins + 'm ago';
        var hrs = Math.floor(mins / 60);
        if (hrs < 24) return hrs + 'h ago';
        var days = Math.floor(hrs / 24);
        return days + 'd ago';
      }

      function renderNotifications(data) {
        var notifs = data.notifications || [];
        if (notifs.length === 0) {
          list.innerHTML = '<p class="px-4 py-6 text-gray-400 text-sm text-center">No notifications</p>';
          return;
        }
        list.innerHTML = notifs.slice(0, 10).map(function(n) {
          var emoji = TYPE_EMOJIS[n.type] || '';
          var dot = PRIORITY_DOTS[n.priority] || 'bg-gray-400';
          var unread = n.status === 'pending' ? 'bg-blue-50' : '';
          return '<a href="' + n.actionUrl + '" class="block px-4 py-3 hover:bg-gray-50 transition-colors ' + unread + '" data-notif-id="' + n.id + '">'
            + '<div class="flex items-start gap-2">'
            + '<span class="text-base flex-shrink-0 mt-0.5">' + emoji + '</span>'
            + '<div class="min-w-0 flex-1">'
            + '<p class="text-sm font-medium text-gray-900 truncate">' + n.title + '</p>'
            + '<p class="text-xs text-gray-500 mt-0.5">' + timeAgo(n.createdAt) + '</p>'
            + '</div>'
            + '<span class="w-2 h-2 rounded-full flex-shrink-0 mt-1.5 ' + dot + '"></span>'
            + '</div></a>';
        }).join('');
      }

      function updateBadge(count) {
        if (count > 0) {
          badge.textContent = count > 99 ? '99+' : String(count);
          badge.classList.remove('hidden');
        } else {
          badge.classList.add('hidden');
        }
      }

      function loadNotifications() {
        fetch('/api/admin/notifications?limit=10')
          .then(function(r) { return r.json(); })
          .then(function(data) {
            if (data.success) {
              renderNotifications(data.data);
              updateBadge(data.data.unreadCount || 0);
            }
          })
          .catch(function() {
            list.innerHTML = '<p class="px-4 py-6 text-gray-400 text-sm text-center">Failed to load</p>';
          });
      }

      bellBtn.addEventListener('click', function(e) {
        e.stopPropagation();
        var isOpen = !dropdown.classList.contains('hidden');
        dropdown.classList.toggle('hidden');
        bellBtn.setAttribute('aria-expanded', String(!isOpen));
        if (!isOpen) loadNotifications();
      });

      // Mark as read on click
      list.addEventListener('click', function(e) {
        var link = e.target.closest('[data-notif-id]');
        if (!link) return;
        var nid = link.getAttribute('data-notif-id');
        fetch('/api/admin/notifications', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ action: 'read', id: nid }),
        }).catch(function() {});
      });

      // Close dropdown on outside click
      document.addEventListener('click', function(e) {
        if (!document.getElementById('notif-bell-wrapper').contains(e.target)) {
          dropdown.classList.add('hidden');
          bellBtn.setAttribute('aria-expanded', 'false');
        }
      });

      // Initial badge load
      loadNotifications();
    })();
  </script>
</BaseLayout>
